<script>
  // åœ¨ç§»åŠ¨ç«¯å°†è¡¨æ ¼è½¬æ¢ä¸ºå¡ç‰‡å¼å¸ƒå±€
  if (window.innerWidth <= 768) {
    document.querySelectorAll('table').forEach(table => {
      const mobileTable = document.createElement('div');
      mobileTable.className = 'mobile-table space-y-4';
      
      const tbody = table.querySelector('tbody');
      if (!tbody) return;
      
      const rows = tbody.querySelectorAll('tr');
      const headers = table.querySelectorAll('th');
      
      rows.forEach(row => {
        const card = document.createElement('div');
        card.className = 'mobile-card bg-white rounded-lg p-4 shadow-sm';
        
        const cells = row.querySelectorAll('td');
        
        cells.forEach((cell, index) => {
          const row = document.createElement('div');
          row.className = 'mobile-row flex justify-between py-2 border-b last:border-b-0';
          
          const label = document.createElement('div');
          label.className = 'mobile-label font-medium text-gray-600';
          label.textContent = headers[index].textContent;
          
          const value = document.createElement('div');
          value.className = 'mobile-value text-gray-800';
          value.textContent = cell.textContent;
          
          row.appendChild(label);
          row.appendChild(value);
          card.appendChild(row);
        });
        
        mobileTable.appendChild(card);
      });
      
      const parent = table.parentNode;
      if (parent) {
        parent.insertBefore(mobileTable, table);
        table.style.display = 'none';
      }
    });
  }
</script>


