---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

// 集成分类数据
const categories = [
  { id: 'all', name: '所有集成', icon: 'M4 6h16M4 12h16M4 18h16', color: 'from-sky-400 to-sky-500' },
  { id: 'crm', name: 'CRM与销售', icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z', color: 'from-violet-400 to-violet-500' },
  { id: 'marketing', name: '市场营销', icon: 'M11 3.055A9.001 9.001 0 1020.945 13H11V3.055zM20.488 9H15V3.512A9.025 9.025 0 0120.488 9z', color: 'from-rose-400 to-rose-500' },
  { id: 'productivity', name: '效率工具', icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2', color: 'from-emerald-400 to-emerald-500' },
  { id: 'communication', name: '通讯协作', icon: 'M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z', color: 'from-indigo-400 to-indigo-500' },
  { id: 'developer', name: '开发者工具', icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4', color: 'from-amber-400 to-amber-500' }
];

// 集成卡片数据
const integrations = [
  {
    title: 'Slack',
    description: '直接在Slack频道中接收通知和更新，共享报告并与团队协作。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/slack/slack-original.svg',
    category: 'communication',
    features: ['实时通知', '团队协作', '报告共享'],
    color: 'from-indigo-400 to-indigo-500'
  },
  {
    title: 'Google Workspace',
    description: '与Google日历同步，从Google表格导入数据，并将报告导出到Google Drive。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg',
    category: 'productivity',
    features: ['日历同步', '数据导入', '报告导出'],
    color: 'from-emerald-400 to-emerald-500'
  },
  {
    title: 'Salesforce',
    description: '与Salesforce集成以同步客户数据，跟踪商机并简化销售流程。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/salesforce/salesforce-original.svg',
    category: 'crm',
    features: ['客户同步', '商机跟踪', '流程优化'],
    color: 'from-violet-400 to-violet-500'
  },
  {
    title: 'GitHub',
    description: '连接您的GitHub仓库以在艺创AI中跟踪问题、拉取请求和代码更改。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/github/github-original.svg',
    category: 'developer',
    features: ['问题跟踪', '代码集成', '版本控制'],
    color: 'from-amber-400 to-amber-500'
  },
  {
    title: 'Figma',
    description: '将艺创AI与Figma连接以同步设计并与团队协作。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/figma/figma-original.svg',
    category: 'productivity',
    features: ['设计同步', '团队协作', '原型共享'],
    color: 'from-rose-400 to-rose-500'
  },
  {
    title: 'Jira',
    description: '将Jira问题和项目与艺创AI同步，使开发团队和业务团队保持一致。',
    icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/jira/jira-original.svg',
    category: 'developer',
    features: ['问题管理', '项目跟踪', '团队协作'],
    color: 'from-sky-400 to-sky-500'
  }
];
---

<Layout title="集成与API - 艺创AI">
  <Header />
  <main>
    <HeroSection
      title="集成与API"
      highlightText="集成"
      description="将艺创AI与您喜爱的工具和服务连接，简化工作流程。"
      backgroundImage="/images/integrations-hero.jpg"
    />

    <!-- 集成分类导航 -->
    <section class="py-12 bg-white dark:bg-gray-900 border-b border-gray-100 dark:border-gray-800">
      <div class="container-custom">
        <div class="flex flex-wrap justify-center gap-4">
          {categories.map(category => (
            <a
              href={`#${category.id}`}
              class="group px-6 py-3 rounded-none bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 font-mono text-xs font-bold tracking-wider hover:border-blue-500 transition-all duration-300 flex items-center gap-2 border border-gray-200 dark:border-gray-800"
            >
              <svg class="w-4 h-4 transition-colors group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d={category.icon} />
              </svg>
              {category.name.toUpperCase()}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- 集成展示区 -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-black text-gray-900 dark:text-white mb-4 tracking-tighter">连接您喜爱的工具</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto font-mono">
            艺创AI集成了50多个流行工具和服务，帮助您创建无缝工作流程并最大化生产力。
          </p>
        </div>

        <!-- 集成卡片网格 -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {integrations.map((integration, index) => (
            <div
              class="bento-card bento-card-hover group p-8"
              transition:animate="slide"
              style={`transition-delay: ${index * 0.1}s`}
            >
              {/* 角标装饰 */}
              <div class="corner-marker corner-marker-tr opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <div class="corner-marker corner-marker-bl opacity-0 group-hover:opacity-100 transition-opacity"></div>

              <!-- 内容区域 -->
              <div class="relative z-10">
                <div class="flex items-center gap-4 mb-6">
                  <div class="w-16 h-16 rounded-none bg-gray-50 dark:bg-gray-800 border border-gray-100 dark:border-gray-700 flex items-center justify-center group-hover:border-blue-500 transition-colors duration-300">
                    <img src={integration.icon} alt={integration.title} class="w-10 h-10 object-contain grayscale group-hover:grayscale-0 transition-all duration-300" />
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 transition-colors duration-300 font-mono">
                    {integration.title}
                  </h3>
                </div>

                <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
                  {integration.description}
                </p>

                <div class="grid grid-cols-1 gap-3 border-t border-gray-100 dark:border-gray-800 pt-6">
                  {integration.features.map(feature => (
                    <div class="flex items-center text-xs font-mono font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                      <svg class="w-3 h-3 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span>{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-16">
          <a href="#" class="inline-flex items-center px-10 py-5 rounded-none bg-blue-600 text-white font-bold text-lg tracking-wider hover:bg-blue-700 transition-all duration-300 border border-transparent">
            查看所有集成
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- API部分 -->
    <section class="py-20 bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div>
            <span class="inline-block px-3 py-1 rounded-none border border-blue-200 dark:border-blue-800 bg-blue-50/50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 font-mono text-xs font-bold uppercase tracking-widest mb-4">
              DEVELOPER API
            </span>
            <h2 class="text-4xl font-black text-gray-900 dark:text-white mb-6 tracking-tighter">构建自定义集成</h2>
            <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 font-mono leading-relaxed">
              我们全面的API允许您构建自定义集成，扩展艺创AI的功能以满足特定需求。通过详细的文档和开发者支持，您可以在艺创AI和内部工具之间创建无缝连接。
            </p>
            <div class="space-y-4 mb-10">
              {[
                "完整的RESTful API接口",
                "OAuth 2.0安全认证",
                "实时事件通知Webhook",
                "主流编程语言SDK支持"
              ].map(item => (
                <div class="flex items-center group">
                  <div class="w-6 h-6 rounded-none border border-blue-200 dark:border-blue-800 flex items-center justify-center mr-3 group-hover:border-blue-500 transition-colors">
                    <svg class="w-3.5 h-3.5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <p class="text-lg text-gray-700 dark:text-gray-300 font-mono">{item}</p>
                </div>
              ))}
            </div>
            <div class="flex flex-col sm:flex-row gap-6">
              <a href="#" class="group relative inline-flex items-center justify-center px-10 py-5 rounded-none bg-blue-600 text-white font-bold text-lg tracking-wider hover:bg-blue-700 transition-all duration-300">
                查看API文档
                <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              <a href="#" class="group relative inline-flex items-center justify-center px-10 py-5 rounded-none border border-gray-200 dark:border-gray-800 text-gray-900 dark:text-white font-bold text-lg tracking-wider hover:border-blue-500 transition-all duration-300">
                访问开发者中心
                <div class="corner-marker corner-marker-tr opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="corner-marker corner-marker-bl opacity-0 group-hover:opacity-100 transition-opacity"></div>
              </a>
            </div>
          </div>
          <div class="bento-card p-1">
            <div class="bg-gray-950 text-white p-8 font-mono text-sm overflow-x-auto scrollbar-hide">
              <div class="flex items-center gap-1.5 mb-6 border-b border-gray-800 pb-4">
                <div class="w-2.5 h-2.5 rounded-none bg-red-500/50"></div>
                <div class="w-2.5 h-2.5 rounded-none bg-yellow-500/50"></div>
                <div class="w-2.5 h-2.5 rounded-none bg-green-500/50"></div>
                <span class="ml-2 text-gray-500 text-xs uppercase tracking-widest">terminal — bash</span>
              </div>
              <pre class="text-blue-400">
<span class="text-gray-500"># Example API Request</span>
<span class="text-pink-500">curl</span> -X <span class="text-yellow-500">GET</span> \
  https://api.cnai.art/v1/users \
  -H <span class="text-emerald-500">'Authorization: Bearer YOUR_API_KEY'</span> \
  -H <span class="text-emerald-500">'Content-Type: application/json'</span>
              </pre>
              <pre class="text-gray-400 mt-6">
<span class="text-gray-500"># Response</span>
{`{
  "users": [
    {
      "id": "usr_123456",
      "name": "John Doe",
      "email": "john@example.com",
      "created_at": "2023-06-15T10:30:00Z",
      "status": "active"
    }
  ],
  "meta": {
    "total": 2,
    "page": 1,
    "per_page": 10
  }
}`}
              </pre>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
