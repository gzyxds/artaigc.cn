---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import Download from '../components/sections/Download.astro'; // 导入Download组件
import Hero from '../components/home/Hero.astro'; // 导入Hero组件
---

<Layout 
  title="艺创AI-一站式AI解决方案"
  description="艺创AI提供全方位的AI服务，包括聊天、绘画、二维码、音乐、视频和证件照等多种功能，满足您的多样化需求。"
  keywords="AI服务,AI聊天,AI绘画,艺术二维码,AI音乐,AI视频,AI证件照"
>
  <Header />
  <Hero />
  <main>
    <!-- 顶部介绍部分 -->
    <section class="relative py-16 sm:py-24 lg:py-32">
      <div class="container-custom">
        <div class="text-center max-w-4xl mx-auto mb-16 sm:mb-20">
          <span class="inline-flex items-center px-4 py-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 rounded-full ring-1 ring-inset ring-blue-500/20 backdrop-blur transition-colors duration-300">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            智能服务
          </span>
          <h2 class="mt-4 text-4xl sm:text-5xl lg:text-6xl font-bold font-display tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400">我们的服务项目</h2>
          <p class="mt-6 text-lg sm:text-xl text-slate-600 dark:text-slate-300">探索艺创AI提供的全方位智能服务，满足您的各种创意和实用需求</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          {[
            {
              title: "AI 聊天",
              description: "支持多种问答模型，具备联网功能，能够识别图片、文件和视频等多种内容。",
              icon: "chat",
              color: "blue",
              features: ["多模型支持", "联网功能", "多媒体识别", "实时响应"]
            },
            {
              title: "AI 绘画",
              description: "对接最新的 Midjourney 模型，一键生成各种风格的图片和连续微调。",
              icon: "paint",
              color: "purple",
              features: ["风格多样", "连续微调", "高清输出", "快速生成"]
            },
            {
              title: "AI 艺术二维码",
              description: "支持多种艺术二维码风格，允许上传已有二维码，轻松将其艺术化，打造独特的视觉效果。",
              icon: "qr",
              color: "green",
              features: ["多种风格", "自定义上传", "艺术效果", "高清输出"]
            },
            {
              title: "AI 音乐",
              description: "支持多种音乐风格，轻松生成你想要的音乐，并支持灵活的长度扩展选项。",
              icon: "music",
              color: "yellow",
              features: ["风格多样", "长度可调", "音质优化", "快速生成"]
            },
            {
              title: "AI 视频",
              description: "对接最新的 Luma 模型，一键生成自定义的视频，并支持灵活的视频扩展选项。",
              icon: "video",
              color: "red",
              features: ["高清画质", "灵活编辑", "特效丰富", "快速渲染"]
            },
            {
              title: "AI 证件照",
              description: "对接最新的 AI 模型，一键生成自定义模板的证件照，并支持多种分格的证件照。",
              icon: "photo",
              color: "indigo",
              features: ["多种规格", "一键生成", "智能优化", "快速输出"]
            }
          ].map((service, index) => (
            <div 
              class="group relative bg-white/90 dark:bg-slate-800/90 backdrop-blur-sm rounded-2xl p-6 sm:p-8 border border-gray-100 dark:border-gray-700 shadow-xl shadow-blue-500/10 hover:shadow-2xl hover:shadow-blue-500/20 transition-all duration-500 hover:-translate-y-1"
              style={`transition-delay: ${index * 100}ms`}
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-blue-50/50 dark:from-blue-900/20 dark:to-blue-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
              
              <!-- 右上角装饰元素 -->
              <div class="absolute top-0 right-0">
                <div class="w-24 h-24 bg-gradient-to-br from-blue-100/50 to-transparent dark:from-blue-800/20 dark:to-transparent rounded-bl-[100px] group-hover:from-blue-200/70 dark:group-hover:from-blue-700/30 transition-colors duration-300"></div>
              </div>
              
              <div class="relative flex items-center space-x-5 mb-6">
                <div class="flex-shrink-0 w-16 h-16 sm:w-20 sm:h-20 rounded-xl bg-gradient-to-br from-blue-100 to-blue-100 dark:from-blue-900/50 dark:to-blue-900/50 p-3 sm:p-4 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
                  <svg class="w-full h-full text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {service.icon === "chat" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>}
                    {service.icon === "paint" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>}
                    {service.icon === "qr" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>}
                    {service.icon === "music" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>}
                    {service.icon === "video" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>}
                    {service.icon === "photo" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>}
                  </svg>
                </div>
                <h3 class="text-xl sm:text-2xl font-bold font-display text-slate-900 dark:text-white group-hover:text-blue-500 transition-colors duration-300">{service.title}</h3>
              </div>
              
              <p class="relative text-base sm:text-lg text-slate-600 dark:text-slate-300 mb-8">{service.description}</p>

              <div class="relative grid grid-cols-2 gap-4">
                {service.features.map(feature => (
                  <div class="flex items-center text-sm sm:text-base text-slate-700 dark:text-slate-300">
                    <svg class="flex-shrink-0 w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="truncate">{feature}</span>
                  </div>
                ))}
              </div>

              <div class="relative mt-8">
                <a href="#" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors duration-300">
                  免费开始
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
              
              <div class="absolute bottom-0 left-0 right-0 h-1 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 rounded-b-2xl"></div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!--数字分身 卡片内容开始 -->
    <section class="py-6 sm:py-10 md:py-12 bg-white dark:bg-gray-900">
      <div class="container-custom">
        <div class="mb-12 md:mb-24">
          <div class="grid gap-8 md:gap-12 items-center mb-8 md:mb-12 md:grid-cols-2">
            <div>
              <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
                数字分身
              </span>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">数字分身</h2>
              <p class="text-gray-600 dark:text-gray-300 mb-6">
                轻松创建你的AI虚拟数字人！只需上传一段视频，即可高品质、批量克隆你的形象！
              </p>
              <div class="flex flex-wrap gap-4 mb-6">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300">高度还原 100%</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300">情感丰富 100%</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700 dark:text-gray-300">语速自然</span>
                </div>
              </div>
              <!-- 修改按钮样式为蓝色 -->
              <div class="flex flex-wrap gap-4">
                <a href="/demo" target="_blank" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300 flex items-center justify-center">
                  查看演示
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
                  </svg>
                </a>
                <a href="/contact" class="px-6 py-3 bg-gray-100 text-gray-800 font-medium rounded-lg hover:bg-gray-200 transition-colors duration-300 flex items-center justify-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                  </svg>
                  购买授权
                </a>
              </div>
            </div>
            <!-- 右侧展示图片区域 -->
            <div class="rounded-lg">
              <!-- 数字人形象展示图片 -->
              <img src="/assets/img/human1.png" alt="AI数字人" class="w-full h-auto" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--声音克隆卡片 -->   
    <div class="container-custom mb-24">
      <div class="grid md:grid-cols-2 gap-12 items-center mb-12">
        <div class="order-2 md:order-1 rounded-lg">
          <img src="/assets/img/work2.png" alt="知识库训练" class="w-full h-auto" />
        </div>
        <div class="order-1 md:order-2">
          <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
            知识库训练
          </span>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">知识库数据训练</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            独立训练机器人数据，支持问答型、文档型的知识库，知识库共享。通过数据训练，用户在前台通过聊天对话模式快速查阅和各种内部资料和文档。使用机器学习技术，让系统自动学习并优化知识库中的知识，提高知识库的准确性和智能性。
          </p>
          <div class="flex flex-wrap gap-4 mb-6">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300">智能训练</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300">数据共享</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300">低成本</span>
            </div>
          </div>
          <div class="flex flex-wrap gap-4">
            <a href="/demo" target="_blank" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-300 flex items-center justify-center">
              获取演示
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"/>
              </svg>
            </a>
            <a href="/contact" class="px-6 py-3 bg-gray-100 text-gray-800 font-medium rounded-lg hover:bg-gray-200 transition-colors duration-300 flex items-center justify-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
              购买授权
