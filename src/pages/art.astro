          `;

          contentContainer.innerHTML = template;
        }
      
      tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            // 移除所有标签的激活状态
          tabs.forEach((t) => {
              t.setAttribute('aria-selected', 'false');
              t.classList.remove('bg-blue-600', 'text-white', 'shadow-lg', 'shadow-blue-500/25');
              t.classList.add('bg-white', 'text-gray-600', 'hover:bg-gray-50', 'hover:text-gray-900');
            });
            
            // 添加当前标签的激活状态
            tab.setAttribute('aria-selected', 'true');
            tab.classList.remove('bg-white', 'text-gray-600', 'hover:bg-gray-50', 'hover:text-gray-900');
            tab.classList.add('bg-blue-600', 'text-white', 'shadow-lg', 'shadow-blue-500/25');

            // 更新内容
            const tabId = tab.getAttribute('data-tab');
            if (tabId) updateContent(tabId);
          });
        });

        // 初始化显示第一个标签的内容
        const firstTab = tabs[0];
        if (firstTab) {
          const tabId = firstTab.getAttribute('data-tab');
          if (tabId) updateContent(tabId);
        }
    });
  </script>

