      <!-- 内容容器 -->
      <div class="container-custom relative z-10">
        <!-- 标题区域 -->
        <div class="text-center mb-16 fade-in">
          <h1 class="h1 mb-6 text-center">产品演示中心</h1>
          <p class="text-lg text-neutral-600 dark:text-neutral-400 text-center max-w-3xl mx-auto mb-8 leading-relaxed">
            选择产品类型体验我们的产品
            <span class="inline-flex items-center px-2 py-0.5 mx-1 text-xs font-medium bg-surface border border-border text-neutral-600 dark:text-neutral-300 rounded-sm">
              PHP & Java
            </span>
            功能略有不同
          </p>
        </div>

        <!-- 演示系统卡片列表 -->
        <div class="bento-grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {demoSystems.map((system, index) => (
            <div class="bento-card group flex flex-col h-full hover:border-brand-500/30 bg-white dark:bg-gray-900 transition-colors duration-300" style={`--index: ${index}`}>
              <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none opacity-50 group-hover:opacity-100 transition-opacity"></div>
              <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none opacity-50 group-hover:opacity-100 transition-opacity"></div>

              <!-- 商品图片区域 - 16:9比例 -->
              <div class="relative border-b border-border aspect-video bg-white dark:bg-gray-900 group-hover:border-border/50 transition-colors">
                <div class="relative w-full h-full overflow-hidden p-1">
                  <img
                    src={system.headerImage}
                    alt={`${system.title} Header Image`}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-black/5 group-hover:bg-transparent transition-colors duration-300"></div>
                </div>
                <!-- 类型标签 -->
                <div class="absolute top-0 right-0">
                  <span class="inline-block bg-brand-600 text-white text-xs font-semibold px-3 py-1.5 shadow-sm">
                    {system.title.includes('PHP') ? 'PHP' : system.title.includes('Java') ? 'Java' : 'DEMO'}
                  </span>
                </div>
              </div>

              <!-- 商品信息区域 -->
              <div class="flex-1 flex flex-col p-6">
                <h2 class="text-lg font-semibold text-neutral-900 dark:text-white mb-6 group-hover:text-brand-600 transition-colors duration-300 line-clamp-2 leading-snug">
                  {system.title}
                </h2>

                <div class="mt-auto space-y-2">
                  {system.platforms.map((platform, platformIndex) => (
                    <a
                      href={platform.url}
                      target="_blank"
                      class="flex items-center justify-between p-3 rounded-sm border border-border bg-background hover:border-brand-500/30 hover:bg-neutral-50 dark:hover:bg-neutral-800/50 transition-all duration-300 group/item"
                    >
                      <div class="flex items-center gap-3 overflow-hidden">
                        <i class="material-icons text-neutral-400 group-hover/item:text-brand-600 text-[18px] transition-colors">{platform.icon}</i>
                        <div class="flex flex-col min-w-0">
                          <span class="text-sm font-medium text-neutral-700 dark:text-neutral-300 truncate group-hover/item:text-brand-600 transition-colors">{platform.title}</span>
                          {(platform.account !== '自行注册' && platform.account !== '联系客服' && platform.account !== '占不提供') && (
                             <span class="text-[10px] text-neutral-400 truncate" title={`账号: ${platform.account} / 密码: ${platform.password}`}>
                                {platform.account} / {platform.password}
                             </span>
                          )}
                        </div>
                      </div>

                      <i class="material-icons text-neutral-300 group-hover/item:text-brand-600 text-sm transform group-hover/item:translate-x-1 transition-all">arrow_forward</i>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <!-- 样式定义 -->
  <style>
    /* 动画定义 */
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @keyframes scaleIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }

    /* 动画应用 */
    .fade-in { animation: fadeIn 0.8s ease-out forwards; }

    .bento-card {
      animation: scaleIn 0.5s ease-out forwards;
      animation-delay: calc(0.1s * var(--index, 0));
      opacity: 0;
    }

    /* 确保文本截断生效 */
    .line-clamp-2 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }
  </style>

  <!-- 页面组件 -->
  <Structure />
