        <div class="absolute -bottom-16 sm:-bottom-24 left-1/4 sm:left-1/3 w-64 sm:w-80 md:w-96 h-64 sm:h-80 md:h-96 bg-gradient-to-br from-cyan-300 to-blue-300 rounded-full filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
      </div>

      <!-- 内容容器 -->
      <div class="container-custom relative z-10 px-4 sm:px-6 md:px-8 mx-auto">
        <!-- 标题区域 -->
        <div class="text-center mb-8 sm:mb-10 md:mb-12 lg:mb-16 fade-in">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-gray-800 dark:text-white mb-4 sm:mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">产品演示中心</h1>
          <p class="text-base sm:text-lg text-center text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 leading-relaxed max-w-3xl mx-auto fade-in-up">
            选择产品类型、体验我们的在线演示系统 注：PHP和Java功能略有不同
          </p>
        </div>

        <!-- 演示系统卡片列表 -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
          {demoSystems.map((system, index) => (
            <div class="demo-card group relative rounded-xl p-3 sm:p-4 md:p-5 border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 hover:shadow-lg transition-all duration-200 flex flex-col h-full overflow-hidden" style={`--index: ${index}`}>
              <!-- 商品图片区域 - 16:9比例 -->
