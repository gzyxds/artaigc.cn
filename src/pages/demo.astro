<Layout title={title}>
  <Header />
  <Carousel />

  <!-- 主要内容区域 -->
  <main class="min-h-screen bg-gradient-to-br from-blue-50/90 via-white to-blue-100/90 dark:from-gray-900/95 dark:via-gray-800/95 dark:to-gray-700/95">
    <section class="py-10 sm:py-14 md:py-16 lg:py-20 relative overflow-hidden">
      <!-- 背景装饰元素 -->
