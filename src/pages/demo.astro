          {demoSystems.map((system, index) => (
            <div class="demo-card group relative rounded-none p-0 border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 hover:border-blue-600 dark:hover:border-blue-500 transition-colors duration-300 flex flex-col h-full" style={`--index: ${index}`}>
              <!-- 装饰角标 -->
              <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-blue-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute bottom-0 left-0 w-3 h-3 border-b border-l border-blue-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

              <!-- 商品图片区域 - 16:9比例 -->
              <div class="relative border-b border-gray-100 dark:border-gray-800">
                <div class="relative overflow-hidden rounded-none bg-gray-100 dark:bg-gray-800" style="aspect-ratio: 16/9;">
                  <img
                    src={system.headerImage}
                    alt={`${system.title} Header Image`}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-black/5 group-hover:bg-transparent transition-colors duration-300"></div>
                  <div class="absolute top-0 right-0 bg-blue-600 text-white text-xs px-2 py-1 font-mono rounded-none">
                    {system.title.includes('PHP') ? 'PHP' : system.title.includes('Java') ? 'Java' : 'DEMO'}
                  </div>
                </div>
              </div>

              <!-- 商品信息区域 -->
              <div class="flex-1 flex flex-col p-4 sm:p-5">
                <h2 class="text-sm sm:text-base md:text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200 line-clamp-2 leading-snug mb-4">
                  {system.title}
                </h2>

                <ul class="grid grid-cols-1 gap-2 sm:gap-3 mt-auto">
                  {system.platforms.map((platform, platformIndex) => (
                    <li class="platform-item" style={`--platform-index: ${platformIndex}`}>
                      <a
                        href={platform.url}
                        target="_blank"
                        class="block p-3 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 hover:bg-white dark:hover:bg-gray-800 transition-all duration-200 group/item"
                      >
                        <div class="flex items-center justify-between mb-2">
                          <div class="flex items-center">
                            <span class="font-medium text-xs sm:text-sm text-gray-700 dark:text-gray-200 truncate mr-2">{platform.title}</span>
                          </div>
                          <span class="text-[10px] px-1.5 py-0.5 border border-blue-200 dark:border-blue-800 text-blue-600 dark:text-blue-400 font-mono flex items-center group-hover/item:bg-blue-600 group-hover/item:text-white group-hover/item:border-blue-600 transition-colors">
                            VISIT
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                          </span>
                        </div>

                        <div class="pt-2 border-t border-gray-200 dark:border-gray-700/50 grid grid-cols-2 gap-2">
                          <div class="flex flex-col">
                            <span class="text-[10px] text-gray-400 uppercase font-mono mb-0.5">Account</span>
                            <span class="text-xs font-mono text-gray-600 dark:text-gray-300 truncate select-all" title={platform.account}>{platform.account}</span>
                          </div>
                          <div class="flex flex-col">
                            <span class="text-[10px] text-gray-400 uppercase font-mono mb-0.5">Password</span>
                            <span class="text-xs font-mono text-gray-600 dark:text-gray-300 truncate select-all" title={platform.password}>{platform.password}</span>
                          </div>
                        </div>
