---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

// 定义团队成员数据
const teamMembers = [
  {
    name: "张明",
    position: "创始人兼CEO",
    bio: "拥有15年软件开发经验，曾在多家知名科技公司担任技术领导职位。张明创立艺创AI的愿景是简化企业级应用开发流程。",
    image: "/assets/partners.png"
  },
  {
    name: "李华",
    position: "技术总监",
    bio: "微软认证架构师，专注于生态系统超过10年。李华领导着我们的核心开发团队，确保产品的技术卓越性。",
    image: "/assets/partners.png"
  },
  {
    name: "王芳",
    position: "产品经理",
    bio: "拥有丰富的用户体验设计背景，王芳负责确保我们的产品不仅功能强大，而且直观易用。",
    image: "/assets/partners.png"
  },
  {
    name: "刘伟",
    position: "客户成功主管",
    bio: "刘伟与客户紧密合作，确保他们充分利用我们的解决方案并实现业务目标。",
    image: "/assets/partners.png"
  }
];

// 定义公司核心价值观
const values = [
  {
    title: "简洁至上",
    description: "我们相信最好的解决方案应该简单明了。我们的框架设计遵循最小复杂性原则，让开发者能够专注于业务逻辑而非技术细节。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
    </svg>`
  },
  {
    title: "开源共享",
    description: "我们坚信知识共享的力量。通过开源我们的核心技术，我们不仅提高了代码质量，还创建了一个充满活力的社区，共同推动技术进步。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>`
  },
  {
    title: "持续创新",
    description: "技术永不停止发展，我们也是如此。我们不断探索新技术和方法，将最新的AI和云技术整合到我们的框架中，确保客户始终处于技术前沿。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>`
  }
];

// 定义公司发展历程
const history = [
  {
    year: "2020",
    title: "创立初期",
    description: "艺创AI在几位资深开发者的共同愿景下成立，致力于解决企业应用开发中的权限和工作流难题。",
    image: "/assets/partners.png"
  },
  {
    year: "2021",
    title: "核心框架发布",
    description: "经过一年的密集开发，我们发布了第一个稳定版本，获得了开发社区的积极反馈和初步采用。",
    image: "/assets/partners.png"
  },
  {
    year: "2022",
    title: "社区壮大",
    description: "GitHub星标突破5000，贡献者超过100名。我们举办了首届线上开发者大会，吸引了超过2000名参与者。",
    image: "/assets/partners.png"
  },
  {
    year: "2023",
    title: "企业级突破",
    description: "推出企业版解决方案，并与多家行业领先企业建立合作伙伴关系。用户群体扩展到金融、医疗和政府等关键行业。",
    image: "/assets/partners.png"
  }
];

// 定义客户案例
const clientCases = [
  {
    name: "OpenAI",
    industry: "OpenAI",
    description: "OpenAI 使用我们的框架重构内部审批系统，将流程处理时间减少60%，同时提高了系统安全性。",
    logo: "/assets/DeepSeek.svg"
  },
  {
    name: "DeepSeek",
    industry: "DeepSeek",
    description: "DeepSeek 使用我们的框架重构内部审批系统，将流程处理时间减少60%，同时提高了系统安全性。",
    logo: "/assets/DeepSeek.svg"
  },
  {
    name: "Tencent",
    industry: "Tencent",
    description: "Tencent 使用我们的框架构建了游戏内AI助手，提高了用户体验。",
    logo: "/assets/DeepSeek.svg"
  }
];
---

<Layout title="关于我们 - 艺创AI">
  <Header />
  <main class="overflow-hidden">
    <!-- 英雄区域 -->
    <section class="relative bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-20">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="max-w-2xl">
            <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
              关于我们
            </span>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
              艺创<span class="text-primary-600 dark:text-primary-400">AI</span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
              一站式 ( 渐进式 ) AIGC 系统，提供面向个人用户 (ToC)、开发者 (ToD) 和企业 (ToB) 的全面AI解决方案
            </p>
            <div class="flex flex-wrap gap-4">
              <a href="/contact" class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors duration-300">
                联系我们
              </a>
              <a href="/docs" class="px-6 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-300">
                查看文档
              </a>
            </div>
          </div>
          <div class="relative">
            <div class="relative z-10 bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-6 md:p-8 overflow-hidden">
              <div class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-primary-500/10 rounded-full"></div>
              <div class="absolute bottom-0 left-0 -mb-10 -ml-10 w-40 h-40 bg-secondary-500/10 rounded-full"></div>
              <div class="relative">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">我们的使命</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-6">
                  "通过技术创新和开源协作，为开发者提供最简洁、最高效的权限和工作流解决方案，赋能企业数字化转型。"
                </p>
                <div class="flex items-center space-x-4">
                  <div class="flex -space-x-2">
                    <div class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 bg-primary-100 dark:bg-primary-800 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 dark:text-primary-300" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 bg-secondary-100 dark:bg-secondary-800 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary-600 dark:text-secondary-300" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                      </svg>
                    </div>
                    <div class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-800 bg-primary-50 dark:bg-primary-900 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-500 dark:text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a3 3 0 00-3-3h-2a3 3 0 00-3 3v1h8z" />
                      </svg>
                    </div>
                  </div>
                  <span class="text-sm text-gray-500 dark:text-gray-400">由充满激情的团队打造</span>
                </div>
              </div>
            </div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full bg-gradient-to-br from-primary-500/20 to-secondary-500/20 rounded-full blur-3xl -z-10"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- 我们的故事 -->
    <section class="py-20 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
            我们的故事
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">从一个想法到行业解决方案</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            艺创AI的故事是关于激情、坚持和创新的旅程，我们正在重新定义企业应用开发的方式。
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div class="order-2 md:order-1">
            <div class="space-y-6">
              <div>
                <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">起源</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  艺创AI源于几位资深开发者的共同痛点：企业应用中权限管理和工作流程实现总是过于复杂且重复开发。我们决定创建一个框架，让这些常见需求变得简单而强大。
                </p>
              </div>
              <div>
                <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">挑战与突破</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  在开发过程中，我们面临了如何在保持简洁的同时提供足够灵活性的挑战。通过不断迭代和社区反馈，我们找到了平衡点，创造了既简单又强大的解决方案。
                </p>
              </div>
              <div>
                <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">今天的艺创AI</h3>
                <p class="text-gray-600 dark:text-gray-300">
                  如今，我们的框架已被数千家企业采用，从初创公司到大型企业。我们的开源社区蓬勃发展，每天都有新的贡献者加入我们的行列，共同推动产品不断进步。
                </p>
              </div>
            </div>
          </div>
          <div class="order-1 md:order-2">
            <div class="relative">
              <div class="aspect-video bg-gray-100 dark:bg-gray-700 rounded-2xl overflow-hidden shadow-xl">
                <img src="/assets/partners.png" alt="合作伙伴" class="w-full h-full object-cover">
              </div>
              <div class="absolute -bottom-6 -right-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 max-w-xs">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <svg class="w-10 h-10 text-primary-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900 dark:text-white">5000+ GitHub 星标</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">社区认可的开源项目</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 核心价值观 -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            核心价值观
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">指导我们前进的原则</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            这些价值观不仅仅是挂在墙上的标语，而是融入我们日常工作和决策的指导原则。
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {values.map((value) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 p-8">
              <div class="rounded-full bg-primary-100 dark:bg-primary-900 p-4 w-16 h-16 flex items-center justify-center mb-6">
                <Fragment set:html={value.icon} />
              </div>
              <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">{value.title}</h3>
              <p class="text-gray-600 dark:text-gray-300">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 发展历程 -->
    <section class="py-20 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
            发展历程
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">我们的成长足迹</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            回顾过去，展望未来，每一步都是我们共同努力的见证。
          </p>
        </div>

        <div class="relative">
          <!-- 时间线 -->
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-primary-200 dark:bg-primary-800"></div>
          
          <div class="space-y-16">
            {history.map((item, index) => (
              <div class={`relative flex flex-col md:flex-row ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
                <div class="md:w-1/2 p-4">
                  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden h-full">
                    <img src={item.image} alt={item.title} class="w-full h-48 object-cover">
                    <div class="p-6">
                      <div class="inline-block px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 rounded-full text-sm font-medium mb-2">{item.year}</div>
                      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{item.title}</h3>
                      <p class="text-gray-600 dark:text-gray-300">{item.description}</p>
                    </div>
                  </div>
                </div>
                <div class="hidden md:block md:w-1/2"></div>
                <div class="absolute left-1/2 top-1/2 md:top-8 transform -translate-x-1/2 md:-translate-y-0 w-8 h-8 bg-primary-500 rounded-full flex items-center justify-center z-10">
                  <span class="text-white font-bold">{index + 1}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- 团队介绍 -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            核心团队
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">遇见背后的团队</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            我们的团队由充满激情的技术专家和行业领导者组成，他们共同致力于实现我们的使命。
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {teamMembers.map((member) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden group">
              <div class="relative">
                <img src={member.image} alt={member.name} class="w-full h-64 object-cover object-center group-hover:scale-105 transition-transform duration-300">
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end">
                  <div class="p-4 text-white">
                    <p class="text-sm">{member.bio}</p>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{member.name}</h3>
                <p class="text-primary-600 dark:text-primary-400">{member.position}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 客户案例 -->
    <section class="py-20 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
            成功案例
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">他们信任我们</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            看看这些组织如何使用艺创AI解决方案实现业务转型。
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {clientCases.map((client) => (
            <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
              <div class="h-16 mb-6 flex items-center">
                <img src={client.logo} alt={client.name} class="h-12">
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{client.name}</h3>
              <p class="text-primary-600 dark:text-primary-400 text-sm mb-4">{client.industry}</p>
              <p class="text-gray-600 dark:text-gray-300">{client.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 加入我们 -->
    <section class="py-24 bg-gray-50 dark:bg-gray-900">
      <div class="container-custom">
        <div class="max-w-5xl mx-auto text-center mb-12">
          <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
            携手共进
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">成为我们故事的一部分</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            无论您是想加入我们的团队、成为合作伙伴还是为开源项目做贡献，我们都欢迎您的参与。
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transform hover:-translate-y-2 transition-all duration-300">
