---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import HeroSection from '../components/home/HeroSection.astro';

// 定义团队成员数据
const teamMembers = [
  {
    name: "张明",
    position: "创始人兼CEO",
    bio: "拥有15年软件开发经验，曾在多家知名科技公司担任技术领导职位。张明创立艺创AI的愿景是简化企业级应用开发流程。",
    image: "/assets/partners.png"
  },
  {
    name: "李华",
    position: "技术总监",
    bio: "微软认证架构师，专注于生态系统超过10年。李华领导着我们的核心开发团队，确保产品的技术卓越性。",
    image: "/assets/partners.png"
  },
  {
    name: "王芳",
    position: "产品经理",
    bio: "拥有丰富的用户体验设计背景，王芳负责确保我们的产品不仅功能强大，而且直观易用。",
    image: "/assets/partners.png"
  },
  {
    name: "刘伟",
    position: "客户成功主管",
    bio: "刘伟与客户紧密合作，确保他们充分利用我们的解决方案并实现业务目标。",
    image: "/assets/partners.png"
  }
];

// 定义公司核心价值观
const values = [
  {
    title: "简洁至上",
    description: "我们相信最好的解决方案应该简单明了。我们的框架设计遵循最小复杂性原则，让开发者能够专注于业务逻辑而非技术细节。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
    </svg>`
  },
  {
    title: "开源共享",
    description: "我们坚信知识共享的力量。通过开源我们的核心技术，我们不仅提高了代码质量，还创建了一个充满活力的社区，共同推动技术进步。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>`
  },
  {
    title: "持续创新",
    description: "技术永不停止发展，我们也是如此。我们不断探索新技术和方法，将最新的AI和云技术整合到我们的框架中，确保客户始终处于技术前沿。",
    icon: `<svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>`
  }
];

// 定义公司发展历程
const history = [
  {
    year: "2020",
    title: "创立初期",
    description: "艺创AI在几位资深开发者的共同愿景下成立，致力于解决企业应用开发中的权限和工作流难题。",
    image: "/assets/partners.png"
  },
  {
    year: "2021",
    title: "核心框架发布",
    description: "经过一年的密集开发，我们发布了第一个稳定版本，获得了开发社区的积极反馈和初步采用。",
    image: "/assets/partners.png"
  },
  {
    year: "2022",
    title: "社区壮大",
    description: "GitHub星标突破5000，贡献者超过100名。我们举办了首届线上开发者大会，吸引了超过2000名参与者。",
    image: "/assets/partners.png"
  },
  {
    year: "2023",
    title: "企业级突破",
    description: "推出企业版解决方案，并与多家行业领先企业建立合作伙伴关系。用户群体扩展到金融、医疗和政府等关键行业。",
    image: "/assets/partners.png"
  }
];

// 定义客户案例
const clientCases = [
  {
    name: "OpenAI",
    industry: "OpenAI",
    description: "OpenAI 使用我们的框架重构内部审批系统，将流程处理时间减少60%，同时提高了系统安全性。",
    logo: "/assets/DeepSeek.svg"
  },
  {
    name: "DeepSeek",
    industry: "DeepSeek",
    description: "DeepSeek 使用我们的框架重构内部审批系统，将流程处理时间减少60%，同时提高了系统安全性。",
    logo: "/assets/DeepSeek.svg"
  },
  {
    name: "Tencent",
    industry: "Tencent",
    description: "Tencent 使用我们的框架构建了游戏内AI助手，提高了用户体验。",
    logo: "/assets/DeepSeek.svg"
  }
];
---

<Layout title="关于我们 - 艺创AI">
  <Header />
  <main class="overflow-hidden bg-white dark:bg-gray-950">
    <!-- 英雄区域 -->
    <HeroSection
      title="艺创AI"
      subtitle="一站式 ( 渐进式 ) AIGC 系统，提供面向个人用户 (ToC)、开发者 (ToD) 和企业 (ToB) 的全面AI解决方案"
      badge="关于我们"
      hasPattern={true}
    >
      <div slot="actions" class="flex flex-wrap gap-4">
        <a href="/contact" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white uppercase tracking-widest text-sm transition-all duration-300 rounded-none border border-blue-600">
          联系我们
        </a>
        <a href="/docs" class="px-8 py-3 border border-gray-200 dark:border-gray-800 text-gray-900 dark:text-white uppercase tracking-widest text-sm hover:bg-gray-50 dark:hover:bg-gray-900 transition-all duration-300 rounded-none">
          查看文档
        </a>
      </div>

      <div class="relative mt-12 md:mt-0">
        <div class="relative z-10 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 md:p-10 overflow-hidden">
          <div class="absolute top-0 right-0 w-24 h-24 border-t border-r border-blue-500/20"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 border-b border-l border-blue-500/20"></div>

          <div class="relative">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 uppercase tracking-wider">我们的使命</h3>
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed italic border-l-2 border-blue-500 pl-6">
              "通过技术创新和开源协作，为开发者提供最简洁、最高效的权限和工作流解决方案，赋能企业数字化转型。"
            </p>
            <div class="flex items-center space-x-6">
              <div class="flex -space-x-3">
                {[1, 2, 3].map((i) => (
                  <div class="w-12 h-12 border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 flex items-center justify-center">
                    <span class="material-icons text-blue-500 text-xl">person</span>
                  </div>
                ))}
              </div>
              <span class="text-xs uppercase tracking-widest text-gray-500 dark:text-gray-500">Professional Engineering Team</span>
            </div>
          </div>
        </div>
        <!-- 背景装饰 -->
        <div class="absolute -inset-4 border border-gray-100 dark:border-gray-800/50 -z-10"></div>
      </div>
    </HeroSection>

    <!-- 我们的故事 -->
    <section class="py-24 border-t border-gray-200 dark:border-gray-800 relative overflow-hidden">
      <div class="absolute inset-0 bg-grid-pattern opacity-[0.03] dark:opacity-[0.05] pointer-events-none"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mb-20">
          <span class="inline-block px-3 py-1 border border-blue-500/30 text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">
            Our Story
          </span>
          <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
            从一个想法到行业解决方案
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
            艺创AI的故事是关于激情、坚持和创新的旅程，我们正在重新定义企业应用开发的方式。
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800">
          <div class="bg-white dark:bg-gray-900 p-10 md:p-16">
            <div class="space-y-12">
              <div class="group">
                <div class="flex items-center gap-4 mb-4">
                  <span class="text-blue-500 text-sm">01</span>
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-white uppercase tracking-wider">起源</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed pl-8 border-l border-gray-100 dark:border-gray-800 group-hover:border-blue-500 transition-colors duration-300">
                  艺创AI源于几位资深开发者的共同痛点：企业应用中权限管理和工作流程实现总是过于复杂且重复开发。我们决定创建一个框架，让这些常见需求变得简单而强大。
                </p>
              </div>
              <div class="group">
                <div class="flex items-center gap-4 mb-4">
                  <span class="text-blue-500 text-sm">02</span>
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-white uppercase tracking-wider">挑战与突破</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed pl-8 border-l border-gray-100 dark:border-gray-800 group-hover:border-blue-500 transition-colors duration-300">
                  在开发过程中，我们面临了如何在保持简洁的同时提供足够灵活性的挑战。通过不断迭代和社区反馈，我们找到了平衡点，创造了既简单又强大的解决方案。
                </p>
              </div>
              <div class="group">
                <div class="flex items-center gap-4 mb-4">
                  <span class="text-blue-500 text-sm">03</span>
                  <h3 class="text-2xl font-bold text-gray-900 dark:text-white uppercase tracking-wider">今天的艺创AI</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed pl-8 border-l border-gray-100 dark:border-gray-800 group-hover:border-blue-500 transition-colors duration-300">
                  如今，我们的框架已被数千家企业采用，从初创公司到大型企业。我们的开源社区蓬勃发展，每天都有新的贡献者加入我们的行列，共同推动产品不断进步。
                </p>
              </div>
            </div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-900/50 p-1">
            <div class="relative h-full min-h-[400px] border border-gray-200 dark:border-gray-800 overflow-hidden">
              <img src="/assets/partners.png" alt="合作伙伴" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700">
              <div class="absolute bottom-0 right-0 bg-white dark:bg-gray-900 border-t border-l border-gray-200 dark:border-gray-800 p-8 max-w-xs">
                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 border border-blue-500/20 flex items-center justify-center text-blue-500">
                    <span class="material-icons">verified</span>
                  </div>
                  <div>
                    <p class="text-lg font-bold text-gray-900 dark:text-white uppercase">5000+ STARS</p>
                    <p class="text-xs text-gray-500 uppercase tracking-tighter">GitHub Community Recognition</p>
                  </div>
                </div>
              </div>
              <div class="absolute top-8 left-8">
                <div class="w-12 h-12 border border-white/20 backdrop-blur-sm flex items-center justify-center">
                  <div class="w-1.5 h-1.5 bg-blue-500 animate-pulse"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 核心价值观 -->
    <section class="py-24 border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 relative">
      <div class="container-custom">
        <div class="max-w-3xl mb-16">
          <span class="inline-block px-3 py-1 border border-blue-500/30 text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">
            Core Values
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight">指导我们前进的原则</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            这些价值观不仅仅是挂在墙上的标语，而是融入我们日常工作和决策的指导原则。
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800">
          {values.map((value) => (
            <div class="bg-white dark:bg-gray-900 p-10 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all duration-300 group">
              <div class="w-16 h-16 border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 flex items-center justify-center mb-8 group-hover:border-blue-500 transition-colors duration-300">
                <Fragment set:html={value.icon} />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 uppercase tracking-wider">{value.title}</h3>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 发展历程 -->
    <section class="py-24 border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950">
      <div class="container-custom">
        <div class="max-w-3xl mb-16">
          <span class="inline-block px-3 py-1 border border-blue-500/30 text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">
            Timeline
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight">我们的成长足迹</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            回顾过去，展望未来，每一步都是我们共同努力的见证。
          </p>
        </div>

        <div class="relative">
          <!-- 时间线背景线 -->
          <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-px bg-gray-200 dark:bg-gray-800 md:-translate-x-px"></div>

          <div class="space-y-24">
            {history.map((item, index) => (
              <div class={`relative flex flex-col md:flex-row gap-8 md:gap-0 ${index % 2 === 0 ? '' : 'md:flex-row-reverse'}`}>
                <!-- 内容区 -->
                <div class="md:w-1/2 flex flex-col justify-center">
                  <div class={`p-8 border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 relative group hover:border-blue-500 transition-colors duration-500 ${index % 2 === 0 ? 'md:mr-12' : 'md:ml-12'}`}>
                    <div class="flex items-center gap-4 mb-4">
                      <span class="text-3xl font-bold text-blue-500/20 group-hover:text-blue-500 transition-colors duration-500">{item.year}</span>
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white uppercase tracking-wider">{item.title}</h3>
                    </div>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6">{item.description}</p>
                    <div class="aspect-video border border-gray-100 dark:border-gray-800 overflow-hidden">
                      <img src={item.image} alt={item.title} class="w-full h-full object-cover transition-all duration-700">
                    </div>
                    <!-- 装饰角 -->
                    <div class="absolute -top-px -right-px w-4 h-4 border-t border-r border-gray-300 dark:border-gray-700 group-hover:border-blue-500"></div>
                    <div class="absolute -bottom-px -left-px w-4 h-4 border-b border-l border-gray-300 dark:border-gray-700 group-hover:border-blue-500"></div>
                  </div>
                </div>

                <!-- 中间节点 -->
                <div class="absolute left-0 md:left-1/2 top-10 md:top-1/2 w-4 h-4 bg-white dark:bg-gray-950 border-2 border-blue-500 -translate-x-1.5 md:-translate-x-2 md:-translate-y-2 z-10">
                  <div class="w-full h-full bg-blue-500 scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                </div>

                <div class="hidden md:block md:w-1/2"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- 团队介绍 -->
    <section class="py-24 border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50">
      <div class="container-custom">
        <div class="max-w-3xl mb-16">
          <span class="inline-block px-3 py-1 border border-blue-500/30 text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">
            Executive Team
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight">遇见背后的团队</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            我们的团队由充满激情的技术专家和行业领导者组成，他们共同致力于实现我们的使命。
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800">
          {teamMembers.map((member) => (
            <div class="bg-white dark:bg-gray-900 group relative overflow-hidden">
              <div class="aspect-[3/4] overflow-hidden">
                <img src={member.image} alt={member.name} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-blue-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              <div class="p-8 border-t border-gray-100 dark:border-gray-800 group-hover:border-blue-500 transition-colors duration-300">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white uppercase tracking-wider mb-1">{member.name}</h3>
                <p class="text-sm text-blue-600 dark:text-blue-400 uppercase tracking-widest mb-4">{member.position}</p>
                <p class="text-sm text-gray-500 dark:text-gray-500 leading-relaxed line-clamp-3 group-hover:line-clamp-none transition-all duration-500">
                  {member.bio}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 客户案例 -->
    <section class="py-24 border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950">
      <div class="container-custom">
        <div class="max-w-3xl mb-16">
          <span class="inline-block px-3 py-1 border border-blue-500/30 text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">
            Case Studies
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight">他们信任我们</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400">
            看看这些组织如何使用艺创AI解决方案实现业务转型。
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800">
          {clientCases.map((client) => (
            <div class="bg-white dark:bg-gray-900 p-10 hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-all duration-300 group">
              <div class="h-16 mb-10 flex items-center transition-all duration-500">
                <img src={client.logo} alt={client.name} class="h-10 opacity-50 group-hover:opacity-100 transition-opacity">
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 uppercase tracking-wider">{client.name}</h3>
              <p class="text-blue-600 dark:text-blue-400 text-xs uppercase tracking-widest mb-6">{client.industry}</p>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed border-l border-gray-100 dark:border-gray-800 pl-6 group-hover:border-blue-500 transition-colors duration-300">
                {client.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 加入我们 -->
    <section class="py-32 border-t border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 relative overflow-hidden">
      <div class="absolute inset-0 bg-grid-pattern opacity-[0.03] dark:opacity-[0.05] pointer-events-none"></div>
      <div class="container-custom relative z-10 text-center">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-8 tracking-tighter">
            READY TO <span class="text-blue-600">INNOVATE</span> TOGETHER?
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto leading-relaxed">
            加入我们的开源生态，或者让我们为您提供定制化的企业级AI解决方案。
          </p>
          <div class="flex flex-wrap justify-center gap-6">
            <a href="/contact" class="px-12 py-4 bg-blue-600 hover:bg-blue-700 text-white uppercase tracking-widest text-sm transition-all duration-300 border border-blue-600 rounded-none">
              Get Started
            </a>
            <a href="https://github.com" class="px-12 py-4 border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white uppercase tracking-widest text-sm hover:bg-white dark:hover:bg-gray-900 transition-all duration-300 rounded-none">
              View on GitHub
            </a>
          </div>
        </div>
      </div>
      <!-- 装饰边框 -->
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
      <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-500/20 to-transparent"></div>
