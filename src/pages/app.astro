<style>
  .feature-card {
    @apply bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all border border-gray-100 dark:border-gray-700;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.7);
  }
  
  .dark .feature-card {
    background: rgba(31, 41, 55, 0.7);
  }
  
  .icon-container {
    @apply w-10 h-10 bg-blue-100 dark:bg-blue-800 rounded-full flex items-center justify-center mr-3;
  }
