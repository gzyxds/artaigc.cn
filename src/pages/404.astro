---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="页面未找到 - 艺创AI">
  <Header />
  <main class="min-h-[80vh] flex items-center bg-white dark:bg-neutral-950 relative overflow-hidden">
    <!-- 背景装饰 - 使用全局定义的网格图案 -->
    <div class="absolute inset-0 bg-grid-pattern opacity-[0.03] dark:opacity-[0.05]"></div>

    <section class="py-20 md:py-32 relative z-10 w-full">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- 404 Bento 卡片容器 -->
          <div class="bento-card p-8 md:p-16 text-center relative group">
            <!-- 四角 L 形装饰 -->
            <div class="corner-marker corner-marker-tl"></div>
            <div class="corner-marker corner-marker-tr"></div>
            <div class="corner-marker corner-marker-bl"></div>
            <div class="corner-marker corner-marker-br"></div>

            <div class="mb-12 relative inline-block">
              <div class="absolute -inset-4 border border-blue-500/20 dark:border-blue-500/10 animate-pulse"></div>
              <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600 dark:text-blue-400 mx-auto opacity-80">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
              </svg>
            </div>

            <div class="relative mb-12">
              <h1 class="text-[8rem] md:text-[12rem] font-bold text-gray-900 dark:text-white opacity-[0.03] dark:opacity-[0.05] select-none leading-none font-mono">
                404
              </h1>
              <div class="absolute inset-0 flex flex-col items-center justify-center">
                <span class="font-mono text-sm uppercase tracking-[0.3em] text-blue-600 dark:text-blue-400 mb-4">Error Code</span>
                <h2 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white tracking-tighter">
                  页面已丢失
                </h2>
              </div>
            </div>

            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-xl mx-auto leading-relaxed">
              您访问的页面可能已被移动或不存在。
              <span class="block mt-2 font-mono text-sm opacity-60">SYSTEM_ERROR_NOT_FOUND_404</span>
            </p>

            <div class="flex flex-col sm:flex-row justify-center gap-4 max-w-md mx-auto">
              <a href="/" class="btn btn-primary btn-lg w-full sm:flex-1">
                返回首页
              </a>
              <a href="/contact" class="btn btn-outline btn-lg w-full sm:flex-1">
                联系客服
              </a>
            </div>
          </div>

          <!-- 底部辅助信息 -->
          <div class="mt-8 flex justify-between items-center px-4 font-mono text-[10px] uppercase tracking-widest text-gray-400 dark:text-gray-600">
            <span>ARTAI_GC_OS v1.0.0</span>
            <span>Status: 404 Not Found</span>
            <span class="hidden md:inline">Request_ID: {Math.random().toString(36).substring(7).toUpperCase()}</span>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
