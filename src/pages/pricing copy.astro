---
// 布局组件
import Layout from '../layouts/Layout.astro';

// 页面组件
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// 内容组件
import HeroSection from '../components/HeroSection.astro';
import PricingCmp from '../components/Pricing.astro';
import Contact from '../components/Contact.astro';
import Calltoaction from '../components/Calltoaction.astro';

// 页面元数据
const title = "定价 - 艺创AI";
const description = "艺创AI提供多种AI系统解决方案，包括AI数字人、AI知识库、AI聊天绘画和AI论文写作系统，价格透明，支持私有部署，专业团队提供技术支持。";
const keywords = "AI系统价格,AI系统定价,AI数字人价格,AI知识库价格,AI聊天系统价格,AI论文系统价格,PHP AI系统价格,Java AI系统价格";
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
>
  <Header />
  
  <main>
    <HeroSection 
      title="简单，透明的" 
      highlightText="价格"
      description="选择最适合您业务的方案。"
    />
    <PricingCmp />
  </main>

  <Contact />
  <Calltoaction />
  <Footer />
</Layout>
