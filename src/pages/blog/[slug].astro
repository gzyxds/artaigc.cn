---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

/**
 * 生成静态路径 - 为每篇博客文章创建动态路由
 */
export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });
  
  return posts.map((post) => ({
    params: { slug: post.id.replace('.md', '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

/**
 * 获取相关文章推荐
 * 筛选同分类的其他文章，最多显示3篇
 */
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const relatedPosts = allPosts
  .filter(p => p.id !== post.id && p.data.category === post.data.category)
  .slice(0, 3)
  .map(p => ({
    id: p.id,
    title: p.data.title,
    excerpt: p.data.excerpt,
    image: p.data.image,
    date: p.data.date
  }));
---

<Layout title={post.data.title + " - 艺创AI"} description={post.data.excerpt}>
  <Header />
  
  <!-- 主要内容区域 - 采用现代企业级设计 -->
  <main class="min-h-screen w-full bg-gradient-to-br from-slate-50 via-blue-50/30 to-white dark:from-slate-900 dark:via-blue-950/20 dark:to-slate-800">
    
    <!-- 顶部导航栏 - 简洁固定设计 -->
    <div class="sticky top-16 z-40 bg-white/95 dark:bg-slate-900/95 backdrop-blur-xl border-b border-slate-200/50 dark:border-slate-700/50">
      <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 max-w-[1550px] py-4">
        <div class="flex items-center justify-between">
          <!-- 返回按钮 -->
          <a href="/blog" class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-200 group">
            <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span class="font-medium">返回文章列表</span>
          </a>
          
          <!-- 阅读进度指示器 -->
          <div class="flex items-center gap-3">
            <span class="text-sm text-slate-500 dark:text-slate-400">阅读进度</span>
            <div class="w-24 h-1.5 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
              <div class="reading-progress-bar h-full bg-gradient-to-r from-blue-500 to-blue-600 transition-all duration-300" style="width: 0%"></div>
            </div>
            <span class="reading-progress text-sm font-medium text-blue-600 dark:text-blue-400 min-w-[3rem]">0%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 文章容器 - 左右布局设计 -->
    <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8 max-w-[1550px] py-8">
      <div class="grid lg:grid-cols-12 gap-8">
        
        <!-- 左侧内容区域 -->
        <article class="lg:col-span-8">
          
          <!-- 文章头部信息卡片 -->
          <div class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 p-8 mb-8">
            <!-- 分类和日期标签 -->
            <div class="flex items-center gap-4 mb-6">
              <span class="inline-flex items-center px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-sm font-medium">
                <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
                </svg>
                {post.data.category}
              </span>
              <div class="flex items-center text-slate-500 dark:text-slate-400 text-sm">
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <time>{post.data.date}</time>
              </div>
            </div>
            
            <!-- 文章标题 -->
            <h1 class="text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white mb-6 leading-tight">
              {post.data.title}
            </h1>
            
            <!-- 文章摘要 -->
            <p class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed mb-8">
              {post.data.excerpt}
            </p>
            
            <!-- 作者信息 -->
            <div class="flex items-center gap-4 pt-6 border-t border-slate-200 dark:border-slate-700">
              <img 
                src="/assets/logo.png" 
                alt={post.data.author} 
                class="w-12 h-12 object-cover border-2 border-white dark:border-slate-700"
              />
              <div>
                <p class="font-semibold text-slate-900 dark:text-white">{post.data.author}</p>
                <p class="text-sm text-slate-500 dark:text-slate-400">{post.data.authorRole}</p>
              </div>
            </div>
          </div>

          <!-- 文章内容区域 -->
          <div class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 p-8">
            <div class="prose dark:prose-invert prose-lg max-w-none
              prose-headings:font-bold prose-headings:text-slate-900 dark:prose-headings:text-white
              prose-h1:text-3xl prose-h1:mb-8 prose-h1:border-b prose-h1:border-slate-200 dark:prose-h1:border-slate-700 prose-h1:pb-4
              prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:text-blue-900 dark:prose-h2:text-blue-100
              prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4 prose-h3:text-blue-800 dark:prose-h3:text-blue-200
              prose-p:text-slate-700 dark:prose-p:text-slate-300 prose-p:leading-relaxed prose-p:text-base prose-p:mb-6
              prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline prose-a:font-medium
              prose-strong:text-slate-900 dark:prose-strong:text-white prose-strong:font-semibold
              prose-ul:list-none prose-ul:pl-0 prose-ul:space-y-2
              prose-li:relative prose-li:pl-6 prose-li:text-slate-700 dark:prose-li:text-slate-300
              prose-li:before:content-['▸'] prose-li:before:absolute prose-li:before:left-0 prose-li:before:text-blue-500 prose-li:before:font-bold
              prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-blue-50 dark:prose-blockquote:bg-blue-950/20 prose-blockquote:pl-6 prose-blockquote:py-4 prose-blockquote:italic prose-blockquote:text-slate-700 dark:prose-blockquote:text-slate-300
              prose-code:text-blue-600 dark:prose-code:text-blue-400 prose-code:bg-blue-50 dark:prose-code:bg-blue-950/30 prose-code:px-2 prose-code:py-1 prose-code:font-mono prose-code:text-sm
              prose-pre:bg-slate-900 dark:prose-pre:bg-slate-800 prose-pre:text-slate-100 prose-pre:border prose-pre:border-slate-700
              prose-img:border prose-img:border-slate-200 dark:prose-img:border-slate-700
              prose-hr:border-slate-300 dark:prose-hr:border-slate-600 prose-hr:my-12">
              <Content />
            </div>
          </div>

          <!-- 分享功能卡片 -->
          <div class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 p-6 mt-8">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
              </svg>
              分享这篇文章
            </h3>
            <div class="flex gap-3">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`} 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="flex items-center gap-2 px-4 py-2 bg-blue-50 dark:bg-blue-950/30 text-blue-600 dark:text-blue-400 hover:bg-blue-100 dark:hover:bg-blue-950/50 transition-colors text-sm font-medium border border-blue-200 dark:border-blue-800">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
                </svg>
