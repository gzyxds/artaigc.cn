---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import { getCollection } from 'astro:content';

/**
 * 生成静态路径 - 为每篇博客文章创建动态路由
 */
export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });

  return posts.map((post) => ({
    params: { slug: post.id.replace('.md', '') },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

/**
 * 获取相关文章推荐
 * 筛选同分类的其他文章，最多显示3篇
 */
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const relatedPosts = allPosts
  .filter(p => p.id !== post.id && p.data.category === post.data.category)
  .slice(0, 3)
  .map(p => ({
    id: p.id,
    title: p.data.title,
    excerpt: p.data.excerpt,
    image: p.data.image,
    date: p.data.date
  }));
---

<Layout title={post.data.title + " - 艺创AI"} description={post.data.excerpt}>
  <Header />

  <!-- 主要内容区域 - 采用现代企业级设计 -->
  <main class="min-h-screen w-full bg-white dark:bg-gray-950 relative">
    <!-- 背景网格装饰 -->
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] bg-fixed opacity-5 pointer-events-none"></div>

    <!-- 顶部导航栏 - 简洁固定设计 -->
    <div class="sticky top-16 z-40 bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl border-b border-gray-200 dark:border-gray-800">
      <div class="container-custom py-4">
        <div class="flex items-center justify-between">
          <!-- 返回按钮 -->
          <a href="/blog" class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-200 group text-sm uppercase tracking-wider">
            <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span>Back to Index</span>
          </a>

          <!-- 阅读进度指示器 -->
          <div class="flex items-center gap-4">
            <span class="text-[10px] text-gray-500 dark:text-gray-400 uppercase tracking-widest">Progress</span>
            <div class="w-24 h-1 bg-gray-100 dark:bg-gray-800 rounded-none overflow-hidden">
              <div class="reading-progress-bar h-full bg-blue-600 transition-all duration-300" style="width: 0%"></div>
            </div>
            <span class="reading-progress text-[10px] text-blue-600 dark:text-blue-400 min-w-[2rem]">0%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 文章容器 - 左右布局设计 -->
    <div class="container-custom relative z-10 py-12">
      <div class="grid lg:grid-cols-12 gap-8">

        <!-- 左侧内容区域 -->
        <article class="lg:col-span-8">

          <!-- 文章头部信息卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 lg:p-12 mb-8">
            <!-- 分类和日期标签 -->
            <div class="flex flex-wrap items-center gap-6 mb-8">
              <span class="inline-flex items-center px-3 py-1 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 text-[10px] uppercase tracking-widest border border-blue-100 dark:border-blue-800 rounded-none">
                {post.data.category}
              </span>
              <div class="flex items-center text-gray-400 dark:text-gray-500 text-[10px] uppercase tracking-widest">
                <svg class="w-3.5 h-3.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <time>{post.data.date}</time>
              </div>
            </div>

            <!-- 文章标题 -->
            <h1 class="text-3xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-8 leading-tight tracking-tight">
              {post.data.title}
            </h1>

            <!-- 文章摘要 -->
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed mb-10 border-l-2 border-blue-600 pl-6 italic font-light">
              {post.data.excerpt}
            </p>

            <!-- 作者信息 -->
            <div class="flex items-center gap-5 pt-8 border-t border-gray-100 dark:border-gray-800">
              <img
                src="/assets/logo.png"
                alt={post.data.author}
                class="w-12 h-12 object-cover border border-gray-200 dark:border-gray-700 p-0.5 rounded-none"
              />
              <div>
                <p class="text-sm font-bold text-gray-900 dark:text-white uppercase tracking-wider">{post.data.author}</p>
                <p class="text-[10px] text-gray-400 dark:text-gray-500 uppercase tracking-widest">{post.data.authorRole}</p>
              </div>
            </div>
          </div>

          <!-- 文章内容区域 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 lg:p-12">
            <div class="prose dark:prose-invert prose-lg max-w-none">
              <Content />
            </div>
          </div>

          <!-- 分享功能卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 mt-8">
            <h3 class="text-xs font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3 uppercase tracking-widest">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
              </svg>
              Share Knowledge
            </h3>
            <div class="flex flex-wrap gap-4">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                 target="_blank"
                 rel="noopener noreferrer"
                 class="share-btn flex items-center gap-3 px-6 py-3 bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-white dark:hover:bg-gray-900 transition-all text-[10px] uppercase tracking-widest border border-gray-100 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-400">
                Twitter
              </a>
              <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(post.data.title)}`}
                 target="_blank"
                 rel="noopener noreferrer"
                 class="share-btn flex items-center gap-3 px-6 py-3 bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-white dark:hover:bg-gray-900 transition-all text-[10px] uppercase tracking-widest border border-gray-100 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-400">
                LinkedIn
              </a>
            </div>
          </div>
        </article>

        <!-- 右侧边栏 -->
        <aside class="lg:col-span-4 space-y-8">

          <!-- 目录导航卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 sticky top-32">
            <h3 class="text-xs font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3 uppercase tracking-widest border-b border-gray-100 dark:border-gray-800 pb-4">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
              </svg>
              Navigation
            </h3>
            <nav class="space-y-4" id="toc">
              <!-- 目录内容将通过JavaScript动态生成 -->
            </nav>
          </div>

          <!-- 文章统计信息卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8">
            <h3 class="text-xs font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3 uppercase tracking-widest border-b border-gray-100 dark:border-gray-800 pb-4">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2-2z"/>
              </svg>
              Technical Specs
            </h3>
            <div class="space-y-6">
              <div class="flex justify-between items-center py-2 border-b border-gray-50 dark:border-gray-800/50">
                <span class="text-[10px] text-gray-400 uppercase tracking-widest">Published</span>
                <span class="text-[10px] font-bold text-gray-900 dark:text-white">{post.data.date}</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b border-gray-50 dark:border-gray-800/50">
                <span class="text-[10px] text-gray-400 uppercase tracking-widest">Category</span>
                <span class="text-[10px] font-bold text-blue-600 dark:text-blue-400">{post.data.category}</span>
              </div>
              <div class="flex justify-between items-center py-2">
                <span class="text-[10px] text-gray-400 uppercase tracking-widest">Read Time</span>
                <span class="text-[10px] font-bold text-gray-900 dark:text-white">~5 MIN</span>
              </div>
            </div>
          </div>
         </aside>
       </div>
     </div>

     <!-- 相关文章推荐区域 -->
     {relatedPosts.length > 0 && (
       <div class="container-custom relative z-10 pb-24">
         <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 lg:p-12">
           <h3 class="text-xs font-bold text-gray-900 dark:text-white mb-10 flex items-center gap-3 uppercase tracking-widest">
             <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
             </svg>
             Related Insights
           </h3>
           <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-px bg-gray-100 dark:bg-gray-800 border border-gray-100 dark:border-gray-800">
             {relatedPosts.map((relatedPost) => (
               <a href={'/blog/' + relatedPost.id.replace('.md', '')}
                  class="group block bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 p-6">
                 <div class="relative aspect-[16/10] overflow-hidden mb-6 border border-gray-100 dark:border-gray-800">
                   <img
                     src={relatedPost.image}
                     alt={relatedPost.title}
                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                     loading="lazy"
                   />
                 </div>
                 <div>
                   <time class="text-[10px] text-gray-400 dark:text-gray-500 uppercase tracking-widest block mb-3">{relatedPost.date}</time>
                   <h4 class="text-base font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2 leading-snug">
                     {relatedPost.title}
                   </h4>
                 </div>
               </a>
             ))}
           </div>
        </div>
      </div>
    )}
  </main>
  <Footer />
</Layout>

<style>
  /* 现代化企业级样式 */
  :root {
    --header-height: 4rem;
  }

  /* 平滑滚动 */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: var(--header-height);
  }

  /* 文章内容样式优化 */
  .prose {
    @apply text-slate-700 dark:text-slate-300;
  }

  .prose h1, .prose h2, .prose h3, .prose h4 {
    @apply text-slate-900 dark:text-white font-bold tracking-tight;
  }

  .prose h1 {
    @apply text-3xl mb-8 pb-4;
  }

  .prose h2 {
    @apply text-2xl mt-12 mb-6 pb-3 border-b border-slate-200 dark:border-slate-700 text-blue-600 dark:text-blue-400;
  }

  .prose h3 {
    @apply text-xl mt-8 mb-4;
  }

  .prose p {
    @apply mb-6 leading-relaxed text-base text-gray-600 dark:text-gray-400;
  }

  .prose a {
    @apply text-blue-600 dark:text-blue-400 no-underline hover:underline text-sm transition-colors;
  }

  .prose strong {
    @apply text-gray-900 dark:text-white font-bold;
  }

  .prose ul {
    @apply list-none pl-0 space-y-4 mb-6;
  }

  .prose ol {
    @apply mb-6 pl-6;
  }

  .prose li {
    @apply relative pl-8 text-gray-600 dark:text-gray-400 mb-2;
  }

  .prose ul li::before {
    content: '';
    @apply absolute left-0 top-3 w-4 h-px bg-blue-600;
  }

  .prose blockquote {
    @apply border-l-0 bg-gray-50 dark:bg-gray-800/50 pl-10 py-8 italic text-gray-600 dark:text-gray-400 relative;
  }

  .prose blockquote::before {
    content: '"';
    @apply absolute left-4 top-4 text-4xl text-blue-600/20;
  }

  .prose code {
    @apply text-blue-600 dark:text-blue-400 bg-gray-50 dark:bg-gray-800 px-1.5 py-0.5 font-mono text-[0.9em] rounded-none border-none;
  }

  .prose code::before, .prose code::after {
    content: '';
  }

  .prose pre {
    @apply bg-slate-900 dark:bg-black p-6 overflow-x-auto rounded-none border border-gray-800;
  }

  .prose pre code {
    @apply bg-transparent border-none p-0 text-gray-300;
  }

  .prose img {
    @apply rounded-none border border-gray-100 dark:border-gray-800;
  }

  .prose hr {
    @apply border-gray-100 dark:border-gray-800 my-12;
  }

  /* 阅读进度条动画 */
  .reading-progress-bar {
    transition: width 0.3s ease-out;
  }

  /* 目录样式 */
  #toc a {
    display: block;
    padding: 0.75rem 1rem;
    @apply text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider;
    border-radius: 0;
    transition: all 0.2s ease;
  }

  #toc a:hover {
    @apply bg-gray-50 dark:bg-gray-800 text-blue-600 dark:text-blue-400;
    transform: translateX(4px);
  }

  #toc a.active {
    @apply bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 font-bold border-l-2 border-blue-600;
  }

  /* 响应式调整 */
  @media (max-width: 1024px) {
    .sidebar {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .container-custom {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .prose {
      font-size: 16px;
    }
  }

  /* 卡片悬停效果 */
  .card-hover {
    transition: all 0.3s ease;
  }

  .card-hover:hover {
    transform: translateY(-2px);
    @apply border-blue-500 dark:border-blue-400;
  }
</style>

<script>
  // 阅读进度跟踪
  const updateReadingProgress = () => {
    const article = document.querySelector('article');
    const progressBar = document.querySelector('.reading-progress-bar') as HTMLElement;
    const progressText = document.querySelector('.reading-progress') as HTMLElement;

    if (!article || !progressBar || !progressText) return;

    const updateProgress = () => {
      const articleHeight = article.offsetHeight;
      const windowHeight = window.innerHeight;
      const scrolled = window.scrollY;
      const articleTop = article.offsetTop;

      const progress = Math.min(
        Math.max((scrolled - articleTop + windowHeight) / articleHeight, 0),
        1
      );

      const percentage = Math.round(progress * 100);
      progressBar.style.width = `${percentage}%`;
      progressText.textContent = `${percentage}%`;
    };

    window.addEventListener('scroll', updateProgress);
    window.addEventListener('resize', updateProgress);
    updateProgress();
  };

  // 目录生成和跟踪
  const generateTOC = () => {
    const headings = document.querySelectorAll('article h2, article h3');
    const toc = document.getElementById('toc');

    if (!headings.length || !toc) return;

    // 清空现有目录
    toc.innerHTML = '';
    const fragment = document.createDocumentFragment();

    headings.forEach((heading, index) => {
      const id = `heading-${index}`;
      heading.id = id;

      const link = document.createElement('a');
      link.href = `#${id}`;
      link.textContent = heading.textContent;
      link.className = heading.tagName === 'H3' ? 'ml-4 text-sm' : 'text-sm';

      // 添加平滑滚动点击事件
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });

      fragment.appendChild(link);
    });

    toc.appendChild(fragment);

    // 跟踪当前阅读的标题
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const id = entry.target.id;
        const link = toc.querySelector(`a[href="#${id}"]`);

        if (entry.isIntersecting) {
          toc.querySelectorAll('a').forEach(a => a.classList.remove('active'));
          link?.classList.add('active');
        }
      });
    }, {
      threshold: 0.5,
      rootMargin: '-100px 0px -50% 0px'
    });

    headings.forEach(heading => observer.observe(heading));
  };

  // 分享功能增强
  const initShareButtons = () => {
    const shareButtons = document.querySelectorAll('.share-btn');
    shareButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        // 添加点击反馈动画
        const htmlButton = button as HTMLElement;
        htmlButton.style.transform = 'scale(0.95)';
        setTimeout(() => {
          htmlButton.style.transform = 'scale(1)';
        }, 150);
      });
    });
  };

  // 懒加载图片
  const initLazyLoading = () => {
    const images = document.querySelectorAll('img[loading="lazy"]');
    const imageObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          img.classList.add('opacity-100');
          imageObserver.unobserve(img);
        }
      });
    });

    images.forEach(img => {
      img.classList.add('opacity-0', 'transition-opacity', 'duration-500');
      imageObserver.observe(img);
    });
  };

  // 页面加载完成后初始化
  document.addEventListener('DOMContentLoaded', () => {
    updateReadingProgress();
    generateTOC();
    initShareButtons();
    initLazyLoading();
  });

  // 响应式处理
  window.addEventListener('resize', () => {
    generateTOC();
  });
</script>
