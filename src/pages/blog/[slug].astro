<script>
  // 阅读进度跟踪
  const updateReadingProgress = () => {
    const article = document.querySelector('article');
    const progressBar = document.querySelector('.reading-progress-bar') as HTMLElement;
    const progressText = document.querySelector('.reading-progress') as HTMLElement;

    if (!article || !progressBar || !progressText) return;

    const updateProgress = () => {
      // 获取文章内容的位置信息
      const rect = article.getBoundingClientRect();
      const viewportHeight = window.innerHeight;

      // 计算总的可滚动距离：文章高度 - 视口高度
      // 如果文章高度小于视口高度，则进度永远是100%（或者不显示）
      const totalScrollableDistance = rect.height - viewportHeight;

      // 计算已滚动的距离
      // rect.top 是文章顶部距离视口顶部的距离
      // 当 rect.top 为 0 时，说明刚开始读（假设文章顶部贴顶）
      // 实际上我们可能希望从文章进入视口就开始计算，或者文章顶部到达视口顶部才开始
      // 这里采用：当文章顶部到达视口顶部时开始计算 (rect.top <= 0)
      // 使用 -rect.top 表示我们滚过了多少文章内容
      const scrolledDistance = -rect.top;

      let percentage = 0;

      if (totalScrollableDistance <= 0) {
        // 文章太短，直接显示 100%
        percentage = 100;
      } else {
        percentage = (scrolledDistance / totalScrollableDistance) * 100;
        // 限制在 0-100 之间
        percentage = Math.min(Math.max(percentage, 0), 100);
      }

      const roundedPercentage = Math.round(percentage);
      progressBar.style.width = `${roundedPercentage}%`;
      progressText.textContent = `${roundedPercentage}%`;
    };

    // 使用 requestAnimationFrame 优化性能
    let ticking = false;
    const onScroll = () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateProgress();
          ticking = false;
        });
        ticking = true;
      }
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    window.addEventListener('resize', onScroll, { passive: true });
    // 初始化调用一次
    updateProgress();
  };

  // 目录生成和跟踪
  const generateTOC = () => {
    const headings = document.querySelectorAll('article h2, article h3');
    const toc = document.getElementById('toc');

    if (!headings.length || !toc) return;

    // 清空现有目录
    toc.innerHTML = '';
    const fragment = document.createDocumentFragment();

    headings.forEach((heading, index) => {
      const id = `heading-${index}`;
      heading.id = id;

      const link = document.createElement('a');
      link.href = `#${id}`;
      link.textContent = heading.textContent;
      link.className = heading.tagName === 'H3' ? 'ml-4 text-sm' : 'text-sm';

      // 添加平滑滚动点击事件
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const href = link.getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            // 考虑顶部导航栏的高度
            const headerOffset = 80;
            const elementPosition = target.getBoundingClientRect().top;
            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: "smooth"
            });
          }
        }
      });

      fragment.appendChild(link);
    });

    toc.appendChild(fragment);

    // 跟踪当前阅读的标题
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const id = entry.target.id;
        const link = toc.querySelector(`a[href="#${id}"]`);

        if (entry.isIntersecting) {
          toc.querySelectorAll('a').forEach(a => a.classList.remove('active'));
          link?.classList.add('active');
        }
      });
    }, {
      rootMargin: '-100px 0px -60% 0px' // 调整可视区域判断范围
    });

    headings.forEach(heading => observer.observe(heading));
  };

  // 分享功能增强
  const initShareButtons = () => {
    const shareButtons = document.querySelectorAll('.share-btn');
    shareButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        // 添加点击反馈动画
        const htmlButton = button as HTMLElement;
        htmlButton.style.transform = 'scale(0.95)';
        setTimeout(() => {
          htmlButton.style.transform = 'scale(1)';
        }, 150);
      });
    });
  };

  // 懒加载图片
  const initLazyLoading = () => {
    const images = document.querySelectorAll('img[loading="lazy"]');
    const imageObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          img.classList.add('opacity-100');
          imageObserver.unobserve(img);
        }
      });
    });

    images.forEach(img => {
      img.classList.add('opacity-0', 'transition-opacity', 'duration-500');
      imageObserver.observe(img);
    });
  };

  // 页面加载完成后初始化
  // 支持 Astro View Transitions (astro:page-load) 和普通加载 (DOMContentLoaded)
  const init = () => {
    updateReadingProgress();
    generateTOC();
    initShareButtons();
    initLazyLoading();
  };

  document.addEventListener('DOMContentLoaded', init);
  document.addEventListener('astro:page-load', init);

  // 响应式处理
  window.addEventListener('resize', () => {
    generateTOC();
  });
</script>
