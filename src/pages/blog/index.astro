---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import HeroSection from '../../components/home/HeroSection.astro';
import { getCollection } from 'astro:content';
import { getRandomImage } from '../../data/blog';

/**
 * 博客文章数据
 * 包含文章ID、标题、摘要、发布日期、作者信息、分类和随机封面图片
 */
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
}).then(entries => entries.map(entry => ({
  id: entry.id,
  title: entry.data.title,
  excerpt: entry.data.excerpt,
  date: entry.data.date,
  author: entry.data.author,
  authorRole: entry.data.authorRole,
  authorAvatar: "/assets/logo.png",
  category: entry.data.category,
  // 所有文章都使用public/assets/blog目录中的随机图片作为封面
  image: getRandomImage(entry.id)
}))).then(entries => {
  // 按日期排序，最新发布的在前面
  return entries.sort((a, b) => {
    const dateA = new Date(a.date);
    const dateB = new Date(b.date);
    if (dateB > dateA) return 1;
    if (dateB < dateA) return -1;
    return 0;
  });
});

/**
 * 从文章数据中提取所有唯一的分类
 * 使用Set去重，然后转换回数组
 */
const categories = [...new Set(posts.map(post => post.category))];
---

<!-- 博客页面布局 -->
<Layout title="艺创AI_新闻资讯" description="了解我们最新的产品更新、功能发布和公司新闻。" keywords="新闻,资讯,产品更新,功能发布,公司新闻">
  <Header />
  <main class="bg-white dark:bg-gray-950 relative">
    <!-- 背景网格装饰 -->
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] bg-fixed opacity-5 pointer-events-none"></div>

    <!-- 页面标题区域 - Bento/Linear 设计 -->
    <section class="relative py-20 lg:py-32 border-b border-gray-200 dark:border-gray-800">
      <!-- 网格背景 -->
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>

      <div class="container-custom relative z-10">
        <div class="max-w-4xl mx-auto text-center space-y-8">
          <!-- 标题 -->
          <div class="space-y-6">
            <div class="inline-flex items-center px-3 py-1 rounded-none border border-blue-200 dark:border-blue-900 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-xs mb-4">
              BLOG & INSIGHTS
            </div>
            <h1 class="text-5xl lg:text-7xl font-bold text-gray-900 dark:text-white tracking-tight">
              最新 <span class="text-blue-600">资讯动态</span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              了解我们最新的产品更新、功能发布和公司新闻。
              <span class="text-sm block mt-2 text-gray-500">技术分享 · 行业洞察 · 最佳实践</span>
            </p>
          </div>

          <!-- 核心数据展示 - Bento Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800 mt-20">
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 transition-colors">{posts.length}<span class="text-blue-600">+</span></div>
              <div class="text-sm text-gray-500 uppercase tracking-wider">发布文章</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 transition-colors">50k<span class="text-blue-600">+</span></div>
              <div class="text-sm text-gray-500 uppercase tracking-wider">阅读总量</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 transition-colors">{categories.length}</div>
              <div class="text-sm text-gray-500 uppercase tracking-wider">专栏分类</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 transition-colors">Daily</div>
              <div class="text-sm text-gray-500 uppercase tracking-wider">更新频率</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 博客内容区域 -->
    <div class="container-custom relative z-10 py-12">

      <!-- 博客文章卡片网格 - 4列布局设计 -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800">
        {posts.map((post, index) => (
          <article class="group bg-white dark:bg-gray-900 overflow-hidden transition-all duration-300 slide-up flex flex-col h-full"
                   style={'animation-delay: ' + (index * 100) + 'ms'}>
            <!-- 文章封面图片 - 4列布局优化比例 -->
            <a href={'/blog/' + post.id.replace('.md', '')} class="block relative overflow-hidden aspect-[16/10] border-b border-gray-100 dark:border-gray-800">
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute top-4 left-4">
                <span class="px-2 py-1 bg-white/90 dark:bg-gray-900/90 text-blue-600 dark:text-blue-400 text-[10px] uppercase tracking-wider border border-blue-200 dark:border-blue-800 rounded-none backdrop-blur-sm">
                  {post.category}
                </span>
              </div>
            </a>
            <!-- 文章内容区域 - 4列布局优化 -->
            <div class="p-6 flex flex-col flex-grow">
              <!-- 日期信息 -->
              <div class="flex items-center mb-4">
                <time class="text-[10px] text-gray-400 dark:text-gray-500 uppercase tracking-widest">{post.date}</time>
              </div>
              <!-- 文章标题 - 适中的字体 -->
              <a href={'/blog/' + post.id.replace('.md', '')} class="block mb-4 group/title">
                <h2 class="text-lg font-bold text-gray-900 dark:text-white group-hover/title:text-blue-600 dark:group-hover/title:text-blue-400 transition-colors line-clamp-2 leading-tight">
                  {post.title}
                </h2>
              </a>
              <!-- 文章摘要 - 适中的字体和间距 -->
              <p class="text-gray-500 dark:text-gray-400 mb-6 line-clamp-3 text-sm leading-relaxed">
                {post.excerpt}
              </p>

              <div class="mt-auto pt-6 border-t border-gray-100 dark:border-gray-800 flex items-center justify-between">
                <!-- 作者信息 -->
                <div class="flex items-center gap-3">
                  <img
                    src={post.authorAvatar}
                    alt={post.author}
                    class="w-8 h-8 object-cover border border-gray-100 dark:border-gray-800 rounded-sm"
                    loading="lazy"
                  />
                  <div class="flex flex-col justify-center">
                    <p class="text-xs font-bold text-gray-900 dark:text-white leading-tight mb-0.5">{post.author}</p>
                    <p class="text-[10px] text-gray-500 dark:text-gray-400 uppercase tracking-wider leading-tight">{post.authorRole}</p>
                  </div>
                </div>

                <!-- 阅读更多箭头 -->
                <div class="text-blue-600 dark:text-blue-400 opacity-0 group-hover:opacity-100 transition-all transform translate-x-[-10px] group-hover:translate-x-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- 加载更多按钮 -->
      <div class="mt-12 flex justify-center">
        <a href="#" class="group inline-flex items-center px-10 py-4 bg-white dark:bg-gray-900 text-gray-900 dark:text-white text-xs uppercase tracking-widest hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 border border-gray-200 dark:border-gray-800 rounded-none relative overflow-hidden">
          <span class="relative z-10">Load More Content</span>
          <div class="absolute bottom-0 left-0 w-full h-0.5 bg-blue-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  /* 添加平滑滚动效果 */
  html {
    scroll-behavior: smooth;
  }

  /* 优化卡片动画 */
  .slide-up {
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.6s ease-out forwards;
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 优化文本截断 */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
