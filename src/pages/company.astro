---
// 布局组件
import Layout from '../layouts/Layout.astro';

// 页面组件
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
---

<Layout title="艺创AI - 专注于AIGC系统源码解决方案">
  <Header />
  <main class="bg-white dark:bg-gray-950">
    <!-- 企业级英雄区域 -->
    <section class="relative py-24 lg:py-32 overflow-hidden border-b border-gray-200 dark:border-gray-800">
      <!-- 科技感背景装饰 -->
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] bg-center opacity-30"></div>

      <div class="container mx-auto px-6 lg:px-8 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- 企业标识 -->
          <div class="inline-flex items-center px-3 py-1 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 text-blue-600 dark:text-blue-400 text-xs mb-8 tracking-wide">
            <span class="mr-2">■</span>
            ENTERPRISE SOLUTION
          </div>

          <!-- 主标题 -->
          <h1 class="text-5xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-8 tracking-tight">
            艺创<span class="text-blue-600">AI</span>
          </h1>

          <!-- 副标题 -->
          <p class="text-xl lg:text-2xl text-gray-600 dark:text-gray-400 mb-12 leading-relaxed max-w-3xl mx-auto">
            一站式渐进式AIGC系统解决方案<br>
            <span class="text-blue-600 text-base mt-2 block">面向个人用户 (ToC) · 开发者 (ToD) · 企业 (ToB)</span>
          </p>

          <!-- 核心数据展示 - Bento Grid Style -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-px bg-gray-200 dark:bg-gray-800 border border-gray-200 dark:border-gray-800 mt-16">
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2">50W<span class="text-lg align-top">+</span></div>
              <div class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider">客户信赖</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2">100<span class="text-lg align-top">+</span></div>
              <div class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider">企业服务</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2">28</div>
              <div class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider">城市覆盖</div>
            </div>
            <div class="bg-white dark:bg-gray-900 p-8 text-center group hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2">300<span class="text-lg align-top">+</span></div>
              <div class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wider">服务商</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 数据统计详细展示 -->
    <section class="py-24 bg-gray-50 dark:bg-gray-900/50 border-b border-gray-200 dark:border-gray-800">
      <div class="container mx-auto px-6 lg:px-8">
        <!-- 标题区域 -->
        <div class="text-center mb-20">
          <div class="inline-flex items-center px-3 py-1 bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400 text-xs mb-6 tracking-wide">
            DATA INSIGHTS
          </div>
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">业务数据概览</h2>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
            通过数据驱动的方式，展现艺创AI在AIGC领域的技术实力与市场影响力
          </p>
        </div>

        <!-- 数据卡片网格 -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- 客户数量卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 hover:border-blue-500 dark:hover:border-blue-500 transition-colors group">
            <div class="flex items-center justify-between mb-6">
              <div class="w-12 h-12 border border-gray-200 dark:border-gray-700 flex items-center justify-center group-hover:border-blue-500 transition-colors">
                <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div class="text-xs text-gray-400">01</div>
            </div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">50W+</div>
            <div class="text-gray-900 dark:text-white font-bold mb-4">客户信赖之选</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">覆盖全国各行业客户群体</div>
          </div>

          <!-- 企业服务卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 hover:border-blue-500 dark:hover:border-blue-500 transition-colors group">
            <div class="flex items-center justify-between mb-6">
              <div class="w-12 h-12 border border-gray-200 dark:border-gray-700 flex items-center justify-center group-hover:border-blue-500 transition-colors">
                <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div class="text-xs text-gray-400">02</div>
            </div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">100+</div>
            <div class="text-gray-900 dark:text-white font-bold mb-4">企业级服务</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">提供定制化企业解决方案</div>
          </div>

          <!-- 城市覆盖卡片 -->
          <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-8 hover:border-blue-500 dark:hover:border-blue-500 transition-colors group">
