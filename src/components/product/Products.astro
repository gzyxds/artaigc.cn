---
// 首页产品数据接口
import { products as defaultProducts, type Product, getCategory } from '../../data/products';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import { getProductImage } from '../../data/images';

// 分类定义
const categories = [
  { id: 'all', name: '全部应用', icon: 'lucide:zap' },
  { id: 'independent', name: '独立系统', icon: 'lucide:database' },
  { id: 'video', name: '图像视频', icon: 'lucide:video' },
  { id: 'writing', name: '智能写作', icon: 'lucide:pen-tool' },
  { id: 'enterprise', name: '企业工具', icon: 'lucide:briefcase' },
  { id: 'efficiency', name: '效率工具', icon: 'lucide:layout-grid' },
];

// 辅助函数：根据 subtitle 获取分类 ID
// 已从 ../data/products 导入

// 组件属性
interface Props {
  products?: Product[];
  title?: string;
}

// 默认产品数据 (来自 products.ts)
// 已改为从 ../data/products 导入

// 默认属性值
const {
  products = defaultProducts,
  title = "我们的产品",
} = Astro.props;

// 为产品添加分类属性
const productsWithCategory = products.map(product => ({
  ...product,
  category: getCategory(product.subtitle),
  imageSrc: getProductImage(product.image)
}));

// 定义样式常量
const btnActiveClass = "bg-primary-500 text-white border-primary-500 shadow-md transform scale-105";
const btnInactiveClass = "bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-300 border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700";
const iconActiveClass = "text-white";
const iconInactiveClass = "text-gray-400";
---

<!-- 产品展示区域 -->
<section class="py-10 sm:py-16 md:py-20 lg:py-24 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 overflow-hidden">
  <div class="relative" x-data={`{
    activeCategory: 'all',
    btnActiveClass: '${btnActiveClass}',
    btnInactiveClass: '${btnInactiveClass}',
    iconActiveClass: '${iconActiveClass}',
    iconInactiveClass: '${iconInactiveClass}'
  }`}>
    <!-- 背景装饰 -->
    <div class="absolute top-0 left-0 right-0 h-[800px] bg-gradient-to-b from-primary-50/60 via-primary-100/40 to-transparent dark:from-primary-900/30 dark:via-primary-800/20 -z-10 rounded-none blur-xl"></div>

    <!-- 装饰元素 - 左上角 -->
    <div class="absolute left-0 top-1/4 w-64 h-64 bg-blue-100/40 dark:bg-blue-900/20 rounded-none blur-3xl -z-10 animate-pulse-slow"></div>

    <!-- 装饰元素 - 右上角 -->
    <div class="absolute right-0 top-1/3 w-80 h-80 bg-primary-100/40 dark:bg-primary-900/20 rounded-none blur-3xl -z-10 animate-pulse-slow" style="animation-delay: 1s;"></div>

    <!-- 装饰元素 - 左下角 -->
    <div class="absolute left-1/4 bottom-1/4 w-72 h-72 bg-secondary-100/40 dark:bg-secondary-900/20 rounded-none blur-3xl -z-10 animate-pulse-slow" style="animation-delay: 2s;"></div>

    <!-- 装饰元素 - 右下角 -->
    <div class="absolute right-1/4 bottom-1/3 w-60 h-60 bg-accent-100/40 dark:bg-accent-900/20 rounded-none blur-3xl -z-10 animate-pulse-slow" style="animation-delay: 3s;"></div>

  <div class="container-custom">
    <!-- 页面标题和分类切换 -->
    <div class="text-center mb-8">
      <div class="inline-block mb-4">
        <span class="inline-block px-3 py-1 text-xs font-semibold text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-none type-small">
          精选产品
        </span>
      </div>
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 sm:mb-8 lg:mb-10 text-blue-600 dark:text-blue-400 animate-fade-in hover:scale-105 transition-transform duration-300 type-display">
        {title}
      </h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-base sm:text-lg mb-8 type-subtitle">
        探索我们的创新产品系列，为您的业务提供最佳解决方案
      </p>

      <!-- 分类标签栏 -->
      <div class="flex flex-wrap justify-center gap-2 sm:gap-3">
        {categories.map((cat) => (
          <button
            @click={`activeCategory = '${cat.id}'`}
            class="inline-flex items-center px-4 py-2 rounded-none text-sm font-medium transition-all duration-300 border type-small"
            :class={`activeCategory === '${cat.id}' ? btnActiveClass : btnInactiveClass`}
          >
            <div class="mr-2" :class={`activeCategory === '${cat.id}' ? iconActiveClass : iconInactiveClass`}>
              <Icon name={cat.icon} class="w-4 h-4" />
            </div>
            {cat.name}
          </button>
        ))}
      </div>
    </div>

    <!-- 产品列表容器 -->
    <div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
        {productsWithCategory.map((product, index) => (
          <div
            x-show={`activeCategory === 'all' || activeCategory === '${product.category}'`}
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            class="bento-card group h-full flex flex-col hover:border-blue-500 dark:hover:border-blue-500 transition-colors duration-300"
            style={`transition-delay: ${index * 0.05}s`}
          >
            <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
            <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

            <!-- 商品图片区域 - 16:9比例 -->
            <div class="relative p-3 sm:p-4 md:p-5 pb-0">
              <div class="relative overflow-hidden rounded-none bg-gray-100 dark:bg-gray-800 border border-gray-100 dark:border-gray-700" style="aspect-ratio: 16/9;">
                {product.imageSrc ? (
                  <Image
                    src={product.imageSrc as any}
                    alt={product.title}
                    class="w-full h-full object-cover transition-transform duration-500"
                    width={800}
                    height={450}
                    quality={90}
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gray-200 dark:bg-gray-700 text-gray-400">
                    <Icon name="lucide:image-off" class="w-8 h-8" />
                  </div>
                )}
                <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                {product.subtitle && (
                  <div class="absolute top-0 right-0 bg-blue-600 text-white text-xs px-2 py-1 z-10 type-small">
                    {product.subtitle.replace(/[\[\]]/g, '')}
                  </div>
                )}
              </div>
            </div>

            <!-- 商品信息区域 -->
            <div class="flex-1 flex flex-col p-3 sm:p-4 md:p-5 pt-4">
              <div class="flex flex-wrap items-start justify-between gap-2 mb-2">
                <h3 class="text-sm sm:text-base md:text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-200 leading-tight type-heading">
                  {product.title}
                </h3>
              </div>

              <p class="text-xs sm:text-sm text-gray-500 dark:text-gray-400 leading-relaxed line-clamp-2 mb-4 type-body">
                {product.description}
              </p>

              <div class="flex flex-wrap gap-1.5 mb-4">
                {product.isPlugin ? (
                  <span class="px-2 py-0.5 border border-blue-200 bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:border-blue-800 dark:text-blue-300 text-xs rounded-none type-small">
                    应用插件
                  </span>
                ) : (
                  <span class="px-2 py-0.5 border border-indigo-200 bg-indigo-50 text-indigo-600 dark:bg-indigo-900/20 dark:border-indigo-800 dark:text-indigo-300 text-xs rounded-none type-small">
                    独立系统
                  </span>
                )}
                {product.features.slice(0, 3).map(feature => (
                  <span class="px-2 py-0.5 border border-gray-200 bg-gray-50 text-gray-600 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 text-xs transition-colors duration-200 rounded-none type-small">
                    {feature}
                  </span>
                ))}
              </div>

              <div class="mt-auto pt-4 border-t border-gray-100 dark:border-gray-800">
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center gap-2 flex-wrap">
                    {product.originalPrice && (
                       <span class="text-xs text-gray-400 line-through type-small">¥{product.originalPrice}</span>
                    )}
                    <span class="text-base font-bold text-gray-900 dark:text-white type-heading">
                       ¥{product.price}
                    </span>
                    {product.originalPrice && product.originalPrice > product.price && (
                      <span class="text-xs text-red-500 ml-auto border border-red-200 bg-red-50 dark:bg-red-900/20 dark:border-red-800 px-1 rounded-none type-small">
                        省¥{Math.round(product.originalPrice - product.price)}
                      </span>
                    )}
                  </div>
                  <div class="flex items-center text-xs text-gray-500 type-small">
                    <div class="text-yellow-500 mr-1">
                      <Icon name="lucide:star" class="h-3 w-3 fill-current" />
                    </div>
                    <span>{product.rating}</span>
                    <span class="mx-1">·</span>
                    <span>已售 {product.sales}</span>
                  </div>
                </div>
                <div class="flex gap-3">
                   <a
                     href={product.link}
                     target="_blank"
                     rel="noopener noreferrer"
                     class="flex-1 inline-flex items-center justify-center gap-1.5 px-3 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-200 text-xs font-medium rounded-none type-small"
                   >
                     <Icon name="lucide:arrow-up-right" class="w-3.5 h-3.5" />
                     详情
                   </a>
                   <a
                     href={product.buyLink}
                     target="_blank"
                     rel="noopener noreferrer"
                     class="flex-1 inline-flex items-center justify-center gap-1.5 px-3 py-2 bg-blue-600 text-white hover:bg-blue-700 transition-all duration-200 text-xs font-medium rounded-none type-small"
                   >
                     <Icon name="lucide:shopping-cart" class="w-3.5 h-3.5" />
                     购买
                   </a>
                 </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
</style>
