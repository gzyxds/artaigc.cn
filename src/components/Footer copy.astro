    window.chat_iframe_src = 'https://www.cnai.art/chat/js-7c85889def3811e75402833418dcb807Dmdot'
    window.chat_iframe_width = '350px' //聊天窗口宽
    window.chat_iframe_height = '600px'  //聊天窗口高
