---
// 导入必要的组件或依赖
import FQA from './FQA.astro';

// 服务支持数据
const supports = [
  {
    title: "安装视频",
    desc: "从服务器配置到程序上线，提供完整的视频教程系统讲解，手把手教您快速完成部署。",
    icon: "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z",
    rotate: "rotate-3 group-hover:rotate-6",
    className: "lg:col-span-2",
    featured: true
  },
  {
    title: "资料支持",
    desc: "提供开发、接口、安装、使用文档全面支持，助用户轻松上手。",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
    rotate: "-rotate-3 group-hover:-rotate-6",
    className: "lg:col-span-1"
  },
  {
    title: "技术支持",
    desc: "拥有专业社区式论坛，实现交流、反馈、帮助、公告一体化服务。",
    icon: "M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z",
    rotate: "rotate-3 group-hover:rotate-6",
    className: "lg:col-span-1"
  },
  {
    title: "专属会员群",
    desc: "付费用户专享VIP会员群，享受技术售后在线答疑解惑服务。",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
    rotate: "-rotate-3 group-hover:-rotate-6",
    className: "lg:col-span-1"
  },
  {
    title: "1V1客服",
    desc: "添加客服微信，享受尊贵1V1服务，一手资料和更新及时掌握。",
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    rotate: "rotate-3 group-hover:rotate-6",
    className: "lg:col-span-2",
    featured: true
  },
  {
    title: "免费升级",
    desc: "承诺系统永久免费更新，让您随时获取最新功能和特性。",
    icon: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15",
    rotate: "-rotate-3 group-hover:-rotate-6",
    className: "lg:col-span-1"
  }
];
---

<style>
  @keyframes scan {
    0% {
      top: 0;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }
  .animate-scan {
    animation: scan 2.5s linear infinite;
  }
  .animation-delay-2000 {
    animation-delay: 1.25s;
  }
</style>

<section class="relative py-24 bg-white dark:bg-gray-900 overflow-hidden" id="contact">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-blue-50/50 dark:bg-blue-900/10 rounded-full blur-[100px] opacity-70"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-50/50 dark:bg-purple-900/10 rounded-full blur-[100px] opacity-70"></div>
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-[0.03]"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- 标题区域 -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <div class="inline-block px-4 py-1.5 mb-6 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 rounded-full border border-blue-100 dark:border-blue-800">
        联系我们
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white tracking-tight">
        随时为您提供帮助
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
        无论是业务咨询、技术支持还是合作洽谈，我们都期待与您的交流。
      </p>
    </div>

    <!-- Bento Grid 布局 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-24">

      <!-- 1. 核心联系 (大卡片) - 微信/公众号 -->
      <div class="lg:col-span-2 lg:row-span-2 bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-3xl p-8 relative overflow-hidden group hover:border-blue-200 dark:hover:border-blue-700 hover:shadow-2xl hover:shadow-blue-500/5 transition-all duration-300">
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-50 dark:bg-blue-900/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-blue-100 dark:group-hover:bg-blue-900/30 transition-colors"></div>

        <div class="flex flex-col h-full relative z-10">
          <div class="flex items-center gap-3 mb-8">
            <div class="w-10 h-10 rounded-xl bg-blue-50 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">扫码快速联系</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">微信扫一扫，直连人工客服</p>
            </div>
          </div>

          <div class="flex-1 flex flex-col sm:flex-row items-center justify-center gap-8 sm:gap-12">
            <!-- 微信客服二维码 -->
            <div class="flex flex-col items-center gap-4">
              <div class="relative w-40 h-40 bg-white p-3 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 group-hover:scale-105 transition-transform duration-500">
                <img src="/assets/qrcode.png" alt="微信客服" class="w-full h-full object-contain rounded-xl" />
                <!-- 扫描线动画 -->
                <div class="absolute inset-0 pointer-events-none overflow-hidden rounded-xl">
                  <div class="absolute top-0 left-0 w-full h-1 bg-blue-500/50 shadow-[0_0_20px_rgba(59,130,246,0.5)] animate-scan"></div>
                </div>
              </div>
              <div class="text-center">
                <p class="font-bold text-gray-900 dark:text-white">客服微信</p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">USERHLC</p>
              </div>
            </div>

            <!-- 公众号二维码 -->
            <div class="flex flex-col items-center gap-4">
              <div class="relative w-40 h-40 bg-white p-3 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 group-hover:scale-105 transition-transform duration-500 delay-75">
                <img src="/assets/wchatpay.png" alt="公众号" class="w-full h-full object-contain rounded-xl" />
                <!-- 扫描线动画 -->
                <div class="absolute inset-0 pointer-events-none overflow-hidden rounded-xl">
                  <div class="absolute top-0 left-0 w-full h-1 bg-blue-500/50 shadow-[0_0_20px_rgba(59,130,246,0.5)] animate-scan animation-delay-2000"></div>
                </div>
              </div>
              <div class="text-center">
                <p class="font-bold text-gray-900 dark:text-white">公众号</p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">最新资讯获取</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 2. 在线咨询 (简约风格) -->
      <div class="lg:col-span-2 bg-blue-50/50 dark:bg-gray-800/50 border border-blue-100 dark:border-gray-700 rounded-3xl p-8 relative overflow-hidden group hover:border-blue-200 dark:hover:border-blue-600 transition-all duration-300">
        <!-- 装饰背景 -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-100/50 dark:bg-blue-900/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

        <div class="relative z-10 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6 h-full">
          <div>
            <div class="flex items-center gap-2 mb-3 text-blue-600 dark:text-blue-400">
              <div class="p-1.5 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                  </svg>
              </div>
              <span class="font-bold text-sm tracking-wide uppercase">在线客服</span>
            </div>
            <h3 class="text-2xl font-bold mb-3 text-gray-900 dark:text-white">有疑问需要解答？</h3>
            <p class="text-gray-600 dark:text-gray-400 max-w-sm leading-relaxed">我们的专业团队在线为您提供即时帮助，解决您的任何技术或业务问题。</p>
          </div>
          <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 shadow-lg shadow-blue-500/20 shrink-0 group-hover:scale-105 transition-transform">
            立即咨询
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- 3. 电话咨询 -->
      <div class="bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-3xl p-6 hover:border-blue-200 dark:hover:border-blue-700 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300 group">
        <div class="w-12 h-12 rounded-xl bg-blue-50 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">电话咨询</h3>
        <p class="text-xl font-bold text-gray-900 dark:text-white mb-2 tracking-tight">400-123-4567</p>
        <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>周一至周五 9:00-18:00</span>
        </div>
      </div>

      <!-- 4. 邮件沟通 -->
      <div
        x-data="{ copied: false }"
        class="bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-3xl p-6 hover:border-blue-200 dark:hover:border-blue-700 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300 group cursor-pointer"
        @click="navigator.clipboard.writeText('support@artaigc.cn'); copied = true; setTimeout(() => copied = false, 2000)"
      >
        <div class="w-12 h-12 rounded-xl bg-blue-50 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="flex items-center justify-between mb-1">
          <h3 class="text-lg font-bold text-gray-900 dark:text-white">商务合作</h3>
          <div x-show="copied" x-transition class="text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded-full flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
             已复制
          </div>
          <div x-show="!copied" class="opacity-0 group-hover:opacity-100 transition-opacity">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
            </svg>
          </div>
        </div>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-3 break-all">support@artaigc.cn</p>
        <p class="text-xs text-gray-400 dark:text-gray-500">通常在 24 小时内回复</p>
      </div>

    </div>

    <!-- 服务支持区域 -->
    <div class="mb-16">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">我们的服务支持</h3>
        <p class="text-gray-600 dark:text-gray-300">
          我们提供全方位的服务支持，确保您的系统顺利运行
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {supports.map(item => (
          <div class={`group relative overflow-hidden bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 rounded-3xl p-6 hover:shadow-xl hover:shadow-blue-500/5 hover:-translate-y-1 transition-all duration-300 ${item.className}`}>
            <div class={`absolute inset-0 bg-gradient-to-br opacity-0 group-hover:opacity-100 transition-opacity duration-500 ${item.featured ? 'from-blue-50/80 via-white to-white dark:from-blue-900/20 dark:via-gray-800 dark:to-gray-800' : 'from-gray-50 via-transparent to-transparent dark:from-gray-700/30'}`}></div>

            <div class="relative z-10 h-full flex flex-col">
              <div class="flex items-start justify-between mb-4">
                <div class={`w-12 h-12 rounded-2xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 dark:text-blue-400 transform transition-transform duration-300 ${item.rotate} group-hover:scale-110 shadow-sm`}>
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon}></path>
                  </svg>
                </div>
                {item.featured && (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
                    推荐
                  </span>
                )}
              </div>

              <div class="mt-auto">
                <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{item.title}</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
                  {item.desc}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- 常见问题区域 -->
    <FQA />
  </div>
</section>

