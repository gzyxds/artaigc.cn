---
/**
 * Characteristic.astro
 *
 * 功能：展示平台的核心AI服务和特性
 * 布局：
 * 1. 顶部：6个核心功能卡片，采用 Bento Grid 布局（2行3列）
 *
 * 交互：
 * - 响应式设计：移动端垂直堆叠，桌面端网格布局
 * - 悬停效果：边框变色，微交互
 * - 暗黑模式：完全支持暗黑模式适配
 * - 风格：Bento Grid / Linear (直角、边框优先、极简)
 */
---

<!-- 智能交互体验 -->
<div class="py-12 sm:py-16 lg:py-24 relative overflow-hidden bg-white dark:bg-gray-950">
  <!-- 背景网格 -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.03] pointer-events-none"></div>

  <div class="container-custom relative z-10">
    <!-- 标题区域 -->
    <div class="text-center space-y-4 mb-12 sm:mb-16 lg:mb-20">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white font-display tracking-tight">
        不只是聊天伙伴，<br class="hidden sm:block" />更是学习工作好帮手
      </h2>
      <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto font-mono">
        // 让每个人的创意变成现实
      </p>
    </div>

    <!-- 核心功能网格 (Top Grid) -->
    <!--
      布局逻辑：
      - 移动端 (grid-cols-1): 垂直堆叠
      - 桌面端 (lg:grid-cols-6): 2行3列布局，每个卡片跨2列 (col-span-2)
    -->
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-6 lg:grid-rows-2">
      {[
        {
          title: "AI 聊天",
          description: "支持多种问答模型，具备联网功能，能够识别图片、文件和视频等多种内容。",
          icon: "chat",
          features: ["多模型支持", "联网功能", "多媒体识别", "实时响应"],
          colSpan: "lg:col-span-3",
        },
        {
          title: "AI 绘画",
          description: "对接最新的 Midjourney 模型，一键生成各种风格的图片和连续微调。",
          icon: "paint",
          features: ["风格多样", "连续微调", "高清输出", "快速生成"],
          colSpan: "lg:col-span-3",
        },
        {
          title: "AI 音视频",
          description: "支持多种音乐风格和视频生成，一键创作属于你的视听盛宴，支持灵活编辑。",
          icon: "video",
          features: ["音乐生成", "视频创作", "风格多样", "快速渲染"],
          colSpan: "lg:col-span-2",
        },
        {
          title: "AI 艺术二维码",
          description: "支持多种艺术二维码风格，允许上传已有二维码，轻松将其艺术化，打造独特的视觉效果。",
          icon: "qr",
          features: ["多种风格", "自定义上传", "艺术效果", "高清输出"],
          colSpan: "lg:col-span-2",
        },
        {
          title: "AI 证件照",
          description: "对接最新的 AI 模型，一键生成自定义模板的证件照，并支持多种分格的证件照。",
          icon: "photo",
          features: ["多种规格", "一键生成", "智能优化", "快速输出"],
          colSpan: "lg:col-span-2",
        }
      ].map((service) => (
        <div class={`group bento-card bento-card-hover ${service.colSpan} flex flex-col`}>
          <!-- 装饰角标 -->
          <div class="corner-marker corner-marker-tl opacity-0 group-hover:opacity-100"></div>
          <div class="corner-marker corner-marker-tr opacity-0 group-hover:opacity-100"></div>
          <div class="corner-marker corner-marker-bl opacity-0 group-hover:opacity-100"></div>
          <div class="corner-marker corner-marker-br opacity-0 group-hover:opacity-100"></div>

          <div class="p-6 sm:p-8 flex flex-col h-full relative z-10">
            <div class="flex items-start justify-between mb-6">
              <div class="w-12 h-12 flex items-center justify-center border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 rounded-none text-blue-600 dark:text-blue-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {service.icon === "chat" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>}
                  {service.icon === "paint" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>}
                  {service.icon === "qr" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>}
                  {service.icon === "music" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>}
                  {service.icon === "video" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>}
                  {service.icon === "photo" && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>}
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mt-2">{service.title}</h3>
            </div>

            <p class="text-sm text-gray-600 dark:text-gray-400 mb-8 leading-relaxed flex-grow font-mono border-l-2 border-gray-100 dark:border-gray-800 pl-4">
              {service.description}
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 mt-auto">
              {service.features.map(feature => (
                <div class="flex items-center text-xs text-gray-500 dark:text-gray-400 font-mono">
                  <span class="w-1.5 h-1.5 bg-blue-500 rounded-none mr-2"></span>
                  <span class="truncate">{feature}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- 移动端滑动指示器 -->
    <div class="mt-8 flex justify-center items-center gap-2 lg:hidden">
      <span class="w-2 h-2 rounded-none bg-blue-600"></span>
      <span class="w-2 h-2 rounded-none bg-gray-200 dark:bg-gray-700"></span>
      <span class="w-2 h-2 rounded-none bg-gray-200 dark:bg-gray-700"></span>
    </div>
  </div>
</div>
