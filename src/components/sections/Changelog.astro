---
import Layout from '../../layouts/Layout.astro';
import Header from '../common/Header.astro';
import Footer from '../common/Footer.astro';
import HeroSection from '../home/HeroSection.astro';

// 定义版本变更类型接口
interface VersionChanges {
  new?: string[];
  improvements?: string[];
  fixes?: string[];
}

// 定义版本信息接口
interface VersionInfo {
  version: string;
  date: string;
  title: string;
  changes: VersionChanges;
}

// 版本数据
const versions: VersionInfo[] = [
  {
    version: 'v2.5.0',
    date: '2023年7月15日',
    title: '查看演示',
    changes: {
      new: [
        '新增智能推荐系统',
        '新增多语言支持',
        '新增暗黑模式主题'
      ],
      improvements: [
        '优化推荐问题生成',
        '优化智能体发布页地址',
        '优化语音生成超时问题',
        '优化安装程序兼容性问题',
        'GoApi渠道更新请求域名',
        '优化创作模型全局指令字数限制'
      ],
      fixes: [
        '修复使用oss后语音失败问题',
        '修复豆包绘画尺寸无效问题',
        '修复绑定手机号判断异常问题',
        '修复未登录时分享报错',
        '修复AI视频生成失败次数较多问题'
      ]
    }
  },
  // ... 其他版本数据
];
---

<Layout title="更新日志 - 艺创AI">
  <Header />
  <main>
    <HeroSection
      title="产品更新日志"
      highlightText="更新日志"
      description="及时了解艺创AI的最新更新、改进和修复。"
    />

    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="container-custom">
        <!-- 搜索和筛选区域 -->
        <div class="max-w-4xl mx-auto mb-12">
          <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
            <div class="relative w-full md:w-96 group">
              <input
                type="text"
                placeholder="搜索更新内容..."
                class="w-full px-4 py-2 rounded-none border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 focus:outline-none focus:border-blue-500 dark:focus:border-blue-500 font-mono text-sm transition-colors"
              />
              <svg class="absolute right-3 top-2.5 h-5 w-5 text-gray-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <div class="flex gap-2">
              <button class="px-4 py-2 rounded-none bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 border border-blue-100 dark:border-blue-800 hover:border-blue-300 dark:hover:border-blue-700 transition-colors font-mono text-sm">
                订阅更新
              </button>
              <button class="px-4 py-2 rounded-none border border-gray-200 dark:border-gray-800 text-gray-600 dark:text-gray-400 hover:border-gray-400 dark:hover:border-gray-600 hover:text-gray-900 dark:hover:text-gray-200 transition-colors font-mono text-sm">
                版本对比
              </button>
            </div>
          </div>
        </div>

        <!-- 版本列表 -->
        <div class="max-w-4xl mx-auto space-y-16">
          {versions.map((version) => (
            <div class="relative group">
              {/* 版本时间线 */}
              <div class="absolute left-0 top-0 bottom-0 w-px bg-gray-200 dark:bg-gray-800"></div>

              <div class="relative pl-8">
                {/* 版本标记 - 方形节点 */}
                <div class="absolute left-0 -translate-x-1/2 w-3 h-3 bg-white dark:bg-gray-900 border border-blue-500 transform rotate-45 group-hover:scale-125 transition-transform duration-300"></div>

                {/* 版本信息 */}
                <div class="flex flex-col md:flex-row md:items-center gap-4 mb-6">
                  <div class="flex items-center gap-3">
                    <span class="inline-block px-3 py-1 rounded-none bg-blue-600 text-white font-mono text-sm">
                      {version.version}
                    </span>
                    <span class="text-gray-500 dark:text-gray-400 font-mono text-sm">{version.date}</span>
                  </div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{version.title}</h2>
                </div>

                {/* 更新内容 */}
                <div class="space-y-6">
                  {version.changes.new && version.changes.new.length > 0 && (
                    <div class="border border-green-200 dark:border-green-900/50 bg-green-50/50 dark:bg-green-900/10 p-5 rounded-none relative">
                      <div class="absolute top-0 left-0 w-1 h-full bg-green-500"></div>
                      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <span class="w-6 h-6 flex items-center justify-center bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-400 mr-3 rounded-none">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                          </svg>
                        </span>
                        新功能
                      </h3>
                      <ul class="space-y-3 pl-2">
                        {version.changes.new.map((item: string) => (
                          <li class="flex items-start group/item">
                            <span class="text-green-500 mr-3 mt-1.5 w-1.5 h-1.5 bg-green-500 rounded-none transform rotate-45 group-hover/item:rotate-0 transition-transform"></span>
                            <span class="text-gray-700 dark:text-gray-300 leading-relaxed">{item}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {version.changes.improvements && version.changes.improvements.length > 0 && (
                    <div class="border border-blue-200 dark:border-blue-900/50 bg-blue-50/50 dark:bg-blue-900/10 p-5 rounded-none relative">
                      <div class="absolute top-0 left-0 w-1 h-full bg-blue-500"></div>
                      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <span class="w-6 h-6 flex items-center justify-center bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-400 mr-3 rounded-none">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                          </svg>
                        </span>
                        改进
                      </h3>
                      <ul class="space-y-3 pl-2">
                        {version.changes.improvements.map((item: string) => (
                          <li class="flex items-start group/item">
                            <span class="text-blue-500 mr-3 mt-1.5 w-1.5 h-1.5 bg-blue-500 rounded-none transform rotate-45 group-hover/item:rotate-0 transition-transform"></span>
                            <span class="text-gray-700 dark:text-gray-300 leading-relaxed">{item}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {version.changes.fixes && version.changes.fixes.length > 0 && (
                    <div class="border border-red-200 dark:border-red-900/50 bg-red-50/50 dark:bg-red-900/10 p-5 rounded-none relative">
                      <div class="absolute top-0 left-0 w-1 h-full bg-red-500"></div>
                      <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <span class="w-6 h-6 flex items-center justify-center bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-400 mr-3 rounded-none">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                        </span>
                        错误修复
                      </h3>
                      <ul class="space-y-3 pl-2">
                        {version.changes.fixes.map((item: string) => (
                          <li class="flex items-start group/item">
                            <span class="text-red-500 mr-3 mt-1.5 w-1.5 h-1.5 bg-red-500 rounded-none transform rotate-45 group-hover/item:rotate-0 transition-transform"></span>
                            <span class="text-gray-700 dark:text-gray-300 leading-relaxed">{item}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- 加载更多按钮 -->
        <div class="max-w-4xl mx-auto mt-16 text-center">
          <button class="inline-flex items-center px-8 py-3 rounded-none border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-500 bg-white dark:bg-gray-800 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300 font-medium text-sm">
            加载更多更新
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v10.586l3.293-3.293a1 1 0 011.414 1.414l-5 5a1 1 0 01-1.414 0l-5-5a1 1 0 111.414-1.414L9 14.586V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
