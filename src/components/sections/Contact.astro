---
// 导入必要的组件或依赖
import FQA from './FQA.astro';
import { Icon } from 'astro-icon/components';

// 服务支持数据
const supports = [
  {
    title: "安装视频",
    desc: "从服务器配置到程序上线，提供完整的视频教程系统讲解，手把手教您快速完成部署。",
    icon: "lucide:video",
    rotate: "group-hover:rotate-0", // 移除旋转，保持线性稳定
    className: "lg:col-span-2",
    featured: true
  },
  {
    title: "资料支持",
    desc: "提供开发、接口、安装、使用文档全面支持，助用户轻松上手。",
    icon: "lucide:file-text",
    rotate: "group-hover:rotate-0",
    className: "lg:col-span-1"
  },
  {
    title: "技术支持",
    desc: "拥有专业社区式论坛，实现交流、反馈、帮助、公告一体化服务。",
    icon: "lucide:users",
    rotate: "group-hover:rotate-0",
    className: "lg:col-span-1"
  },
  {
    title: "专属会员群",
    desc: "付费用户专享VIP会员群，享受技术售后在线答疑解惑服务。",
    icon: "lucide:crown",
    rotate: "group-hover:rotate-0",
    className: "lg:col-span-1"
  },
  {
    title: "1V1客服",
    desc: "添加客服微信，享受尊贵1V1服务，一手资料和更新及时掌握。",
    icon: "lucide:headset",
    rotate: "group-hover:rotate-0",
    className: "lg:col-span-2",
    featured: true
  },
  {
    title: "免费升级",
    desc: "承诺系统永久免费更新，让您随时获取最新功能和特性。",
    icon: "lucide:upload-cloud",
    rotate: "group-hover:rotate-0",
    className: "lg:col-span-1"
  }
];
---

<style>
  @keyframes scan {
    0% {
      top: 0;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }
  .animate-scan {
    animation: scan 2.5s linear infinite;
  }
  .animation-delay-2000 {
    animation-delay: 1.25s;
  }
</style>

<section class="relative py-24 bg-white dark:bg-gray-900 overflow-hidden" id="contact">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- 替换为线性网格背景 -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808008_1px,transparent_1px),linear-gradient(to_bottom,#80808008_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-white via-transparent to-white dark:from-gray-900 dark:via-transparent dark:to-gray-900"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- 标题区域 -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <div class="inline-block px-4 py-1.5 mb-6 type-small font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-none">
        联系我们
      </div>
      <h2 class="type-display font-bold mb-6 text-gray-900 dark:text-white tracking-tight">
        随时为您提供帮助
      </h2>
      <p class="type-body text-gray-600 dark:text-gray-300 leading-relaxed">
        无论是业务咨询、技术支持还是合作洽谈，我们都期待与您的交流。
      </p>
    </div>

    <!-- Bento Grid 布局 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-24">

      <!-- 1. 核心联系 (大卡片) - 微信/公众号 -->
      <div class="bento-card lg:col-span-2 lg:row-span-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-none p-8 relative overflow-hidden group hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-300">
        <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
        <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

        <!-- 背景装饰 -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-transparent dark:from-blue-900/10 opacity-50"></div>
        <div class="flex flex-col h-full relative z-10">
          <div class="flex items-start gap-3 mb-8">
            <div class="w-10 h-10 rounded-none bg-blue-50 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 border border-blue-100 dark:border-blue-800 shrink-0 mt-0.5">
              <Icon name="lucide:qr-code" class="w-5 h-5" />
            </div>
            <div>
              <h3 class="type-heading font-bold text-gray-900 dark:text-white leading-tight mb-1">扫码快速联系</h3>
              <p class="type-small text-gray-500 dark:text-gray-400 leading-snug">微信扫一扫，直连人工客服</p>
            </div>
          </div>

          <div class="flex-1 flex flex-row items-center justify-center gap-6 sm:gap-12">
            <!-- 微信客服二维码 -->
            <div class="flex flex-col items-center gap-3 sm:gap-4 flex-1 sm:flex-initial w-full sm:w-auto">
              <div class="relative w-full aspect-square max-w-[180px] sm:w-48 sm:h-48 sm:max-w-none bg-white p-2 rounded-none shadow-none border border-gray-100 dark:border-gray-800 group-hover:border-gray-100 dark:group-hover:border-gray-800 transition-colors duration-300 mx-auto">
                <img src="/assets/qrcode.png" alt="微信客服" class="w-full h-full object-contain" />
                <!-- 扫描线动画 -->
                <div class="absolute inset-0 pointer-events-none overflow-hidden">
                  <div class="absolute top-0 left-0 w-full h-0.5 bg-blue-500 shadow-[0_0_15px_rgba(59,130,246,0.8)] animate-scan"></div>
                </div>
              </div>
              <div class="text-center w-full">
                <p class="font-bold text-gray-900 dark:text-white type-body text-sm sm:text-base">客服微信</p>
                <p class="type-small text-gray-500 dark:text-gray-400 mt-1 bg-gray-50 dark:bg-gray-800 px-2 py-0.5 border border-gray-100 dark:border-gray-800 truncate max-w-full">USERHLC</p>
              </div>
            </div>

            <!-- 公众号二维码 -->
            <div class="flex flex-col items-center gap-3 sm:gap-4 flex-1 sm:flex-initial w-full sm:w-auto">
              <div class="relative w-full aspect-square max-w-[180px] sm:w-48 sm:h-48 sm:max-w-none bg-white p-2 rounded-none shadow-none border border-gray-100 dark:border-gray-800 group-hover:border-gray-100 dark:group-hover:border-gray-800 transition-colors duration-300 mx-auto">
                <img src="/assets/wchatpay.png" alt="公众号" class="w-full h-full object-contain" />
                <!-- 扫描线动画 -->
                <div class="absolute inset-0 pointer-events-none overflow-hidden">
                  <div class="absolute top-0 left-0 w-full h-0.5 bg-blue-500 shadow-[0_0_15px_rgba(59,130,246,0.8)] animate-scan animation-delay-2000"></div>
                </div>
              </div>
              <div class="text-center w-full">
                <p class="font-bold text-gray-900 dark:text-white type-body text-sm sm:text-base">公众号</p>
                <p class="type-small text-gray-500 dark:text-gray-400 mt-1 bg-gray-50 dark:bg-gray-800 px-2 py-0.5 border border-gray-100 dark:border-gray-800 truncate max-w-full">最新资讯获取</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 2. 在线咨询 (简约风格) -->
      <div class="bento-card lg:col-span-2 bg-blue-50/30 dark:bg-blue-900/10 border border-blue-100 dark:border-blue-900/30 rounded-none p-8 relative overflow-hidden group hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-300">
        <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
        <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

        <div class="relative z-10 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6 h-full">
          <div>
            <div class="flex items-center gap-2 mb-3 text-blue-600 dark:text-blue-400">
              <div class="p-1.5 bg-blue-100 dark:bg-blue-900/30 rounded-none border border-blue-200 dark:border-blue-800">
                  <Icon name="lucide:message-circle" class="w-5 h-5" />
              </div>
              <span class="font-bold type-small tracking-wide uppercase">在线客服</span>
            </div>
            <h3 class="type-heading font-bold mb-3 text-gray-900 dark:text-white">有疑问需要解答？</h3>
            <p class="text-gray-600 dark:text-gray-400 max-w-sm leading-relaxed type-small">我们的专业团队在线为您提供即时帮助，解决您的任何技术或业务问题。</p>
          </div>
          <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-none hover:bg-blue-700 transition-colors border border-transparent type-body">
            立即咨询
            <Icon name="lucide:arrow-right" class="w-4 h-4 ml-2" />
          </a>
        </div>
      </div>

      <!-- 3. 电话咨询 -->
      <div class="bento-card bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-none p-6 hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-300 group">
        <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none opacity-0 group-hover:opacity-100 transition-opacity"></div>

        <div class="w-12 h-12 rounded-none bg-gray-50 dark:bg-gray-700 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 border border-gray-100 dark:border-gray-600 group-hover:bg-blue-50 dark:group-hover:bg-blue-900/20 group-hover:border-blue-100 dark:group-hover:border-blue-800 transition-colors">
          <Icon name="lucide:phone" class="w-6 h-6" />
        </div>
        <h3 class="type-heading font-bold text-gray-900 dark:text-white mb-1">电话咨询</h3>
        <p class="type-heading font-bold text-gray-900 dark:text-white mb-2 tracking-tight">400-123-4567</p>
        <div class="flex items-center gap-2 type-small text-gray-500 dark:text-gray-400 border-t border-gray-100 dark:border-gray-700 pt-2">
          <Icon name="lucide:clock" class="w-3 h-3" />
          <span>周一至周五 9:00-18:00</span>
        </div>
      </div>

      <!-- 4. 邮件沟通 -->
      <div
        x-data="{ copied: false }"
        class="bento-card bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-none p-6 hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-300 group cursor-pointer"
        @click="navigator.clipboard.writeText('support@artaigc.cn'); copied = true; setTimeout(() => copied = false, 2000)"
      >
        <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none opacity-0 group-hover:opacity-100 transition-opacity"></div>

        <div class="w-12 h-12 rounded-none bg-gray-50 dark:bg-gray-700 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 border border-gray-100 dark:border-gray-600 group-hover:bg-blue-50 dark:group-hover:bg-blue-900/20 group-hover:border-blue-100 dark:group-hover:border-blue-800 transition-colors">
          <Icon name="lucide:mail" class="w-6 h-6" />
        </div>
        <div class="flex items-center justify-between mb-1">
          <h3 class="type-heading font-bold text-gray-900 dark:text-white">商务合作</h3>
          <div x-show="copied" x-transition class="type-small text-blue-600 bg-blue-50 px-2 py-1 rounded-none flex items-center gap-1 border border-blue-100">
            <Icon name="lucide:check" class="w-3 h-3" />
             已复制
          </div>
          <div x-show="!copied" class="opacity-0 group-hover:opacity-100 transition-opacity">
            <Icon name="lucide:copy" class="w-4 h-4 text-gray-400" />
          </div>
        </div>
        <p class="type-small text-gray-500 dark:text-gray-400 mb-3 break-all">support@artaigc.cn</p>
        <p class="type-small text-gray-400 dark:text-gray-500 border-t border-gray-100 dark:border-gray-700 pt-2">通常在 24 小时内回复</p>
      </div>

    </div>

    <!-- 服务支持区域 -->
    <div class="mb-16">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h3 class="type-heading font-bold text-gray-900 dark:text-white mb-4">我们的服务支持</h3>
        <p class="text-gray-600 dark:text-gray-300 type-body">
          我们提供全方位的服务支持，确保您的系统顺利运行
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {supports.map(item => (
          <div class={`bento-card group relative overflow-hidden bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-none p-6 hover:border-blue-500 dark:hover:border-blue-500 transition-all duration-300 ${item.className}`}>
            <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none opacity-0 group-hover:opacity-100 transition-opacity"></div>

            <div class={`absolute inset-0 bg-gradient-to-br opacity-0 group-hover:opacity-100 transition-opacity duration-500 ${item.featured ? 'from-blue-50/50 via-transparent to-transparent dark:from-blue-900/10' : 'from-gray-50 via-transparent to-transparent dark:from-gray-700/10'}`}></div>

            <div class="relative z-10 h-full flex flex-col">
              <div class="flex items-start justify-between mb-4">
                <div class={`w-12 h-12 rounded-none bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 dark:text-blue-400 transform transition-transform duration-300 border border-blue-100 dark:border-blue-800 ${item.rotate}`}>
                  <Icon name={item.icon} class="w-6 h-6" />
                </div>
                {item.featured && (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-none type-small font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 border border-blue-200 dark:border-blue-800">
                    推荐
                  </span>
                )}
              </div>

              <div class="mt-auto">
                <h4 class="type-heading font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{item.title}</h4>
                <p class="type-small text-gray-600 dark:text-gray-400 leading-relaxed">
                  {item.desc}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    </div>
  </div>
</section>

<!-- 常见问题区域 -->
<FQA />
