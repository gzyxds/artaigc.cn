---
/**
 * AiModule组件 - AI聊天绘画系统展示区域
 * 采用简洁的模拟面设计风格，参考HumanHero.astro的设计理念
 * 特点：视觉统一性、层次清晰、交互友好、响应式设计、暗黑模式兼容
 *
 * 功能包括：
 * 1. 展示AI聊天绘画系统的主要标题和简介
 * 2. 提供产品特性标签展示
 * 3. 提供行动按钮（联系客服、查看演示）
 * 4. 展示产品功能卡片
 * 5. 响应式设计，适配不同屏幕尺寸
 * 6. 支持暗黑模式
 * 7. 集成二维码弹窗功能
 */
import QRModal from '../QRModal.astro';

interface Feature {
  name: string;
}

interface Card {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  { name: '智能问答' },
  { name: '全能助手' },
  { name: '智能绘画' },
  { name: '模型创作' },
  { name: 'PHP&Java' }
];

const topTags: Feature[] = [
  { name: 'AI数字人' },
  { name: '企业知识库' },
  { name: '智能绘画' },
  { name: '论文助手' }
];

const cards: Card[] = [
  {
    icon: 'code',
    title: '双语言版本',
    description: 'PHP/Java双版本支持'
  },
  {
    title: '私有部署',
    description: '安全可控的私有化部署',
    icon: 'cloud_download'
  },
  {
    title: '专业团队',
    description: '一对一技术支持',
    icon: 'groups'
  },
  {
    title: '开源方案',
    description: '灵活定制，售后无忧',
    icon: 'star'
  }
];
---

<section class="relative py-20 md:py-28 bg-white dark:bg-gray-900 overflow-hidden">
  <!-- AI聊天绘画背景装饰 -->
  <div class="absolute inset-0">
    <!-- 基础光晕效果 -->
    <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-[#0055ff]/15 rounded-none blur-3xl opacity-60"></div>
    <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-[#0055ff]/10 rounded-none blur-3xl opacity-60"></div>

    <!-- 聊天气泡装饰 -->
    <div class="absolute top-16 right-24 opacity-20">
      <div class="relative">
        <!-- 主聊天气泡 -->
        <div class="w-24 h-16 bg-[#0055ff]/30 rounded-none relative">
          <div class="absolute inset-2 flex items-center justify-center">
            <div class="w-2 h-2 bg-[#0055ff] rounded-none mr-1 animate-pulse"></div>
            <div class="w-2 h-2 bg-[#0055ff] rounded-none mr-1 animate-pulse" style="animation-delay: 0.2s"></div>
            <div class="w-2 h-2 bg-[#0055ff] rounded-none animate-pulse" style="animation-delay: 0.4s"></div>
          </div>
        </div>
        <!-- 小聊天气泡 -->
        <div class="absolute -bottom-4 -right-2 w-16 h-10 bg-[#0055ff]/20 rounded-none"></div>
      </div>
    </div>

    <!-- 画笔和调色板装饰 -->
    <div class="absolute bottom-20 left-20 w-32 h-32 opacity-25">
      <svg viewBox="0 0 128 128" class="w-full h-full">
        <!-- 调色板 -->
        <ellipse cx="40" cy="70" rx="35" ry="25" fill="none" stroke="#0055ff" stroke-width="3" opacity="0.6" />
        <!-- 颜色点 -->
        <circle cx="25" cy="60" r="4" fill="#0055ff" opacity="0.8" />
        <circle cx="40" cy="55" r="4" fill="#0055ff" opacity="0.6" />
        <circle cx="55" cy="60" r="4" fill="#0055ff" opacity="0.7" />
        <circle cx="30" cy="75" r="4" fill="#0055ff" opacity="0.5" />
        <circle cx="50" cy="80" r="4" fill="#0055ff" opacity="0.9" />
        <!-- 画笔 -->
        <line x1="80" y1="30" x2="95" y2="15" stroke="#0055ff" stroke-width="3" stroke-linecap="round" opacity="0.7" />
        <line x1="75" y1="35" x2="80" y2="30" stroke="#0055ff" stroke-width="4" stroke-linecap="round" opacity="0.8" />
        <circle cx="73" cy="37" r="2" fill="#0055ff" opacity="0.6" />
      </svg>
    </div>

    <!-- 创意火花效果 -->
    <div class="absolute top-1/3 left-1/4 opacity-30">
      <div class="relative w-16 h-16">
        <div class="absolute top-0 left-1/2 w-1 h-4 bg-[#0055ff] transform -translate-x-1/2 animate-pulse"></div>
        <div class="absolute top-1/2 right-0 w-4 h-1 bg-[#0055ff] transform -translate-y-1/2 animate-pulse" style="animation-delay: 0.3s"></div>
        <div class="absolute bottom-0 left-1/2 w-1 h-4 bg-[#0055ff] transform -translate-x-1/2 animate-pulse" style="animation-delay: 0.6s"></div>
        <div class="absolute top-1/2 left-0 w-4 h-1 bg-[#0055ff] transform -translate-y-1/2 animate-pulse" style="animation-delay: 0.9s"></div>
        <!-- 中心点 -->
        <div class="absolute top-1/2 left-1/2 w-3 h-3 bg-[#0055ff] rounded-none transform -translate-x-1/2 -translate-y-1/2 animate-pulse"></div>
      </div>
    </div>

    <!-- 绘画工具图标 -->
    <div class="absolute top-20 left-16 opacity-20">
      <svg viewBox="0 0 64 64" class="w-16 h-16">
        <!-- 铅笔 -->
        <line x1="10" y1="54" x2="54" y2="10" stroke="#0055ff" stroke-width="3" stroke-linecap="round" />
        <polygon points="8,56 12,52 16,56 12,60" fill="#0055ff" opacity="0.6" />
        <polygon points="50,8 54,12 58,8 54,4" fill="#0055ff" opacity="0.8" />
      </svg>
    </div>

    <!-- 对话框连接线 -->
    <div class="absolute top-1/2 right-16 w-20 h-1 opacity-25">
      <div class="w-full h-full bg-gradient-to-r from-transparent via-[#0055ff] to-transparent animate-pulse"></div>
    </div>

    <!-- AI创作文字装饰 -->
    <div class="absolute bottom-16 right-20 text-[#0055ff] opacity-15 font-mono text-xs leading-tight">
      AI绘画<br/>智能创作<br/>聊天对话<br/>模型生成
    </div>

    <!-- 装饰圆点 -->
    <div class="absolute top-12 left-12 w-3 h-3 bg-[#0055ff] rounded-none opacity-40 animate-pulse"></div>
    <div class="absolute top-16 left-8 w-2 h-2 bg-[#0055ff] rounded-none opacity-30 animate-pulse" style="animation-delay: 0.5s"></div>
    <div class="absolute bottom-12 right-12 w-2 h-2 bg-[#0055ff] rounded-none opacity-35 animate-pulse" style="animation-delay: 1s"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-8">
        <!-- 主标题 -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold">
            <span class="text-[#0055ff] block mb-2">艺创AI</span>
            <span class="text-gray-900 dark:text-white text-2xl sm:text-3xl lg:text-4xl font-medium">
              聊天绘画系统
            </span>
          </h1>

          <!-- 简洁装饰线 -->
          <div class="w-20 h-1 bg-[#0055ff] mx-auto lg:mx-0 rounded-none"></div>
        </div>

        <!-- 描述文本 -->
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-xl mx-auto lg:mx-0">
          AI智能对话、AI创作模型、AI绘画、分销推广、会员套餐、充值套餐、卡密兑换、模型计费、会员回流优惠券等丰富的营销功能
        </p>

        <!-- 特性标签 - 统一蓝色调 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3">
          {features.map((feature) => (
            <span class="px-4 py-2 bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-none text-sm font-medium hover:bg-[#0055ff]/20 transition-colors">
              {feature.name}
            </span>
          ))}
        </div>

        <!-- 按钮组 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a
            href="javascript:void(0)"
            onclick="document.getElementById('qr-modal').classList.add('active')"
            class="px-8 py-3 bg-[#0055ff] hover:bg-[#0044dd] text-white font-semibold rounded-none border border-[#0055ff] shadow-md hover:shadow-lg transition-all duration-200 flex items-center justify-center"
            aria-label="联系客服"
          >
            <span>联系客服</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>

          <a
            href="/demo"
            class="px-8 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-none border border-gray-300 dark:border-gray-600 shadow-md hover:shadow-lg hover:border-[#0055ff] transition-all duration-200 flex items-center justify-center"
            aria-label="查看演示"
          >
            <span>查看演示</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- 右侧展示区 - 简洁模拟面设计 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white dark:bg-gray-800 rounded-none border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 sm:p-6 lg:p-8">

          <!-- 顶部标签区 -->
          <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-6 sm:mb-8">
            {topTags.map((tag) => (
              <span class="px-2 sm:px-3 py-1 sm:py-1.5 text-xs sm:text-sm bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-none">
                {tag.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片网格 -->
          <div class="grid grid-cols-2 gap-3 sm:gap-4">
            {cards.map((card) => (
              <div class="bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-none p-3 sm:p-4 lg:p-6 hover:shadow-md hover:border-[#0055ff]/30 transition-all duration-200">
                <!-- 图标区域 -->
                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-[#0055ff]/10 rounded-none flex items-center justify-center mb-2 sm:mb-4">
                  <i class="material-icons text-[#0055ff] text-lg sm:text-xl">
                    {card.icon}
                  </i>
                </div>
                <!-- 内容区域 -->
                <div class="space-y-1 sm:space-y-2">
                  <h4 class="font-semibold text-gray-900 dark:text-white text-sm sm:text-base">{card.title}</h4>
                  <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{card.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 底部分割线 -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="h-px bg-gradient-to-r from-transparent via-gray-300 dark:via-gray-600 to-transparent"></div>
    </div>
  </div>

  <!-- QR Modal组件 -->
  <QRModal
    qrCodeUrl="/assets/qrcode.png"
    title="联系客服"
    description="扫描二维码添加客服微信"
  />
</section>

<QRModal
  qrCodeUrl="/assets/wchatpay.png"
  title="联系客服"
  description="扫描关注公众号"
/>
