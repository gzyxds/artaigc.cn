---
// 顶部标签数据
const topTags = [
  { name: "AI知识库" },
  { name: "智能问答" },
  { name: "文档管理" },
  { name: "向量搜索" },
  { name: "多格式支持" }
];

// 功能卡片数据
const cards = [
  {
    icon: "quiz",
    title: "智能问答",
    description: "支持自然语言问答，快速获取准确答案"
  },
  {
    icon: "library_books",
    title: "文档管理",
    description: "支持多种格式文档导入和管理"
  },
  {
    icon: "search",
    title: "向量搜索",
    description: "基于向量化技术的智能搜索引擎"
  },
  {
    icon: "smart_toy",
    title: "机器人广场",
    description: "丰富的AI机器人模板和应用"
  }
];
---

<section class="relative py-16 sm:py-20 md:py-28 lg:py-36 flex items-center bg-white dark:bg-gray-900 overflow-hidden border-b border-gray-200 dark:border-gray-800">
  <!-- 背景装饰 - 极简网格 -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
    <div class="absolute left-0 right-0 top-0 -z-10 m-auto h-[310px] w-[310px] rounded-full bg-blue-500 opacity-20 blur-[100px] dark:opacity-10"></div>
  </div>

  <div class="container-custom relative">
    <div class="grid lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-20 items-center">
      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-6 sm:space-y-8 lg:space-y-10">
        <div class="relative">
          <!-- 装饰性角标 -->
          <div class="hidden lg:block absolute -top-6 -left-6 w-4 h-4 border-t-2 border-l-2 border-blue-600 dark:border-blue-400"></div>

          <h1 class="relative text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-5 sm:mb-7 tracking-tight">
            艺创AI
            <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-4 text-gray-500 dark:text-gray-400 font-normal">
              全能AI知识库系统
            </span>
          </h1>
        </div>

        <p class="text-base sm:text-lg text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 max-w-2xl mx-auto lg:mx-0 font-mono leading-relaxed">
          支持问答式和文档式知识库，能够导入txt、doc、docx、pdf、md等多种格式文档。导入数据完成向量化训练后，用户提问即可进行向量化搜索
        </p>

        <!-- 特性标签 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3 mb-14">
            <span class="px-3 py-1.5 rounded-none bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 text-xs font-mono border border-blue-100 dark:border-blue-800">AI智能对话</span>
            <span class="px-3 py-1.5 rounded-none bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-300 text-xs font-mono border border-gray-200 dark:border-gray-700">知识库应用</span>
            <span class="px-3 py-1.5 rounded-none bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 text-xs font-mono border border-blue-100 dark:border-blue-800">机器人广场</span>
            <span class="px-3 py-1.5 rounded-none bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-300 text-xs font-mono border border-gray-200 dark:border-gray-700">知识库训练</span>
            <span class="px-3 py-1.5 rounded-none bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 text-xs font-mono border border-blue-100 dark:border-blue-800">发布网页/js/api</span>
        </div>


        <!-- CTA按钮 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a href="javascript:void(0)" onclick="window.dispatchEvent(new CustomEvent('showQRCodeModal', { detail: { title: '联系客服', description: '扫描二维码添加客服微信', qrCodeUrl: '/assets/qrcode.png' } }))" class="group px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-none transition-all duration-300 flex items-center justify-center">
            <span>联系客服</span>
            <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7-7 7"></path>
            </svg>
          </a>

          <a href="/demo" class="group px-8 py-3 bg-transparent text-gray-900 dark:text-white font-medium rounded-none border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 flex items-center justify-center">
            <span>查看演示</span>
            <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </div>

       <!-- 右侧展示区 - Bento Grid 风格 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white dark:bg-gray-900 rounded-none border border-gray-200 dark:border-gray-800 p-6 sm:p-8 relative">
          <!-- 装饰性角标 -->
          <div class="absolute -top-1 -right-1 w-3 h-3 border-t-2 border-r-2 border-blue-500"></div>
          <div class="absolute -bottom-1 -left-1 w-3 h-3 border-b-2 border-l-2 border-blue-500"></div>

          <!-- 顶部标签区 -->
          <div class="flex flex-wrap gap-2 mb-8 border-b border-gray-100 dark:border-gray-800 pb-6">
            {topTags.map((tag) => (
              <span class="px-2 py-1 text-xs font-mono bg-blue-50 dark:bg-blue-900/10 text-blue-600 dark:text-blue-400 border border-blue-100 dark:border-blue-800 rounded-none">
                {tag.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片网格 -->
          <div class="grid grid-cols-2 gap-4">
            {cards.map((card) => (
              <div class="group bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-700 rounded-none p-5 hover:border-blue-500 dark:hover:border-blue-500 transition-colors duration-300">
                <!-- 图标区域 -->
                <div class="w-10 h-10 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-none flex items-center justify-center mb-4 group-hover:bg-blue-50 dark:group-hover:bg-blue-900/20 transition-colors">
                  <i class="material-icons text-gray-700 dark:text-gray-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 text-xl transition-colors">
                    {card.icon}
                  </i>
                </div>
                <!-- 内容区域 -->
                <div class="space-y-2">
                  <h4 class="font-bold text-gray-900 dark:text-white text-sm">{card.title}</h4>
                  <p class="text-xs text-gray-500 dark:text-gray-400 leading-relaxed line-clamp-2">{card.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
