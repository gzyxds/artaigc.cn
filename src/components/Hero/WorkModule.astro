---
import QRModal from '../QRModal.astro';

// 顶部标签数据
const topTags = [
  { name: "AI知识库" },
  { name: "智能问答" },
  { name: "文档管理" },
  { name: "向量搜索" },
  { name: "多格式支持" }
];

// 功能卡片数据
const cards = [
  {
    icon: "quiz",
    title: "智能问答",
    description: "支持自然语言问答，快速获取准确答案"
  },
  {
    icon: "library_books",
    title: "文档管理",
    description: "支持多种格式文档导入和管理"
  },
  {
    icon: "search",
    title: "向量搜索",
    description: "基于向量化技术的智能搜索引擎"
  },
  {
    icon: "smart_toy",
    title: "机器人广场",
    description: "丰富的AI机器人模板和应用"
  }
];
---

<section class="relative py-16 sm:py-20 md:py-28 lg:py-36 flex items-center bg-gradient-to-br from-gray-50 to-blue-50/30 dark:from-gray-900 dark:to-gray-800 overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0">
    <div class="absolute top-0 -right-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-[#05f]/30 dark:bg-[#05f]/20 rounded-none blur-3xl"></div>
    <div class="absolute bottom-0 -left-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-[#05f]/20 dark:bg-[#05f]/15 rounded-none blur-3xl"></div>

    <!-- AI知识库背景元素 -->
    <!-- 知识库图标 -->
    <div class="absolute top-1/4 left-1/4 w-16 h-16 opacity-10 dark:opacity-20">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-[#05f] animate-pulse">
        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
      </svg>
    </div>

    <!-- 搜索图标 -->
    <div class="absolute top-1/3 right-1/4 w-12 h-12 opacity-15 dark:opacity-25">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-[#05f] animate-bounce">
        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
      </svg>
    </div>

    <!-- 数据库图标 -->
    <div class="absolute bottom-1/3 left-1/3 w-14 h-14 opacity-12 dark:opacity-22">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-[#05f]">
        <path d="M12 3C7.58 3 4 4.79 4 7s3.58 4 8 4 8-1.79 8-4-3.58-4-8-4zM4 9v3c0 2.21 3.58 4 8 4s8-1.79 8-4V9c0 2.21-3.58 4-8 4s-8-1.79-8-4zM4 16v3c0 2.21 3.58 4 8 4s8-1.79 8-4v-3c0 2.21-3.58 4-8 4s-8-1.79-8-4z"/>
      </svg>
    </div>

    <!-- 问答气泡 -->
    <div class="absolute top-2/3 right-1/3 w-10 h-10 opacity-20 dark:opacity-30">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-[#05f] animate-pulse">
        <path d="M21 6h-2v9H6v2c0 .55.45 1 1 1h11l4 4V7c0-.55-.45-1-1-1zm-4 6V3c0-.55-.45-1-1-1H3c-.55 0-1 .45-1 1v14l4-4h11c.55 0 1-.45 1-1z"/>
      </svg>
    </div>

    <!-- 向量连接线 -->
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 opacity-8 dark:opacity-15">
      <svg viewBox="0 0 100 100" class="w-full h-full text-[#05f]">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)"/>
        <circle cx="20" cy="20" r="2" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="80" cy="30" r="2" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="50" cy="70" r="2" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <line x1="20" y1="20" x2="80" y2="30" stroke="currentColor" stroke-width="1" opacity="0.4"/>
        <line x1="80" y1="30" x2="50" y2="70" stroke="currentColor" stroke-width="1" opacity="0.4"/>
        <line x1="50" y1="70" x2="20" y2="20" stroke="currentColor" stroke-width="1" opacity="0.4"/>
      </svg>
    </div>

    <!-- AI知识库文字装饰 -->
    <div class="absolute bottom-1/4 right-1/5 opacity-5 dark:opacity-10">
      <span class="text-[#05f] text-xs font-mono transform rotate-12">Knowledge Base</span>
    </div>

    <!-- 装饰脉动点 -->
    <div class="absolute top-1/5 left-1/5 w-2 h-2 bg-[#05f] rounded-none opacity-30 animate-ping"></div>
    <div class="absolute bottom-1/5 right-1/6 w-1.5 h-1.5 bg-[#05f] rounded-none opacity-40 animate-ping" style="animation-delay: 1s;"></div>
    <div class="absolute top-3/5 left-1/6 w-1 h-1 bg-[#05f] rounded-none opacity-50 animate-ping" style="animation-delay: 2s;"></div>
  </div>
  <div class="container-custom relative">
    <!-- 装饰元素 -->
    <div class="absolute -top-20 -left-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-[#05f]/10 dark:bg-[#05f]/10 rounded-none blur-3xl"></div>
    <div class="absolute -bottom-20 -right-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-[#05f]/15 dark:bg-[#05f]/10 rounded-none blur-3xl"></div>

    <div class="grid lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-20 items-center">
      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-6 sm:space-y-8 lg:space-y-10">
        <div class="relative">
          <!-- 标题光效装饰 -->
          <div class="absolute -top-4 -right-4 w-20 sm:w-24 md:w-28 h-20 sm:h-24 md:h-28">
            <div class="absolute inset-0 bg-[#05f]/20 opacity-20 rounded-none animate-pulse"></div>
            <div class="absolute inset-3 bg-white dark:bg-gray-800 rounded-none"></div>
            <div class="absolute inset-6 bg-[#05f] rounded-none"></div>
          </div>

          <h1 class="relative text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#05f] to-[#0055cc] dark:from-[#05f] dark:to-[#3385ff] mb-5 sm:mb-7">
            艺创AI
            <span class="block text-lg sm:text-xl md:text-2xl lg:text-3xl mt-6 sm:mt-8 text-gray-800 dark:text-gray-200">
              全能AI知识库系统
            </span>
          </h1>
        </div>

        <p class="text-base sm:text-lg text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 max-w-2xl mx-auto lg:mx-0">
          支持问答式和文档式知识库，能够导入txt、doc、docx、pdf、md等多种格式文档。导入数据完成向量化训练后，用户提问即可进行向量化搜索
        </p>

        <!-- 特性标签 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-14">
            <span class="px-4 py-2 rounded-none bg-[#05f]/10 dark:bg-[#05f]/20 text-[#05f] dark:text-[#66a3ff] text-sm font-medium border border-[#05f]/20 dark:border-[#05f]/30 hover:shadow-md transition-shadow">AI智能对话</span>
            <span class="px-4 py-2 rounded-none bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm font-medium border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow">知识库应用</span>
            <span class="px-4 py-2 rounded-none bg-[#05f]/10 dark:bg-[#05f]/20 text-[#05f] dark:text-[#66a3ff] text-sm font-medium border border-[#05f]/20 dark:border-[#05f]/30 hover:shadow-md transition-shadow">机器人广场</span>
            <span class="px-4 py-2 rounded-none bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm font-medium border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow">知识库训练</span>
            <span class="px-4 py-2 rounded-none bg-[#05f]/10 dark:bg-[#05f]/20 text-[#05f] dark:text-[#66a3ff] text-sm font-medium border border-[#05f]/20 dark:border-[#05f]/30 hover:shadow-md transition-shadow">发布网页/js/api</span>
        </div>


        <!-- CTA按钮 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 sm:gap-6">
          <a href="javascript:void(0)" onclick="document.getElementById('qr-modal').classList.add('active')" class="group px-6 sm:px-8 py-2.5 sm:py-3 bg-[#05f] hover:bg-[#0044cc] text-white font-semibold rounded-none border border-[#05f]/20 shadow-md hover:shadow-lg hover:shadow-[#05f]/20 transition-all duration-300 text-sm sm:text-base flex items-center justify-center">
            <span>联系客服</span>
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>

          <a href="/demo" class="group px-6 sm:px-8 py-2.5 sm:py-3 bg-white dark:bg-gray-800 text-gray-800 dark:text-white font-semibold rounded-none border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg hover:shadow-gray-300/50 dark:hover:shadow-black/30 transition-all duration-300 text-sm sm:text-base flex items-center justify-center">
            <span>查看演示</span>
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

       <!-- 右侧展示区 - 简洁模拟面设计 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white dark:bg-gray-800 rounded-none border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 sm:p-6 lg:p-8">

          <!-- 顶部标签区 -->
          <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-6 sm:mb-8">
            {topTags.map((tag) => (
              <span class="px-2 sm:px-3 py-1 sm:py-1.5 text-xs sm:text-sm bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-none">
                {tag.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片网格 -->
          <div class="grid grid-cols-2 gap-3 sm:gap-4">
            {cards.map((card) => (
              <div class="bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-none p-3 sm:p-4 lg:p-6 hover:shadow-md hover:border-[#0055ff]/30 transition-all duration-200">
                <!-- 图标区域 -->
                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-[#0055ff]/10 rounded-none flex items-center justify-center mb-2 sm:mb-4">
                  <i class="material-icons text-[#0055ff] text-lg sm:text-xl">
                    {card.icon}
                  </i>
                </div>
                <!-- 内容区域 -->
                <div class="space-y-1 sm:space-y-2">
                  <h4 class="font-semibold text-gray-900 dark:text-white text-sm sm:text-base">{card.title}</h4>
                  <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{card.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 底部分割线 -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="h-px bg-gradient-to-r from-transparent via-gray-300 dark:via-gray-600 to-transparent"></div>
    </div>
  </div>

  <!-- QR Modal组件 -->
  <QRModal
    qrCodeUrl="/assets/qrcode.png"
    title="联系客服"
    description="扫描二维码添加客服微信"
  />
</section>
