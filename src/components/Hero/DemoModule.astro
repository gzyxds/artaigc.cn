---
/**
 * DemoModule组件 - 艺创AI产品演示中心
 * 参考HumanHero.astro的简洁设计风格，采用统一的蓝色调
 * 特点：视觉统一性、层次清晰、交互友好、响应式设计、暗黑模式兼容
 *
 * 功能包括：
 * 1. 展示艺创AI产品演示中心的主要标题和简介
 * 2. 提供产品特性标签展示
 * 3. 提供行动按钮（联系客服、立即授权）
 * 4. 展示产品功能卡片
 * 5. 响应式设计，适配不同屏幕尺寸
 * 6. 支持暗黑模式
 * 7. 集成二维码弹窗功能
 */
import QRModal from '../QRModal.astro';

interface Feature {
  name: string;
  href: string;
}

interface Card {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  { name: 'AI数字人', href: '/shop' },
  { name: '知识库', href: '/shop' },
  { name: '智能绘画', href: '/shop' },
  { name: '论文创作', href: '/shop' },
  { name: 'PHP&Java', href: '/shop' }
];

const topTags: Feature[] = [
  { name: 'AI数字人', href: '/shop' },
  { name: '企业知识库', href: '/shop' },
  { name: '智能绘画', href: '/shop' },
  { name: '论文助手', href: '/shop' }
];

const cards: Card[] = [
  {
    icon: 'code',
    title: '双语言版本',
    description: 'PHP/Java双版本支持'
  },
  {
    title: '私有部署',
    description: '安全可控的私有化部署',
    icon: 'cloud_download'
  },
  {
    title: '专业团队',
    description: '一对一技术支持',
    icon: 'groups'
  },
  {
    title: '开源方案',
    description: '灵活定制，售后无忧',
    icon: 'star'
  }
];
---

<section class="relative py-20 md:py-28 bg-white dark:bg-gray-900 overflow-hidden">
  <!-- AI产品背景装饰 -->
  <div class="absolute inset-0 opacity-30">
    <!-- 主要光晕背景 -->
    <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-[#0055ff]/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-[#0055ff]/5 rounded-full blur-3xl"></div>

    <!-- AI产品图标装饰 -->
    <!-- AI芯片图标 -->
    <div class="absolute top-20 left-20 w-12 h-12 text-[#0055ff]/20 animate-pulse">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
        <path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z"/>
        <rect x="8" y="8" width="8" height="8" rx="2" fill="none" stroke="currentColor" stroke-width="1"/>
      </svg>
    </div>

    <!-- 数字人图标 -->
    <div class="absolute top-32 right-32 w-10 h-10 text-[#0055ff]/25 animate-bounce" style="animation-delay: 0.5s">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
        <circle cx="12" cy="8" r="4"/>
        <path d="M12 14c-4 0-8 2-8 6v2h16v-2c0-4-4-6-8-6z"/>
        <circle cx="18" cy="6" r="2" fill="none" stroke="currentColor" stroke-width="1.5"/>
      </svg>
    </div>

    <!-- 知识库图标 -->
    <div class="absolute bottom-32 left-32 w-11 h-11 text-[#0055ff]/20 animate-pulse" style="animation-delay: 1s">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
      </svg>
    </div>

    <!-- 绘画工具图标 -->
    <div class="absolute bottom-20 right-20 w-9 h-9 text-[#0055ff]/25 animate-bounce" style="animation-delay: 1.5s">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
        <path d="M12 2l3.09 6.26L22 9l-6.91 1.01L12 16l-3.09-5.99L2 9l6.91-1.74L12 2z"/>
        <path d="M9 20l-5.5-2L5 16l4 1 4-1 1.5 2L9 20z" fill="none" stroke="currentColor" stroke-width="1"/>
      </svg>
    </div>

    <!-- 论文图标 -->
    <div class="absolute top-40 left-1/2 w-8 h-8 text-[#0055ff]/20 animate-pulse" style="animation-delay: 2s">
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
        <path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.89 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"/>
        <path d="M8 10h8v2H8zm0 4h8v2H8z" fill="none" stroke="currentColor" stroke-width="0.5"/>
      </svg>
    </div>

    <!-- AI连接网络 -->
    <div class="absolute top-1/2 right-1/3 w-16 h-16 text-[#0055ff]/15">
      <svg viewBox="0 0 100 100" fill="none" class="w-full h-full animate-spin" style="animation-duration: 20s">
        <circle cx="50" cy="20" r="3" fill="currentColor"/>
        <circle cx="80" cy="50" r="3" fill="currentColor"/>
        <circle cx="50" cy="80" r="3" fill="currentColor"/>
        <circle cx="20" cy="50" r="3" fill="currentColor"/>
        <path d="M50 20L80 50M80 50L50 80M50 80L20 50M20 50L50 20" stroke="currentColor" stroke-width="1" opacity="0.5"/>
      </svg>
    </div>

    <!-- AI产品标识 -->
    <div class="absolute bottom-1/3 left-1/3 text-[#0055ff]/10 font-bold text-6xl select-none pointer-events-none" style="transform: rotate(-15deg)">
      AI
    </div>

    <!-- 装饰脉动点 -->
    <div class="absolute top-1/3 left-1/4 w-2 h-2 bg-[#0055ff]/30 rounded-full animate-ping"></div>
    <div class="absolute bottom-1/3 right-1/4 w-3 h-3 bg-[#0055ff]/20 rounded-full animate-ping" style="animation-delay: 1s"></div>
    <div class="absolute top-2/3 right-1/3 w-1.5 h-1.5 bg-[#0055ff]/25 rounded-full animate-ping" style="animation-delay: 2s"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-8">
        <!-- 主标题 -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold">
            <span class="text-[#0055ff] block mb-2">艺创AI</span>
            <span class="text-gray-900 dark:text-white text-2xl sm:text-3xl lg:text-4xl font-medium">
              产品演示中心
            </span>
          </h1>

          <!-- 简洁装饰线 -->
          <div class="w-20 h-1 bg-[#0055ff] mx-auto lg:mx-0 rounded-full"></div>
        </div>

        <!-- 描述文本 -->
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-xl mx-auto lg:mx-0">
          基于前后端分离架构以及Vue3、uni-app、ThinkPHP6.x、PostgreSQL、pgvector技术栈开发，包含PC端、H5端
        </p>

        <!-- 特性标签 - 统一蓝色调 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3">
          {features.map((feature) => (
            <a href={feature.href} class="px-4 py-2 bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-lg text-sm font-medium hover:bg-[#0055ff]/20 transition-colors">
              {feature.name}
            </a>
          ))}
        </div>

        <!-- 按钮组 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a
            href="javascript:void(0)"
            onclick="document.getElementById('qr-modal').classList.add('active')"
            class="px-8 py-3 bg-[#0055ff] hover:bg-[#0044dd] text-white font-semibold rounded-lg border border-[#0055ff] shadow-md hover:shadow-lg transition-all duration-200 flex items-center justify-center"
            aria-label="联系客服"
          >
            <span>联系客服</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>

          <a
            href="https://auth.cnai.art/"
            target="_blank"
            rel="noopener noreferrer"
            class="px-8 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-lg border border-gray-300 dark:border-gray-600 shadow-md hover:shadow-lg hover:border-[#0055ff] transition-all duration-200 flex items-center justify-center"
            aria-label="立即授权"
          >
            <span>立即授权</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- 右侧展示区 - 简洁模拟面设计 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 sm:p-6 lg:p-8">

          <!-- 顶部标签区 -->
          <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-6 sm:mb-8">
            {topTags.map((tag) => (
              <span class="px-2 sm:px-3 py-1 sm:py-1.5 text-xs sm:text-sm bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-md">
                {tag.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片网格 -->
          <div class="grid grid-cols-2 gap-3 sm:gap-4">
            {cards.map((card) => (
              <div class="bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-xl p-3 sm:p-4 lg:p-6 hover:shadow-md hover:border-[#0055ff]/30 transition-all duration-200">
                <!-- 图标区域 -->
                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-[#0055ff]/10 rounded-lg flex items-center justify-center mb-2 sm:mb-4">
                  <i class="material-icons text-[#0055ff] text-lg sm:text-xl">
                    {card.icon}
                  </i>
                </div>
                <!-- 内容区域 -->
                <div class="space-y-1 sm:space-y-2">
                  <h4 class="font-semibold text-gray-900 dark:text-white text-sm sm:text-base">{card.title}</h4>
                  <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{card.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 底部分割线 -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="h-px bg-gradient-to-r from-transparent via-gray-300 dark:via-gray-600 to-transparent"></div>
    </div>
  </div>

  <QRModal
    qrCodeUrl="/assets/qrcode.png"
    title="联系客服"
    description="扫描二维码添加客服微信"
  />
</section>
