---
/**
 * PaperModule组件 - AI论文写作系统展示区域
 * 采用简洁的模拟面设计风格，参考HumanHero.astro的设计理念，保留原有背景装饰
 * 特点：视觉统一性、层次清晰、交互友好、响应式设计、暗黑模式兼容
 *
 * 功能包括：
 * 1. 展示AI论文写作系统的主要标题和简介
 * 2. 提供产品特性标签展示
 * 3. 提供行动按钮（联系客服、查看演示）
 * 4. 展示产品功能卡片
 * 5. 响应式设计，适配不同屏幕尺寸
 * 6. 支持暗黑模式
 * 7. 集成二维码弹窗功能
 */
import QRModal from '../QRModal.astro';

interface Feature {
  name: string;
}

interface Card {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  { name: '快速生成大纲' },
  { name: '一键生成论文' },
  { name: '可下载资料' },
  { name: '走马灯通知' },
  { name: '自定义装修首页' }
];

const topTags: Feature[] = [
  { name: 'AI数字人' },
  { name: '企业知识库' },
  { name: '智能绘画' },
  { name: '论文助手' }
];

const cards: Card[] = [
  {
    icon: 'code',
    title: '双语言版本',
    description: 'PHP/Java双版本支持'
  },
  {
    title: '私有部署',
    description: '安全可控的私有化部署',
    icon: 'cloud_download'
  },
  {
    title: '专业团队',
    description: '一对一技术支持',
    icon: 'groups'
  },
  {
    title: '开源方案',
    description: '灵活定制，售后无忧',
    icon: 'star'
  }
];
---

<section class="relative py-16 sm:py-20 md:py-28 lg:py-36 flex items-center bg-gradient-to-br from-slate-50 to-blue-50 dark:from-gray-700 dark:to-slate-900 overflow-hidden">
  <!-- AI论文背景装饰 -->
  <div class="absolute inset-0">
    <!-- 基础光晕效果 -->
    <div class="absolute top-0 -right-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-blue-400/40 dark:bg-blue-700/30 rounded-none blur-3xl"></div>
    <div class="absolute bottom-0 -left-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-purple-400/40 dark:bg-purple-700/30 rounded-none blur-3xl"></div>

    <!-- 文档图标装饰 -->
    <div class="absolute top-16 right-20 opacity-20">
      <svg viewBox="0 0 64 64" class="w-20 h-20">
        <!-- 文档外框 -->
        <rect x="12" y="8" width="32" height="48" fill="none" stroke="#0055ff" stroke-width="2" rx="2" />
        <!-- 文档折角 -->
        <path d="M36 8 L36 16 L44 16" fill="none" stroke="#0055ff" stroke-width="2" />
        <!-- 文档内容线条 -->
        <line x1="18" y1="20" x2="38" y2="20" stroke="#0055ff" stroke-width="1.5" opacity="0.7" />
        <line x1="18" y1="26" x2="35" y2="26" stroke="#0055ff" stroke-width="1.5" opacity="0.6" />
        <line x1="18" y1="32" x2="38" y2="32" stroke="#0055ff" stroke-width="1.5" opacity="0.7" />
        <line x1="18" y1="38" x2="32" y2="38" stroke="#0055ff" stroke-width="1.5" opacity="0.5" />
        <line x1="18" y1="44" x2="36" y2="44" stroke="#0055ff" stroke-width="1.5" opacity="0.6" />
      </svg>
    </div>

    <!-- 学术符号装饰 -->
    <div class="absolute bottom-24 left-16 opacity-25">
      <div class="relative w-24 h-24">
        <!-- 引用符号 -->
        <div class="absolute top-2 left-2 text-2xl font-bold text-blue-600 opacity-60">"</div>
        <div class="absolute bottom-2 right-2 text-2xl font-bold text-blue-600 opacity-60">"</div>
        <!-- 学术公式符号 -->
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-blue-600 opacity-70">
          <svg viewBox="0 0 32 32" class="w-8 h-8">
            <path d="M8 12 L16 8 L24 12 L16 16 Z" fill="none" stroke="currentColor" stroke-width="2" />
            <path d="M8 20 L16 16 L24 20 L16 24 Z" fill="none" stroke="currentColor" stroke-width="2" />
          </svg>
        </div>
      </div>
    </div>

    <!-- 书籍堆叠装饰 -->
    <div class="absolute top-20 left-12 opacity-20">
      <svg viewBox="0 0 80 80" class="w-16 h-16">
        <!-- 底层书籍 -->
        <rect x="10" y="50" width="60" height="8" fill="#0055ff" opacity="0.6" rx="1" />
        <!-- 中层书籍 -->
        <rect x="15" y="42" width="50" height="8" fill="#0055ff" opacity="0.7" rx="1" />
        <!-- 顶层书籍 -->
        <rect x="20" y="34" width="40" height="8" fill="#0055ff" opacity="0.8" rx="1" />
        <!-- 书脊线条 -->
        <line x1="25" y1="34" x2="25" y2="42" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="35" y1="34" x2="35" y2="42" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="45" y1="34" x2="45" y2="42" stroke="#0055ff" stroke-width="1" opacity="0.5" />
      </svg>
    </div>

    <!-- 笔记本和笔装饰 -->
    <div class="absolute top-1/3 right-16 opacity-25">
      <svg viewBox="0 0 64 64" class="w-18 h-18">
        <!-- 笔记本 -->
        <rect x="20" y="25" width="24" height="30" fill="none" stroke="#0055ff" stroke-width="2" rx="2" />
        <!-- 笔记本螺旋线 -->
        <line x1="20" y1="30" x2="44" y2="30" stroke="#0055ff" stroke-width="1" opacity="0.6" />
        <!-- 笔记本内容 -->
        <line x1="24" y1="35" x2="40" y2="35" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="24" y1="40" x2="38" y2="40" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="24" y1="45" x2="40" y2="45" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <!-- 笔 -->
        <line x1="45" y1="15" x2="50" y2="25" stroke="#0055ff" stroke-width="3" stroke-linecap="round" opacity="0.7" />
        <circle cx="47.5" cy="20" r="1" fill="#0055ff" opacity="0.6" />
      </svg>
    </div>

    <!-- 论文大纲结构图 -->
    <div class="absolute bottom-16 right-24 opacity-20">
      <svg viewBox="0 0 60 60" class="w-16 h-16">
        <!-- 主节点 -->
        <circle cx="30" cy="15" r="4" fill="#0055ff" opacity="0.8" />
        <!-- 二级节点 -->
        <circle cx="15" cy="30" r="3" fill="#0055ff" opacity="0.6" />
        <circle cx="45" cy="30" r="3" fill="#0055ff" opacity="0.6" />
        <!-- 三级节点 -->
        <circle cx="10" cy="45" r="2" fill="#0055ff" opacity="0.5" />
        <circle cx="20" cy="45" r="2" fill="#0055ff" opacity="0.5" />
        <circle cx="40" cy="45" r="2" fill="#0055ff" opacity="0.5" />
        <circle cx="50" cy="45" r="2" fill="#0055ff" opacity="0.5" />
        <!-- 连接线 -->
        <line x1="30" y1="19" x2="15" y2="26" stroke="#0055ff" stroke-width="1.5" opacity="0.6" />
        <line x1="30" y1="19" x2="45" y2="26" stroke="#0055ff" stroke-width="1.5" opacity="0.6" />
        <line x1="15" y1="33" x2="10" y2="43" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="15" y1="33" x2="20" y2="43" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="45" y1="33" x2="40" y2="43" stroke="#0055ff" stroke-width="1" opacity="0.5" />
        <line x1="45" y1="33" x2="50" y2="43" stroke="#0055ff" stroke-width="1" opacity="0.5" />
      </svg>
    </div>

    <!-- AI写作文字装饰 -->
    <div class="absolute bottom-12 left-24 text-blue-600 opacity-15 font-mono text-xs leading-tight">
      论文大纲<br/>智能写作<br/>学术研究<br/>AI生成
    </div>

    <!-- 装饰脉动点 -->
    <div class="absolute top-12 left-8 w-2 h-2 bg-blue-600 rounded-none opacity-40 animate-pulse"></div>
    <div class="absolute top-16 left-4 w-1.5 h-1.5 bg-purple-600 rounded-none opacity-30 animate-pulse" style="animation-delay: 0.5s"></div>
    <div class="absolute bottom-8 right-8 w-2 h-2 bg-blue-600 rounded-none opacity-35 animate-pulse" style="animation-delay: 1s"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- 装饰元素 -->
    <div class="absolute -top-20 -left-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-purple-200/20 dark:bg-purple-800/15 rounded-none blur-3xl"></div>
    <div class="absolute -bottom-20 -right-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-blue-200/20 dark:bg-blue-800/15 rounded-none blur-3xl"></div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-8">
        <!-- 主标题 -->
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold">
            <span class="text-[#0055ff] block mb-2">艺创AI</span>
            <span class="text-gray-900 dark:text-white text-2xl sm:text-3xl lg:text-4xl font-medium">
              论文写作系统
            </span>
          </h1>

          <!-- 简洁装饰线 -->
          <div class="w-20 h-1 bg-[#0055ff] mx-auto lg:mx-0 rounded-none"></div>
        </div>

        <!-- 描述文本 -->
        <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-xl mx-auto lg:mx-0">
          这是一款AI智能生成写作大纲，10分钟生成3万字论文的系统。你只需要输入论文关键词，AI即可快速为您生成论文大纲
        </p>

        <!-- 特性标签 - 统一蓝色调 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3">
          {features.map((feature) => (
            <span class="px-4 py-2 bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-lg text-sm font-medium hover:bg-[#0055ff]/20 transition-colors">
              {feature.name}
            </span>
          ))}
        </div>

        <!-- 按钮组 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a
            href="javascript:void(0)"
            onclick="document.getElementById('qr-modal').classList.add('active')"
            class="px-8 py-3 bg-[#0055ff] hover:bg-[#0044dd] text-white font-semibold rounded-lg border border-[#0055ff] shadow-md hover:shadow-lg transition-all duration-200 flex items-center justify-center"
            aria-label="联系客服"
          >
            <span>联系客服</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>

          <a
            href="/demo"
            class="px-8 py-3 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-none border border-gray-300 dark:border-gray-600 shadow-md hover:shadow-lg hover:border-[#0055ff] transition-all duration-200 flex items-center justify-center"
            aria-label="查看演示"
          >
            <span>查看演示</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- 右侧展示区 - 简洁模拟面设计 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white dark:bg-gray-800 rounded-none border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 sm:p-6 lg:p-8">

          <!-- 顶部标签区 -->
          <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-6 sm:mb-8">
            {topTags.map((tag) => (
              <span class="px-2 sm:px-3 py-1 sm:py-1.5 text-xs sm:text-sm bg-[#0055ff]/10 text-[#0055ff] border border-[#0055ff]/20 rounded-none">
                {tag.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片网格 -->
          <div class="grid grid-cols-2 gap-3 sm:gap-4">
            {cards.map((card) => (
              <div class="bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-none p-3 sm:p-4 lg:p-6 hover:shadow-md hover:border-[#0055ff]/30 transition-all duration-200">
                <!-- 图标区域 -->
                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-[#0055ff]/10 rounded-none flex items-center justify-center mb-2 sm:mb-4">
                  <i class="material-icons text-[#0055ff] text-lg sm:text-xl">
                    {card.icon}
                  </i>
                </div>
                <!-- 内容区域 -->
                <div class="space-y-1 sm:space-y-2">
                  <h4 class="font-semibold text-gray-900 dark:text-white text-sm sm:text-base">{card.title}</h4>
                  <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{card.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 底部分割线 -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="h-px bg-gradient-to-r from-transparent via-gray-300 dark:via-gray-600 to-transparent"></div>
    </div>
  </div>

  <!-- QR Modal组件 -->
  <QRModal
    qrCodeUrl="/assets/wchatpay.png"
    title="立即体验"
    description="扫描二维码添加客服微信，获取体验资格"
  />
</section>
</section>
