---

<!-- 大模型展示区域 -->
<section class="relative scroll-mt-32 py-24 bg-background overflow-hidden typography-system">
  <!-- 背景装饰元素 -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-100/20 dark:bg-brand-900/10 rounded-none blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-brand-50/20 dark:bg-brand-900/5 rounded-none blur-3xl"></div>
  </div>

  <div class="container-custom relative z-10">
    <!-- 标题区域：对齐 design-system 风格 -->
    <div class="mb-12 md:mb-16 border-l-2 border-brand-600 pl-4 max-w-2xl">
      <h2 class="h2 mb-2">AI 大模型服务</h2>
      <p class="text-neutral-500 dark:text-neutral-400 max-w-2xl">
        支持全系列大语言模型与上百个垂直模型，覆盖广泛行业场景，为您的业务提供智能化解决方案
      </p>
    </div>

    <!-- 模型卡片网格：Bento Grid 风格 -->
    <div class="bento-grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 auto-rows-min mb-12 sm:mb-16 lg:mb-20">
      {models.map((model, index) => (
        <div class="bento-card group relative flex flex-col h-full overflow-hidden transition-all duration-300 hover:border-brand-500/50 hover:shadow-sm"
             style={`animation-delay: ${index * 100}ms`}>

          <!-- 装饰性角标 -->
          <div class="corner-marker top-0 right-0 border-t border-r opacity-50 group-hover:opacity-100 group-hover:border-brand-500 transition-colors"></div>
          <div class="corner-marker bottom-0 left-0 border-b border-l opacity-50 group-hover:opacity-100 group-hover:border-brand-500 transition-colors"></div>

          <div class="p-5 flex flex-col h-full relative z-10">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-3">
                <span class="flex items-center justify-center w-10 h-10 rounded-sm bg-brand-50 dark:bg-brand-900/20 border border-brand-100/80 dark:border-brand-900/40 text-brand-600 dark:text-brand-400 group-hover:bg-brand-600 group-hover:text-white transition-colors duration-300">
                  <div set:html={model.icon} class="w-5 h-5"></div>
                </span>
                <h3 class="font-bold text-neutral-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors duration-300 type-heading mb-0">
                  {model.name}
                </h3>
              </div>
              {model.tag && (
                <span class={`px-2 py-0.5 text-xs font-mono border ${
                  model.tagColor === 'blue'
                    ? 'border-brand-200 text-brand-700 bg-brand-50 dark:border-brand-800 dark:text-brand-300 dark:bg-brand-900/20'
                    : model.tagColor === 'green'
                    ? 'border-emerald-200 text-emerald-700 bg-emerald-50 dark:border-emerald-800 dark:text-emerald-300 dark:bg-emerald-900/20'
                    : 'border-orange-200 text-orange-700 bg-orange-50 dark:border-orange-800 dark:text-orange-300 dark:bg-orange-900/20'
                }`}>
                  {model.tag}
                </span>
              )}
            </div>

            <p class="text-neutral-600 dark:text-neutral-400 leading-relaxed mb-6 flex-grow line-clamp-3 type-body">
              {model.description}
            </p>

            <div class="mt-auto pt-4 border-t border-border group-hover:border-brand-200 dark:border-border dark:group-hover:border-brand-900/40 transition-colors duration-300">
              <a href="#" class="inline-flex items-center text-sm font-medium text-neutral-900 dark:text-neutral-100 hover:text-brand-600 dark:hover:text-brand-400 transition-colors duration-300">
                了解更多
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- 底部按钮区域 -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-6">
      <button class="btn btn-primary group relative inline-flex items-center justify-center px-8 py-3.5 min-w-[180px]">
        <span class="relative flex items-center">
          查看更多模型
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </button>

      <button class="btn btn-secondary group relative inline-flex items-center justify-center px-8 py-3.5 min-w-[180px]">
        <span class="relative flex items-center">
          更多AI能力
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </button>
    </div>
  </div>
</section>
