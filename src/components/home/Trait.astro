<!-- 功能特性 -->
<section id="industry-solutions" class="py-24 bg-background">
  <div class="container-custom">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <span class="text-xs font-mono text-brand-600 mb-4 block uppercase tracking-wider">Features</span>
      <h2 class="h2 mb-4">功能特性</h2>
      <p class="text-neutral-500 text-lg dark:text-neutral-400 max-w-2xl mx-auto">
        为各行各业提供专业的AIGC一站式落地解决方案
      </p>
    </div>

    <div class="bento-grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 auto-rows-min">
      {features.map((item) => (
        <div class={`bento-card group relative flex flex-col justify-between p-6 transition-all duration-300 ${item.span} hover:border-brand-500/50 hover:shadow-sm`}>
          {/* Tech/Linear Decorative Corners */}
          <div class="corner-marker top-0 right-0 border-t border-r opacity-50 group-hover:opacity-100 group-hover:border-brand-500 transition-colors"></div>
          <div class="corner-marker bottom-0 left-0 border-b border-l opacity-50 group-hover:opacity-100 group-hover:border-brand-500 transition-colors"></div>

          {/* Subtle Background Gradient on Hover */}
          <div class="absolute inset-0 bg-gradient-to-br from-brand-50/50 to-transparent dark:from-brand-900/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

          <div class="relative z-10">
            <div class="flex items-start justify-between mb-6">
              {/* Brand Color Icon Container */}
              <div class="w-10 h-10 rounded-sm bg-brand-50 dark:bg-brand-900/20 flex items-center justify-center text-brand-600 dark:text-brand-400 group-hover:bg-brand-600 group-hover:text-white transition-colors duration-300">
                <Icon name={item.icon} class="w-5 h-5" />
              </div>
              {/* Monospace Tag */}
              <span class="text-xs font-mono text-brand-700 dark:text-brand-300 bg-brand-50 dark:bg-brand-900/20 px-2 py-1 rounded-sm border border-brand-100 dark:border-brand-800/30">
                {item.stats}
              </span>
            </div>

            <h3 class="h3 mb-3 group-hover:text-brand-600 transition-colors">
              {item.title}
            </h3>

            <p class="text-sm text-neutral-500 dark:text-neutral-400 leading-relaxed line-clamp-3">
              {item.description}
            </p>
          </div>

          <div class="mt-6 pt-4 border-t border-border flex items-center justify-between">
            <span class="text-xs font-medium text-neutral-400 group-hover:text-brand-600 transition-colors">
              {item.statsLabel}
            </span>
            <Icon name="lucide:arrow-right" class="w-4 h-4 text-neutral-300 group-hover:text-brand-600 group-hover:translate-x-1 transition-all duration-300" />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
