---
/**
 * 二维码模态框组件
 *
 * 功能特性：
 * - 响应式设计，适配移动端和桌面端
 * - 支持自定义标题、描述和二维码图片
 * - 多种关闭方式：关闭按钮、点击背景、ESC键
 * - 优化的动画效果和过渡
 * - 完整的可访问性支持
 * - 与其他组件的交互集成
 *
 * @component QRModal
 */

interface Props {
  /** 二维码图片URL */
  qrCodeUrl: string;
  /** 模态框标题 */
  title?: string;
  /** 模态框描述文本 */
  description?: string;
  /** 是否默认打开 */
  isOpen?: boolean;
}

const {
  qrCodeUrl,
  title = "扫描二维码联系客服",
  description = "使用微信扫描下方二维码，即可添加客服微信",
  isOpen = false
} = Astro.props;
---

<div
  class={`modal-overlay ${isOpen ? 'active' : ''}`}
  id="qr-modal"
  role="dialog"
  aria-labelledby="modal-title"
  aria-modal="true"
  aria-hidden={!isOpen}
>
  <div class="modal-content bento-card p-0 overflow-hidden">
    <!-- 角标装饰 -->
    <div class="corner-marker corner-marker-tr"></div>
    <div class="corner-marker corner-marker-bl"></div>

    <button
      class="close-button"
      aria-label="关闭二维码"
      id="close-modal"
      tabindex="0"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="square" stroke-linejoin="miter">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="modal-body p-8 sm:p-10">
      <div class="inline-flex items-center gap-2 mb-4">
        <span class="w-6 h-px bg-blue-500"></span>
        <span class="text-blue-600 dark:text-blue-400 font-mono text-[10px] font-bold uppercase tracking-widest">Connect Support</span>
      </div>
      <h2 class="modal-title font-mono font-bold text-xl uppercase tracking-tight text-gray-900 dark:text-white mb-2" id="modal-title">{title}</h2>
      <p class="modal-description text-gray-500 dark:text-gray-400 text-sm font-sans mb-8">{description}</p>
      <div class="qr-container border border-gray-100 dark:border-gray-800 p-4 bg-gray-50/50 dark:bg-gray-900/50 rounded-none relative group">
        <div class="corner-marker corner-marker-tr opacity-20 group-hover:opacity-100 transition-opacity"></div>
        <img src={qrCodeUrl} alt="客服二维码" class="qr-code w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-500" loading="lazy" />
      </div>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    backdrop-filter: blur(2px);
    overflow-y: auto;
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: white;
    position: relative;
    max-width: 90%;
    width: 420px;
    transform: translateY(20px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
  }

  :global(.dark) .modal-content {
    background: #0a0a0a;
  }

  .modal-overlay.active .modal-content {
    transform: translateY(0);
    opacity: 1;
  }

  .close-button {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: transparent;
    border: 1px solid transparent;
    color: #666;
    cursor: pointer;
    padding: 0.5rem;
    transition: all 0.2s ease;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-button:hover {
    border-color: #ef4444;
    color: #ef4444;
  }

  :global(.dark) .close-button {
    color: #999;
  }

  .qr-code {
    display: block;
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 480px) {
    .modal-content {
      padding: 1.5rem;
      width: 90%;
      margin: 0 auto;
    }

    .modal-title {
      font-size: 1.25rem;
    }

    .modal-description {
      font-size: 0.9rem;
    }

    .qr-code {
      width: 180px;
      height: 180px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .modal-overlay,
    .modal-content,
    .close-button,
    .qr-container {
      transition: none;
    }
  }
</style>

<script>
  type QRModalDetail = {
    qrCodeUrl?: string;
    title?: string;
    description?: string;
  };

  let defaultTitle = '';
  let defaultDescription = '';
  let defaultQrCodeUrl = '';
  let defaultQrCodeAlt = '';

  /**
   * 打开模态框
   * 功能：显示二维码弹窗、锁定页面滚动、触发定位校正
   * 参数：无
   * 返回值：无
   */
  function openModal() {
    const modal = document.getElementById('qr-modal');
    if (modal) {
      modal.classList.add('active');
      modal.setAttribute('aria-hidden', 'false');

      lockBodyScroll();

      // 每次打开模态框时重新绑定关闭按钮事件
      bindCloseButton();

      // 聚焦到关闭按钮，提高可访问性
      setTimeout(() => {
        const closeButton = document.getElementById('close-modal');
        if (closeButton) closeButton.focus();
      }, 100);

      // 进行定位校正
      positionModal();
    }
  }

  /**
   * 更新模态框内容
   * 功能：根据传入参数动态更新标题、描述与二维码图片，未传入则使用默认值
   * 参数：detail QRModalDetail | undefined 内容配置
   * 返回值：无
   */
  function updateModalContent(detail?: QRModalDetail) {
    const modal = document.getElementById('qr-modal');
    if (!modal) return;

    const titleEl = document.getElementById('modal-title');
    const descEl = modal.querySelector('.modal-description') as HTMLElement | null;
    const imgEl = modal.querySelector('img.qr-code') as HTMLImageElement | null;

    if (titleEl) titleEl.textContent = detail?.title ?? defaultTitle;
    if (descEl) descEl.textContent = detail?.description ?? defaultDescription;
    if (imgEl) {
      imgEl.src = detail?.qrCodeUrl ?? defaultQrCodeUrl;
      imgEl.alt = defaultQrCodeAlt || '客服二维码';
    }
  }

  /**
   * 外部打开入口
   * 功能：提供全局函数供内联 onclick 调用，避免事件监听未就绪导致无响应
   * 参数：detail QRModalDetail | undefined 内容配置
   * 返回值：无
   */
  function exposeGlobalOpen() {
    (window as any).__openQRCodeModal = (detail?: QRModalDetail) => {
      updateModalContent(detail);
      openModal();
    };
  }

  /**
   * 关闭模态框
   * 功能：隐藏二维码弹窗并恢复页面滚动
   * 参数：无
   * 返回值：无
   */
  function closeModal() {
    const modal = document.getElementById('qr-modal');
    if (modal) {
      modal.classList.remove('active');
      modal.setAttribute('aria-hidden', 'true');

      unlockBodyScroll();
    }
  }

  /**
   * 绑定关闭按钮事件
   * 确保事件监听器不会重复添加
   * 参数：无
   * 返回值：无
   */
  function bindCloseButton() {
    const closeButton = document.getElementById('close-modal');
    if (closeButton) {
      // 移除之前的事件监听器
      closeButton.removeEventListener('click', handleCloseClick);
      // 添加新的事件监听器
      closeButton.addEventListener('click', handleCloseClick);
    }
  }

  /**
   * 处理关闭按钮点击事件
   * 功能：阻止冒泡并关闭弹窗
   * 参数：e Event 点击事件对象
   * 返回值：无
   */
  function handleCloseClick(e: Event) {
    e.stopPropagation();
    closeModal();
  }

  /**
   * 设备像素对齐
   * 功能：根据DPR将像素值对齐到设备子像素，避免模糊
   * 参数：value number 需要对齐的CSS像素值
   * 返回值：number 对齐后的CSS像素值
   */
  function snapToDevicePixel(value: number): number {
    const dpr = Math.max(1, window.devicePixelRatio || 1);
    return Math.round(value * dpr) / dpr;
  }

  /**
   * 模态框定位校正
   * 功能：在不同视窗尺寸下确保模态框不溢出，设置安全边距与最大尺寸
   * 参数：无
   * 返回值：无
   */
  function positionModal() {
    const modal = document.getElementById('qr-modal');
    const content = modal?.querySelector('.modal-content') as HTMLElement | null;
    if (!modal || !content) return;

    const safeMargin = 16;
    const vw = window.innerWidth;
    const vh = window.innerHeight;

    // 宽度边界处理
    const maxWidth = Math.max(280, snapToDevicePixel(vw - safeMargin * 2));
    content.style.maxWidth = `${maxWidth}px`;

    // 高度边界处理
    const maxHeight = snapToDevicePixel(vh - safeMargin * 2);
    content.style.maxHeight = `${maxHeight}px`;

    // 内部滚动处理
    const body = content.querySelector('.modal-body') as HTMLElement | null;
    if (body) {
      body.style.maxHeight = `${maxHeight - 32}px`;
      body.style.overflowY = 'auto';
    }
  }

  /**
   * 锁定页面滚动
   * 功能：记录滚动位置并冻结body，避免背景滚动
   * 参数：无
   * 返回值：无
   */
  function lockBodyScroll() {
    const announcementPopup = document.getElementById('announcement-popup');
    const isAnnouncementOpen = announcementPopup && announcementPopup.classList.contains('active');
    if (isAnnouncementOpen) return;
    const scrollY = window.scrollY;
    document.body.style.overflow = 'hidden';
    document.body.style.position = 'fixed';
    document.body.style.width = '100%';
    document.body.style.top = `-${scrollY}px`;
  }

  /**
   * 解锁页面滚动
   * 功能：恢复body状态与滚动位置
   * 参数：无
   * 返回值：无
   */
  function unlockBodyScroll() {
    const announcementPopup = document.getElementById('announcement-popup');
    const isAnnouncementOpen = announcementPopup && announcementPopup.classList.contains('active');
    if (isAnnouncementOpen) return;
    const scrollY = document.body.style.top;
    document.body.style.overflow = 'auto';
    document.body.style.position = 'static';
    document.body.style.width = 'auto';
    document.body.style.top = '';
    window.scrollTo(0, parseInt(scrollY || '0') * -1);
  }

  /**
   * 处理打开事件
   * 功能：兼容不同来源的事件，支持携带 detail 动态更新内容
   * 参数：event Event 事件对象
   * 返回值：无
   */
  function handleOpenEvent(event: Event) {
    const detail = (event as CustomEvent<QRModalDetail>).detail;
    updateModalContent(detail);
    openModal();
  }

  // 统一监听二维码弹窗事件
  window.addEventListener('showQRCodeModal', handleOpenEvent);

  // 视窗变化时重新定位
  window.addEventListener('resize', () => {
    const modal = document.getElementById('qr-modal');
    if (modal?.classList.contains('active')) {
      positionModal();
    }
  });
  window.addEventListener('orientationchange', () => {
    const modal = document.getElementById('qr-modal');
    if (modal?.classList.contains('active')) {
      positionModal();
    }
  });

  // 按ESC键关闭模态框
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
    }
  });

  /**
   * 初始化模态框事件与状态
   * 支持 Astro View Transitions 页面切换
   */
  function initModal() {
    const titleEl = document.getElementById('modal-title');
    const descEl = document.querySelector('#qr-modal .modal-description') as HTMLElement | null;
    const imgEl = document.querySelector('#qr-modal img.qr-code') as HTMLImageElement | null;

    defaultTitle = titleEl?.textContent?.trim() || defaultTitle || '扫描二维码联系客服';
    defaultDescription = descEl?.textContent?.trim() || defaultDescription || '使用微信扫描下方二维码，即可添加客服微信';
    defaultQrCodeUrl = imgEl?.getAttribute('src') || defaultQrCodeUrl || '/assets/qrcode.png';
    defaultQrCodeAlt = imgEl?.getAttribute('alt') || defaultQrCodeAlt || '客服二维码';

    // 绑定关闭按钮事件
    bindCloseButton();

    // 绑定背景点击关闭
    const modal = document.getElementById('qr-modal');
    if (modal) {
      modal.removeEventListener('click', handleBackgroundClick);
      modal.addEventListener('click', handleBackgroundClick);
    }

    // 初始定位校正
    positionModal();
  }

  function handleBackgroundClick(e: Event) {
    if (e.target === e.currentTarget) {
      closeModal();
    }
  }

  // 初始加载
  initModal();
  exposeGlobalOpen();

  // 监听页面导航（View Transitions）
  document.addEventListener('astro:page-load', () => {
    initModal();
  });
</script>
