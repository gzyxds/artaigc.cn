      { text: "加入我们", url: "#" },
      { text: "联系方式", url: "/contact" },
      { text: "隐私政策", url: "#" }
    ]
  }
];
---

<footer class="bg-white dark:bg-[#252d37] text-gray-600 dark:text-gray-300 border-t border-gray-200 dark:border-gray-800 transition-colors duration-300" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>

  <div class="container-custom pt-16 pb-8">
    <!-- 顶部下载区域 -->
    <div class="bento-card relative p-8 md:p-12 mb-16 shadow-none transition-colors duration-300 group overflow-hidden border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900/50">
      <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
      <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

      <!-- 动态背景光效 -->
      <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-blue-500/10 blur-[100px] opacity-40 dark:opacity-20 pointer-events-none"></div>
      <div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-80 h-80 bg-indigo-500/10 blur-[100px] opacity-40 dark:opacity-20 pointer-events-none"></div>

      <!-- 网格纹理 -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.02)_1px,transparent_1px)] dark:bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:40px_40px] pointer-events-none"></div>

      <div class="relative z-10 flex flex-col lg:flex-row items-center justify-between gap-10">
        <!-- 左侧内容 -->
        <div class="flex flex-col md:flex-row items-center lg:items-start text-center md:text-left gap-8 md:gap-10 max-w-4xl">
          <div class="relative group/icon flex-shrink-0">
            <div class="absolute inset-0 bg-blue-500 blur-2xl opacity-20 group-hover/icon:opacity-30 transition-opacity duration-500 rounded-full"></div>
            <div class="relative w-20 h-20 bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 border border-gray-200 dark:border-gray-700 shadow-lg flex items-center justify-center rounded-2xl rotate-3 group-hover/icon:rotate-0 transition-transform duration-300">
              <Image src={logo} alt="艺创AI Logo" class="w-12 h-12" />
            </div>
          </div>

          <div class="space-y-4">
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-50 dark:bg-blue-900/20 border border-blue-100 dark:border-blue-800 text-blue-600 dark:text-blue-400 type-small font-medium rounded-full">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-500 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
              </span>
              <span class="tracking-wide">全新客户端上线</span>
            </div>

            <div class="space-y-3">
              <h3 class="font-bold text-gray-900 dark:text-white tracking-tight type-display text-3xl md:text-4xl">
                释放 AI 创作的<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">无限潜能</span>
              </h3>
              <p class="text-gray-600 dark:text-gray-400 max-w-xl leading-relaxed type-body text-lg">
                一键安装，畅享原生级 AI 创作体验。更稳定的连接，更流畅的交互，随时随地激发创意灵感。
              </p>
            </div>
          </div>
        </div>

        <!-- 右侧操作区 -->
        <div class="flex flex-col items-center lg:items-end gap-6 w-full lg:w-auto flex-shrink-0">
          <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
            <a href="https://console.cloudcvm.com/cart/goodsList.htm?fpg_id=61&spg_id=20" target="_blank" class="h-12 px-8 bg-blue-600 hover:bg-blue-700 text-white transition-all duration-300 type-small shadow-lg hover:shadow-blue-500/30 flex items-center justify-center rounded-lg font-medium group/btn min-w-[160px]">
              免费使用
              <Icon name="mdi:arrow-right" class="w-4 h-4 ml-2 transform group-hover/btn:translate-x-1 transition-transform" />
            </a>
            <a href="/download" target="_blank" class="h-12 px-8 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-all duration-300 type-small flex items-center justify-center rounded-lg font-medium min-w-[160px]">
              <Icon name="mdi:download" class="w-4 h-4 mr-2" />
              客户端下载
            </a>
          </div>

          <!-- 平台支持 -->
          <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400 type-small">
            <span class="opacity-70">支持平台:</span>
            <div class="flex gap-2">
              <div class="w-8 h-8 flex items-center justify-center bg-gray-100 dark:bg-gray-800 rounded-md" title="Windows">
                <Icon name="mdi:monitor" class="w-4 h-4" />
              </div>
              <div class="w-8 h-8 flex items-center justify-center bg-gray-100 dark:bg-gray-800 rounded-md" title="macOS">
                <Icon name="mdi:laptop-mac" class="w-4 h-4" />
              </div>
              <div class="w-8 h-8 flex items-center justify-center bg-gray-100 dark:bg-gray-800 rounded-md" title="Linux">
                <Icon name="mdi:console" class="w-4 h-4" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-8 mb-12">
      {/* 左侧品牌区 */}
      <div class="col-span-2 lg:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-6">
           <div class="w-8 h-8 bg-[rgb(0,51,255)] flex items-center justify-center text-white font-bold text-lg rounded-none">
             AI
           </div>
           <span class="font-bold text-gray-900 dark:text-white transition-colors duration-300 font-display type-heading mb-0">艺创AI</span>
        </a>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed max-w-xs mb-6 transition-colors duration-300 type-body">
          艺创AI 致力于降低企业 AI 应用开发门槛，赋能每一个团队构建智能未来。
        </p>

        {/* 社交媒体图标 */}
        <div class="flex space-x-4">
          <a href="#" class="text-gray-500 dark:text-gray-400 hover:text-[rgb(80,120,255)] dark:hover:text-[rgb(80,120,255)] transition-colors">
            <span class="sr-only">QQ</span>
            <div class="flex flex-col items-center group relative">
               <Icon name="ri:qq-fill" class="w-6 h-6" />
               <span class="absolute -top-8 left-1/2 -translate-x-1/2 bg-black text-white text-xs px-2 py-1 opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap rounded-none">236749035</span>
            </div>
          </a>
          <a href="#" class="text-gray-500 dark:text-gray-400 hover:text-[rgb(80,120,255)] dark:hover:text-[rgb(80,120,255)] transition-colors">
            <span class="sr-only">WeChat</span>
            <div class="flex flex-col items-center group relative">
               <Icon name="ri:wechat-fill" class="w-6 h-6" />
               <div class="absolute -top-24 left-1/2 -translate-x-1/2 bg-white p-1 opacity-0 group-hover:opacity-100 transition-opacity shadow-lg hidden group-hover:block z-50 border border-gray-200 rounded-none">
                 <img src="/assets/qrcode.png" alt="WeChat" class="w-20 h-20 object-contain" />
               </div>
            </div>
          </a>
        </div>
      </div>

      {/* 右侧链接列表区 */}
      <div class="col-span-2 md:col-span-4 lg:col-span-4 xl:col-span-6 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-x-4 gap-y-8 items-start">
        {footerLinks.map((group) => (
          <div class="col-span-1">
            <h4 class="font-bold text-gray-900 dark:text-white mb-4 transition-colors duration-300 type-heading">{group.title}</h4>
            <ul class="space-y-3 text-gray-600 dark:text-gray-400 type-body">
              {group.links.map((link) => (
                <li>
                  <a href={link.url} class="hover:text-[rgb(80,120,255)] transition-colors block">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}

        {/* 关注我们 - 单独处理 */}
        <div class="col-span-1">
          <h4 class="font-bold text-gray-900 dark:text-white mb-4 transition-colors duration-300 type-heading">关注我们</h4>
          <div class="space-y-3">
            <div class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 transition-colors duration-300 type-small">
              <span class="font-medium">QQ:</span>
              <span>236749035</span>
            </div>
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2 text-gray-600 dark:text-gray-400 transition-colors duration-300 type-small">
                <span class="font-medium">微信:</span>
                <span>userhlc</span>
              </div>
              <div class="flex flex-row flex-nowrap space-x-2 pt-2">
                <div class="flex flex-col items-center space-y-1 shrink-0 group cursor-pointer">
                  <div class="bg-white p-1 border border-gray-200 group-hover:border-[rgb(80,120,255)] transition-colors rounded-none">
                    <img src="/assets/qrcode.png" alt="客服微信" class="w-16 h-16 object-contain" />
                  </div>
                  <span class="text-xs text-gray-500 group-hover:text-[rgb(80,120,255)] transition-colors font-mono">在线咨询</span>
                </div>
                <div class="flex flex-col items-center space-y-1 shrink-0 group cursor-pointer">
                  <div class="bg-white p-1 border border-gray-200 group-hover:border-[rgb(80,120,255)] transition-colors rounded-none">
                    <img src="/assets/wchatpay.png" alt="公众号" class="w-16 h-16 object-contain" />
                  </div>
                  <span class="text-xs text-gray-500 group-hover:text-[rgb(80,120,255)] transition-colors font-mono">关注我们</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* 友情链接 */}
    <div class="mb-8 flex flex-wrap gap-x-6 gap-y-2 text-gray-500 border-t border-gray-200 dark:border-gray-800 pt-8 transition-colors duration-300 type-small">
      <span class="text-gray-500 dark:text-gray-400 select-none">友情链接:</span>
      {friendLinks.map((link) => (
        <a href={link.href} target="_blank" class="hover:text-[rgb(80,120,255)] transition-colors">
          {link.text}
        </a>
      ))}
    </div>

    {/* 底部版权 */}
    <div class="border-t border-gray-200 dark:border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 transition-colors duration-300 type-small">
      <div class="flex flex-col md:flex-row items-center gap-2 md:gap-6">
        <p class="text-gray-500 dark:text-gray-400 transition-colors duration-300">
          © {currentYear} 艺创AI. All rights reserved.
        </p>

      </div>

      <div class="hidden md:flex space-x-6 text-gray-500 dark:text-gray-400 transition-colors duration-300">
        <a href="#" class="hover:text-[rgb(80,120,255)] transition-colors">服务条款</a>
        <a href="#" class="hover:text-[rgb(80,120,255)] transition-colors">隐私政策</a>
        <a href="#" class="hover:text-[rgb(80,120,255)] transition-colors">Cookie 设置</a>
      </div>
    </div>
  </div>
</footer>
