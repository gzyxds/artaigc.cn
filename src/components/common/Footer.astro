const footerLinks = [
  solutionLinks,
  {
    title: "产品中心",
    links: [
      { text: "功能特性", url: "#" },
      { text: "解决方案", url: "#" },
      { text: "价格方案", url: "#" },
      { text: "更新日志", url: "#" }
    ]
  },
  {
    title: "应用市场",
    links: [
      { text: "独立应用", url: "#" },
      { text: "扩展应用", url: "#" },
      { text: "图像视频", url: "#" },
      { text: "智能写作", url: "#" }
    ]
  },
  {
    title: "资源中心",
    links: [
      { text: "文档中心", url: "https://doc.artaigc.cn/" },
      { text: "API 参考", url: "#" },
      { text: "APP下载", url: "/download" },
      { text: "博客文章", url: "/blog" }
    ]
  },
  {
    title: "公司介绍",
    links: [
