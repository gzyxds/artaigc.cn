];

const solutionLinks = {
  title: "应用方案",
  links: [
    { text: "香蕉绘画", url: "/solution/banana" },
    { text: "即梦视频", url: "/solution/jimeng" },
    { text: "即梦绘画", url: "/solution/jmdraw" },
    { text: "Sora 视频", url: "/solution/sora" },
  ]
