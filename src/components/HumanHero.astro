---
/**
 * HumanHero组件 - AI数字人产品页面英雄区域
 * 采用简洁的模拟面设计风格，以蓝色调为主，统一视觉效果
 * 特点：视觉统一性、层次清晰、交互友好、响应式设计、暗黑模式兼容、多端适配
 *
 * 功能包括：
 * 1. 展示AI数字人产品的主要标题和简介
 * 2. 提供产品特性标签展示
 * 3. 提供行动按钮（联系客服、查看演示）
 * 4. 展示产品功能卡片
 * 5. 响应式设计，适配不同屏幕尺寸
 * 6. 支持暗黑模式
 * 7. 集成二维码弹窗功能
 * 8. 风格：Bento Grid / Linear (直角、边框优先、极简)
 */
import QRModal from './QRModal.astro';

interface Feature {
  name: string;
}

interface Card {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  { name: '形象克隆' },
  { name: '声音克隆' },
  { name: '数字人合成' },
  { name: 'AI热点创作' }
];

const topTags: Feature[] = [
  { name: 'AI数字人' },
  { name: '企业知识库' },
  { name: '智能绘画' },
  { name: '论文助手' }
];

const cards: Card[] = [
  {
    icon: 'code',
    title: '双语言版本',
    description: 'PHP/Java双版本支持'
  },
  {
    title: '私有部署',
    description: '安全可控的私有化部署',
    icon: 'cloud_download'
  },
  {
    title: '专业团队',
    description: '一对一技术支持',
    icon: 'groups'
  },
  {
    title: '开源方案',
    description: '灵活定制，售后无忧',
    icon: 'star'
  }
];
---

<section class="relative py-20 md:py-32 bg-white dark:bg-gray-950 overflow-hidden">
  <!-- 背景网格 -->
  <div class="absolute inset-0 bg-grid-pattern opacity-[0.03] pointer-events-none"></div>

  <!-- 装饰元素 -->
  <div class="absolute top-0 right-0 w-1/3 h-full border-l border-gray-100 dark:border-gray-800 pointer-events-none hidden lg:block"></div>
  <div class="absolute bottom-0 left-0 w-full h-1/3 border-t border-gray-100 dark:border-gray-800 pointer-events-none hidden lg:block"></div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-24 items-center">

      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-10">
        <!-- 标签 -->
        <div class="inline-flex items-center space-x-2 border border-blue-100 dark:border-blue-900 bg-blue-50 dark:bg-blue-900/20 px-3 py-1">
          <span class="w-1.5 h-1.5 bg-blue-600 rounded-none"></span>
          <span class="text-xs font-mono font-medium tracking-wider text-blue-600 dark:text-blue-400 uppercase">AI Digital Human</span>
        </div>

        <!-- 主标题 -->
        <div class="space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold font-display tracking-tight text-gray-900 dark:text-white">
            AI数字人<br />
            <span class="text-blue-600 dark:text-blue-500">形象声音克隆</span>
          </h1>

          <!-- 描述文本 -->
          <p class="text-base text-gray-600 dark:text-gray-400 leading-relaxed max-w-xl mx-auto lg:mx-0 font-mono border-l-2 border-gray-200 dark:border-gray-800 pl-6">
            专业的AI数字人解决方案，支持形象克隆、声音克隆、数字人合成等功能，为您打造专属的数字化身
          </p>
        </div>

        <!-- 特性标签 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3">
          {features.map((feature) => (
            <div class="flex items-center text-sm font-mono text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-800 px-3 py-1.5">
              <span class="w-1 h-1 bg-blue-500 rounded-none mr-2"></span>
              {feature.name}
            </div>
          ))}
        </div>

        <!-- 按钮组 -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="javascript:void(0)"
            onclick="document.getElementById('qr-modal').classList.add('active')"
            class="group relative inline-flex items-center justify-center px-8 py-3.5 text-base font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-all duration-300 rounded-none overflow-hidden"
            aria-label="联系客服"
          >
            <span class="relative z-10 flex items-center">
              联系客服
              <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </span>
          </a>

          <a
            href="/demo"
            class="group inline-flex items-center justify-center px-8 py-3.5 text-base font-semibold text-gray-900 dark:text-white bg-transparent border border-gray-300 dark:border-gray-700 hover:border-blue-600 dark:hover:border-blue-500 hover:text-blue-600 dark:hover:text-blue-500 transition-all duration-300 rounded-none"
            aria-label="查看演示"
          >
            查看演示
          </a>
        </div>
      </div>

      <!-- 右侧展示区 - Bento Grid 风格 -->
      <div class="relative mt-8 lg:mt-0">
        <!-- 主卡片容器 -->
        <div class="relative bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-1">
          <!-- 装饰角标 -->
          <div class="absolute -top-1 -left-1 w-3 h-3 border-t border-l border-blue-500"></div>
          <div class="absolute -top-1 -right-1 w-3 h-3 border-t border-r border-blue-500"></div>
          <div class="absolute -bottom-1 -left-1 w-3 h-3 border-b border-l border-blue-500"></div>
          <div class="absolute -bottom-1 -right-1 w-3 h-3 border-b border-r border-blue-500"></div>

          <div class="p-6 sm:p-8 space-y-8">
            <!-- 顶部标签区 -->
            <div class="flex flex-wrap gap-2">
              {topTags.map((tag) => (
                <span class="px-3 py-1 text-xs font-mono text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border border-blue-100 dark:border-blue-800">
                  #{tag.name}
                </span>
              ))}
            </div>

            <!-- 功能卡片网格 -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {cards.map((card) => (
                <div class="group relative bg-gray-50 dark:bg-gray-800/50 border border-gray-100 dark:border-gray-800 p-5 hover:border-blue-500 dark:hover:border-blue-500 transition-colors duration-300">
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 flex items-center justify-center bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-blue-600 dark:text-blue-400 group-hover:text-blue-500 transition-colors">
                        <i class="material-icons text-xl">{card.icon}</i>
                      </div>
                    </div>
                    <div>
                      <h4 class="text-sm font-bold text-gray-900 dark:text-white mb-1">{card.title}</h4>
                      <p class="text-xs text-gray-500 dark:text-gray-400 font-mono leading-relaxed">{card.description}</p>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- 底部装饰条 -->
          <div class="h-1 w-full bg-grid-pattern opacity-10"></div>
        </div>

        <!-- 背景装饰块 -->
        <div class="absolute -z-10 top-8 -right-8 w-full h-full border border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900/50 hidden lg:block"></div>
      </div>
    </div>
  </div>

  <!-- QR Modal组件 -->
  <QRModal
    qrCodeUrl="/assets/qrcode.png"
    title="联系客服"
    description="扫描二维码添加客服微信"
  />
</section>
