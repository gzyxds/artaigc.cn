---
// 导入类型定义
interface Model {
  name: string;
  tag: string;
  tagColor: string;
  icon: string;
  description: string;
}

// 模型数据
const models: Model[] = [
  {
    name: "DeepSeek-R1",
    tag: "推荐",
    tagColor: "blue",
    icon: "🧠",
    description: "基于大型强化学习训练的第一代模型，在数学，代码，自然语言理解等方面表现优秀"
  },
  {
    name: "DeepSeek-V3",
    tag: "推荐",
    tagColor: "blue",
    icon: "🚀",
    description: "深度思考合专家（MoE）混合模型，在各知识领域，数学推理等多领域表现突出，评测成绩优异"
  },
  {
    name: "OpenAI",
    tag: "推荐",
    tagColor: "blue",
    icon: "🌐",
    description: "基于大规模预训练的通用大模型，在自然语言处理、文本生成等方面表现出色"
  },
  {
    name: "字节豆包", 
    tag: "推荐",
    tagColor: "blue",
    icon: "📦",
    description: "字节跳动自主研发的通用大模型，在自然语言处理、文本生成等方面表现出色"
  },
  {
    name: "智谱清言",
    tag: "性价比",
    tagColor: "orange",
    icon: "💡",
    description: "智谱AI研发的通用大模型，在多模态和多任务场景中表现出色，支持多模态输入和输出"
  },
  {
    name: "通义千问",
    tag: "性价比",
    tagColor: "orange",
    icon: "🔍",
    description: "阿里巴巴研发的通用大模型，在长文本生成和复杂对话场景中表现突出，支持多轮上下文保持"
  },
  {
    name: "腾讯混元",
    tag: "主力版",
    tagColor: "green",
    icon: "⚡",
    description: "腾讯云主力AI模型，在价格性能比上具有明显优势，支持企业定制训练和垂直领域优化"
  },
  {
    name: "Kimi",
    tag: "主力版",
    tagColor: "green",
    icon: "🤖",
    description: "KImi技术研发的通用大模型，在多模态和多任务场景中表现出色，支持多模态输入和输出"
  }
];
---

<!-- 大模型展示区域 -->
<section class="relative py-20 sm:py-24 md:py-28 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 overflow-hidden">
  <div class="container-custom relative z-10">
    <!-- 标题区域 -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 text-sm font-medium rounded-full mb-4">AI 大模型服务</span>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">
        智能<span class="relative inline-block px-2">
          <span class="relative z-10 bg-gradient-to-r from-primary-600 to-blue-500 bg-clip-text text-transparent">大模型</span>赋能
        </span>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
        支持全系列大语言模型与上百个垂直模型，覆盖广泛行业场景，为您的业务提供智能化解决方案
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-primary-300 to-blue-500 mx-auto mt-6 rounded-full"></div>
    </div>

    <!-- 模型卡片网格 -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 sm:gap-8">
      {models.map((model) => (
        <div class="group relative bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 dark:border-gray-700">
          <div class="absolute top-0 right-0 w-16 h-16 bg-gradient-to-bl from-primary-100 to-transparent dark:from-primary-800/20 dark:to-transparent rounded-bl-3xl z-0"></div>
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 to-blue-50/50 dark:from-primary-900/20 dark:to-blue-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="p-6 sm:p-8 flex flex-col h-full relative z-10">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <span class="flex items-center justify-center w-10 h-10 rounded-lg bg-primary-100 dark:bg-primary-800/30 text-2xl mr-3">
                  {model.icon}
                </span>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-primary-500 transition-colors duration-300">
                  {model.name}
                </h3>
              </div>
              <span class={`px-2.5 py-1 text-xs font-medium rounded-full bg-${model.tagColor}-100 dark:bg-${model.tagColor}-900/30 text-${model.tagColor}-600 dark:text-${model.tagColor}-400`}>
                {model.tag}
              </span>
            </div>
            
            <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-6 flex-grow">
              {model.description}
            </p>
            
            <div class="mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
              <a href="#" class="inline-flex items-center text-primary-500 hover:text-primary-600 font-medium text-sm group-hover:translate-x-1 transition-all duration-300">
                了解更多
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- 底部按钮区域 -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-6 mt-16">
      <a href="#" class="group relative inline-flex items-center justify-center px-8 py-3.5 bg-primary-600 text-white font-medium rounded-lg overflow-hidden shadow-lg hover:shadow-primary-500/30 transition-all duration-300">
        <span class="absolute inset-0 w-full h-full bg-gradient-to-br from-primary-500 to-blue-600"></span>
        <span class="absolute bottom-0 left-0 w-full h-full bg-gradient-to-tr from-blue-600 via-primary-500 to-primary-400 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
        <span class="relative flex items-center">
          查看更多模型
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </a>
      
      <a href="#" class="group relative inline-flex items-center justify-center px-8 py-3.5 bg-white dark:bg-gray-800 text-primary-600 dark:text-primary-400 font-medium rounded-lg overflow-hidden border border-primary-200 dark:border-primary-700 shadow-sm hover:shadow-lg transition-all duration-300">
        <span class="absolute inset-0 bg-primary-50 dark:bg-primary-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        <span class="relative flex items-center">
          更多AI能力
          <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </a>
    </div>
  </div>
</section>
  
