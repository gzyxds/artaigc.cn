---
interface Props {
  version?: string;
  updateDate?: string;
}

const { version = "v1.0.0", updateDate = "2024-04-11" } = Astro.props;
---

<div class="relative py-16 sm:py-20 lg:py-24 overflow-hidden">
  <div class="container-custom relative">
    <!-- 标题区域 -->
    <div class="text-center mb-12 sm:mb-16 relative">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[#015bfe] font-display relative z-10">
        下载 艺创AI
      </h2>
      <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 mt-4 max-w-2xl mx-auto font-medium relative z-10">
        随时随地，开启智能办公新体验
      </p>
    </div>

    <!-- 下载平台展示 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      <!-- 微信小程序 -->
      <div class="group relative overflow-hidden rounded-2xl shadow-xl border border-blue-100/50 dark:border-blue-800/50 hover:shadow-2xl transition-all duration-500">
        <div class="p-6 sm:p-8 relative z-10 h-full flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center shadow-md mr-5">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">微信小程序</h3>
              <div class="mt-1 inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                轻量便捷
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
            无需下载安装，扫码即可使用，随时随地开启智能办公
          </p>
          
          <div class="mt-auto">
            <div class="flex flex-col items-center">
              <img 
                src="/assets/wchatpay.png" 
                alt="微信小程序二维码" 
                class="w-32 h-32 mb-4 object-contain"
                loading="lazy"
                width="128"
                height="128"
              />
              <span class="text-sm text-gray-500 dark:text-gray-400">扫码体验</span>
            </div>
          </div>
        </div>
      </div>

      <!-- iOS 应用 -->
      <div class="group relative overflow-hidden rounded-2xl shadow-xl border border-blue-100/50 dark:border-blue-800/50 hover:shadow-2xl transition-all duration-500">
        <div class="p-6 sm:p-8 relative z-10 h-full flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center shadow-md mr-5">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z" />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">iOS 应用</h3>
              <div class="mt-1 inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                App Store
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
            专为 iPhone 和 iPad 优化，提供流畅的移动办公体验
          </p>
          
          <div class="mt-auto">
            <a 
              href="https://apps.apple.com" 
              class="inline-flex items-center justify-center w-full px-5 py-3 bg-[#015bfe] text-white rounded-lg font-medium hover:bg-blue-600 transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span>App Store 下载</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Android 应用 -->
      <div class="group relative overflow-hidden rounded-2xl shadow-xl border border-blue-100/50 dark:border-blue-800/50 hover:shadow-2xl transition-all duration-500">
        <div class="p-6 sm:p-8 relative z-10 h-full flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center shadow-md mr-5">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Android 应用</h3>
              <div class="mt-1 inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                Google Play
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
            支持各类 Android 设备，提供完整的移动办公解决方案
          </p>
          
          <div class="mt-auto">
            <a 
              href="https://play.google.com" 
              class="inline-flex items-center justify-center w-full px-5 py-3 bg-[#015bfe] text-white rounded-lg font-medium hover:bg-blue-600 transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span>Google Play 下载</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Windows 应用 -->
      <div class="group relative overflow-hidden rounded-2xl shadow-xl border border-blue-100/50 dark:border-blue-800/50 hover:shadow-2xl transition-all duration-500">
        <div class="p-6 sm:p-8 relative z-10 h-full flex flex-col">
          <div class="flex items-center mb-6">
            <div class="w-16 h-16 rounded-full bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center shadow-md mr-5">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Windows 应用</h3>
              <div class="mt-1 inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                桌面版
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
            专为 Windows 系统优化，提供强大的桌面办公体验
          </p>
          
          <div class="mt-auto">
            <a 
              href="https://www.cnai.art/download" 
              class="inline-flex items-center justify-center w-full px-5 py-3 bg-[#015bfe] text-white rounded-lg font-medium hover:bg-blue-600 transition-colors duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span>下载 Windows 版</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 版本信息 -->
    <div class="mt-16 text-center">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        当前版本：{version} | 更新日期：{updateDate}
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
        支持系统：iOS 12.0+ | Android 8.0+ | Windows 10+
      </p>
    </div>
  </div>
</div> 