    links: [
      { text: "艺创数字人", url: "https://v.cnai.art/" },
      { text: "全能知识库", url: "https://www.cnai.art/" },
      { text: "论文创作", url: "https://www.cnai.art/" },
      { text: "聊天绘画", url: "https://cnai.art/" },
      { text: "文生视频", url: "https://www.cnai.art/" },
      ]
  },
  {
    title: "服务与支持",
    links: [
      { text: "文档中心", url: "https://doc.artaigc.cn/" },
      { text: "安装部署", url: "https://doc.artaigc.cn/" },
      { text: "技术支持", url: "https://doc.artaigc.cn/" },
      { text: "联系我们", url: "/contact" },
      { text: "举报平台", url: "/contact" }
    ]
  }
];

---

<footer class="bg-gradient-to-b from-slate-50 to-white dark:from-slate-900 dark:to-slate-800 text-slate-600 dark:text-slate-300 py-16 border-t border-slate-200 dark:border-slate-700 font-sans">
  <div class="container-custom mx-auto">
    <!-- 移动端手风琴布局 -->
    <div class="block md:hidden space-y-4" x-data="{ openSections: {} }">
      {footerLinks.map((column, index) => (
        <div class="border-b border-slate-200 dark:border-slate-700 pb-4">
          <button
            class="w-full flex justify-between items-center py-3 text-left"
            x-on:click={`openSections['section${index}'] = !openSections['section${index}']`}
          >
            <h3 class="text-base font-medium text-slate-800 dark:text-slate-100">{column.title}</h3>
            <svg
              class="w-5 h-5 transform transition-transform duration-200"
              x-bind:class={`openSections['section${index}'] ? 'rotate-180' : ''`}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            class="overflow-hidden transition-all duration-300"
            x-show={`openSections['section${index}']`}
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 max-h-0"
            x-transition:enter-end="opacity-100 max-h-96"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 max-h-96"
            x-transition:leave-end="opacity-0 max-h-0"
          >
            <ul class="space-y-3 pt-2">
              {column.links.map(link => (
                <li>
                  <a href={link.url}
                     class="text-slate-500 dark:text-slate-400 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-300 text-sm block py-1">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
      <!-- 移动端联系我们部分 -->
      <div class="border-b border-slate-200 dark:border-slate-700 pb-4">
        <h3 class="text-base font-medium text-slate-800 dark:text-slate-100 py-3">联系我们</h3>
        <div class="mb-4 space-y-2 text-sm text-slate-500 dark:text-slate-400">
          <div class="flex items-center">
            <span class="font-medium text-slate-600 dark:text-slate-300">QQ:</span>
            <span class="ml-2">236749035</span>
          </div>
          <div class="flex items-center">
            <span class="font-medium text-slate-600 dark:text-slate-300">微信:</span>
            <span class="ml-2">userhlc</span>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-2">
              <img src="/assets/wchatpay.png" alt="微信公众号" class="w-full h-full object-cover shadow-md hover:shadow-lg transition-shadow duration-300"/>
            </div>
            <p class="text-xs">微信公众号</p>
          </div>
          <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-2">
              <img src="/assets/qrcode.png" alt="微信客服" class="w-full h-full object-cover shadow-md hover:shadow-lg transition-shadow duration-300"/>
            </div>
            <p class="text-xs">微信客服</p>
          </div>
        </div>
      </div>
    </div>

    <!-- 桌面端网格布局 -->
    <div class="hidden md:grid grid-cols-3 lg:grid-cols-5 gap-6 md:gap-8 lg:gap-10">
      {footerLinks.map(column => (
        <div class="space-y-4 md:space-y-6">
          <h3 class="text-base md:text-lg font-medium text-slate-800 dark:text-slate-100">{column.title}</h3>
          <ul class="space-y-4">
            {column.links.map(link => (
              <li>
                <a href={link.url}
                   class="text-slate-500 dark:text-slate-400 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors duration-300 text-sm">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      <div class="space-y-4 md:space-y-6">
        <h3 class="text-base md:text-lg font-medium text-slate-800 dark:text-slate-100">联系我们</h3>
        <div class="space-y-4">
          <div class="mb-4 md:mb-6 space-y-2 text-sm text-slate-500 dark:text-slate-400">
            <div class="flex items-center">
              <span class="font-medium text-slate-600 dark:text-slate-300">QQ:</span>
              <span class="ml-2">236749035</span>
            </div>
            <div class="flex items-center">
              <span class="font-medium text-slate-600 dark:text-slate-300">微信:</span>
              <span class="ml-2">userhlc</span>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4 md:gap-6">
            <div class="text-center">
              <div class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 mx-auto mb-2">
                <img src="/assets/wchatpay.png" alt="微信公众号" class="w-full h-full object-cover shadow-md hover:shadow-lg transition-shadow duration-300"/>
              </div>
              <p class="text-xs">微信公众号</p>
            </div>
            <div class="text-center">
              <div class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 mx-auto mb-2">
                <img src="/assets/qrcode.png" alt="微信客服" class="w-full h-full object-cover shadow-md hover:shadow-lg transition-shadow duration-300"/>
              </div>
                <p class="text-xs">微信客服</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-slate-200 dark:border-slate-700">
      <div class="text-slate-400 dark:text-slate-500 text-sm">
        <div class="flex flex-wrap gap-x-6 gap-y-2">
          <span>&copy; 艺创AI 2023-{currentYear} 版权所有</span>
          <span>艺创AI</span>
          <a href="#" class="hover:text-indigo-600 dark:hover:text-indigo-400">服务条款</a>
          <a href="#" class="hover:text-indigo-600 dark:hover:text-indigo-400">隐私政策</a>
          <a href="#" class="hover:text-indigo-600 dark:hover:text-indigo-400">更多协议</a>
        </div>
