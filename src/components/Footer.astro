const footerLinks = [
  {
    title: "关于我们",
    links: [
      { text: "项目文档", url: "https://doc.artaigc.cn/" },
      { text: "飞书文档", url: "https://rwm01l8tn3x.feishu.cn/wiki/VqNCwBO0KiqWIWkSfdHcDigGnZg" },
      { text: "联系我们", url: "/contact" },
      { text: "人才招聘", url: "/contact" },
      { text: "产品大全", url: "/auth" }
    ]
  },
  {
    title: "产品中心",
    links: [
      { text: "AI数字人", url: "https://v.cnai.art/" },
      { text: "企业知识库", url: "https://www.cnai.art/" },
      { text: "聊天绘画", url: "https://v.cnai.art/" },
      { text: "论文创作", url: "https://v.cnai.art/" },
      { text: "产品演示", url: "/demonstrate" },
    ]
  },
  {
