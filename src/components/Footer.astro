                 <img src="/assets/qrcode.png" alt="WeChat" class="w-20 h-20 object-contain" />
               </div>
            </div>
          </a>
        </div>
      </div>

      {/* 右侧链接列表区 */}
      <div class="col-span-2 md:col-span-4 lg:col-span-4 xl:col-span-5 grid grid-cols-2 md:grid-cols-5 gap-x-4 gap-y-8 items-start">
        {footerLinks.map((group) => (
          <div class="col-span-1">
            <h4 class="font-bold text-gray-900 dark:text-white mb-4 transition-colors duration-300 font-mono">{group.title}</h4>
            <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-400 font-mono">
              {group.links.map((link) => (
                <li>
                  <a href={link.url} class="hover:text-[rgb(80,120,255)] transition-colors block">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}

        {/* 关注我们 - 单独处理 */}
