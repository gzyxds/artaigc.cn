<footer class="bg-white dark:bg-[#252d37] text-gray-600 dark:text-gray-300 border-t border-gray-200 dark:border-gray-800 transition-colors duration-300" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>

  <div class="container-custom pt-16 pb-8">
    <!-- 顶部下载区域 -->
    <div class="bento-card relative p-8 md:p-12 mb-16 shadow-none transition-colors duration-300 group">
      <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
      <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

      <!-- 动态背景光效 -->
      <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 bg-[rgb(0,51,255)]/10 blur-[80px] opacity-60"></div>
      <div class="absolute bottom-0 left-0 -mb-20 -ml-20 w-80 h-80 bg-purple-500/10 blur-[80px] opacity-60"></div>

      <!-- 网格纹理 -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.03)_1px,transparent_1px)] dark:bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_at_center,black,transparent_80%)]"></div>

      <div class="relative z-10 flex flex-col lg:flex-row items-center justify-between gap-10">
        <!-- 左侧内容 -->
        <div class="flex flex-col md:flex-row items-center lg:items-start text-center md:text-left gap-6 md:gap-8 max-w-3xl">
          <div class="relative group/icon">
            <div class="absolute inset-0 bg-[rgb(0,51,255)] blur-xl opacity-10 group-hover/icon:opacity-20 transition-opacity duration-500"></div>
            <div class="relative bg-white dark:bg-[#252d37] p-4 border border-gray-200 dark:border-gray-700 shadow-sm transition-colors duration-300 rounded-none">
              <div class="w-16 h-16 flex items-center justify-center text-gray-900 dark:text-white font-bold text-3xl transition-colors duration-300 font-mono">
                AI
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <div class="inline-flex items-center px-3 py-1 bg-[rgba(0,51,255,0.05)] border border-[rgba(0,51,255,0.2)] text-[rgb(0,51,255)] dark:text-[rgb(100,140,255)] text-xs font-medium font-mono rounded-none">
              <i class="material-icons text-sm mr-1.5">auto_awesome</i>
              <span class="relative flex h-2 w-2 mr-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[rgb(0,51,255)] opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-[rgb(0,51,255)]"></span>
              </span>
              全新客户端上线
            </div>

            <div class="space-y-2">
              <h3 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white tracking-tight transition-colors duration-300 font-display">
                释放 AI 创作的<span class="text-transparent bg-clip-text bg-gradient-to-r from-[rgb(0,51,255)] to-indigo-500 dark:to-indigo-400">无限潜能</span>
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-base md:text-lg max-w-lg leading-relaxed transition-colors duration-300 font-mono">
                一键安装，畅享原生级 AI 创作体验。更稳定的连接，更流畅的交互，随时随地激发创意灵感。
              </p>
            </div>
          </div>
        </div>

        <!-- 右侧操作区 -->
        <div class="flex flex-col items-center gap-6 w-full lg:w-auto">
          <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
            <a href="https://console.cloudcvm.com/cart/goodsList.htm?fpg_id=61&spg_id=20" target="_blank" class="h-12 px-8 bg-[rgb(0,51,255)] text-white hover:bg-[rgb(0,40,200)] transition-all duration-300 text-base shadow-sm hover:shadow-md flex items-center justify-center rounded-none font-mono group/btn">
              免费使用
              <i class="material-icons text-sm ml-2 transform group-hover/btn:translate-x-1 transition-transform">arrow_forward</i>
            </a>
            <a href="/download" target="_blank" class="h-12 px-8 bg-transparent border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-[#2d3748] hover:border-gray-400 dark:hover:border-gray-500 text-base transition-all duration-300 flex items-center justify-center rounded-none font-mono">
              <i class="material-icons text-sm mr-2">download</i>
              客户端下载
            </a>
          </div>

          <!-- 平台支持 -->
          <div class="flex items-center gap-4 text-gray-500 dark:text-gray-500 text-sm transition-colors duration-300 font-mono">
            <span>支持平台:</span>
            <div class="flex gap-3">
              <div class="w-9 h-9 flex items-center justify-center bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors text-gray-500 dark:text-gray-400 rounded-none" title="Windows">
                <i class="material-icons text-sm">desktop_windows</i>
              </div>
              <div class="w-9 h-9 flex items-center justify-center bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors text-gray-500 dark:text-gray-400 rounded-none" title="macOS">
                <i class="material-icons text-sm">laptop_mac</i>
              </div>
              <div class="w-9 h-9 flex items-center justify-center bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors text-gray-500 dark:text-gray-400 rounded-none" title="Linux">
                <i class="material-icons text-sm">terminal</i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-7 gap-8 mb-12">
      {/* 左侧品牌区 */}
      <div class="col-span-2 lg:col-span-2">
