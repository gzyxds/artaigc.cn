---
/**
 * Hero组件
 * 网站首页顶部的英雄区域组件，是用户访问网站时首先看到的内容
 * 包含以下功能：
 * 1. 展示网站的主要标题和简介
 * 2. 提供产品特性标签
 * 3. 提供行动按钮（联系客服、查看演示）
 * 4. 展示产品功能卡片
 * 5. 响应式设计，适配不同屏幕尺寸
 * 6. 支持暗黑模式
 * 7. 集成二维码弹窗功能
 */
import QRModal from './QRModal.astro';

interface Feature {
  name: string;
  color: string;
  href: string;
}

interface Card {
  title: string;
  description: string;
  icon: string;
  gradient: string;
}

const features: Feature[] = [
  { name: 'AI数字人', color: 'blue', href: '/human' },
  { name: '知识库', color: 'purple', href: '/ai' },
  { name: '智能绘画', color: 'green', href: '/chat' },
  { name: '论文创作', color: 'amber', href: '/paper' },
  { name: 'PHP&Java', color: 'indigo', href: '/' }
];

const cards: Card[] = [
  {
    icon: 'code',
    title: '双语言版本',
    description: 'PHP/Java双版本支持',
    gradient: 'from-blue-50 to-blue-100 dark:from-blue-900/50 dark:to-blue-800/50'
  },
  {
    title: '私有部署',
    description: '安全可控的私有化部署',
    icon: 'cloud_download',
    gradient: 'from-purple-50 to-purple-100 dark:from-purple-900/50 dark:to-purple-800/50'
  },
  {
    title: '专业团队',
    description: '一对一技术支持',
    icon: 'groups',
    gradient: 'from-green-50 to-green-100 dark:from-green-900/50 dark:to-green-800/50'
  },
  {
    title: '开源方案',
    description: '灵活定制，售后无忧',
    icon: 'star',
    gradient: 'from-amber-50 to-amber-100 dark:from-amber-900/50 dark:to-amber-800/50'
  }
];
---

<section class="relative py-16 sm:py-20 md:py-28 lg:py-36 flex items-center bg-gradient-to-br from-slate-50 to-blue-50 dark:from-gray-700 dark:to-slate-900 overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0">
    <div class="absolute top-0 -right-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-blue-400/40 dark:bg-blue-700/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 -left-4 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-purple-400/40 dark:bg-purple-700/30 rounded-full blur-3xl"></div>
  </div>
  <div class="container-custom relative">
    <!-- 装饰元素 -->
    <div class="absolute -top-20 -left-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-purple-200/20 dark:bg-purple-800/15 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-20 -right-20 w-48 sm:w-64 md:w-72 h-48 sm:h-64 md:h-72 bg-blue-200/20 dark:bg-blue-800/15 rounded-full blur-3xl"></div>
    
    <div class="grid lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-20 items-center">
      <!-- 左侧内容区 -->
      <div class="text-center lg:text-left space-y-6 sm:space-y-8 lg:space-y-10">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 mb-2 sm:mb-4 relative">
          <!-- 装饰光效 -->
          <div class="absolute -top-1 -right-1 w-16 sm:w-20 h-16 sm:h-20">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-purple-500 opacity-15 rounded-full animate-pulse"></div>
            <div class="absolute inset-2 bg-white dark:bg-gray-800 rounded-full"></div>
            <div class="absolute inset-4 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full"></div>
          </div>
          <div class="relative">
            <span class="inline-block text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 dark:from-blue-400 dark:via-blue-500 dark:to-blue-600 animate-gradient-x">
              艺创AI
            </span>
            <span class="absolute -top-4 -right-4 w-8 h-8 bg-blue-500/10 rounded-full blur-xl"></span>
            <span class="absolute -bottom-4 -left-4 w-8 h-8 bg-blue-500/10 rounded-full blur-xl"></span>
          </div>
          <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-6 sm:mt-8 text-gray-700 dark:text-gray-300 font-medium leading-tight">
            新一代AI系统
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400">赋能企业</span>
          </span>
        </h1>
        
        <style>
          @keyframes gradient-x {
            0%, 100% {
              background-position: 0% 50%;
            }
            50% {
              background-position: 100% 50%;
            }
          }
          .animate-gradient-x {
            background-size: 200% auto;
            animation: gradient-x 8s ease infinite;
          }
        </style>

        <p class="text-base sm:text-lg leading-relaxed text-gray-600 dark:text-gray-300 mb-6 sm:mb-8 max-w-2xl mx-auto lg:mx-0">
          一站式 ( 渐进式 ) AIGC 系统，提供面向个人用户 (ToC)、开发者 (ToD) 和企业 (ToB) 的全面AI解决方案、一次购买、永久免费更新
        </p>

        <!-- 特性标签 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-2 sm:gap-4 mb-8 sm:mb-14">
          {features.map((feature) => (
            <a 
              href={feature.href} 
              class={`px-3 sm:px-4 py-1.5 sm:py-2 rounded-full bg-${feature.color}-100 dark:bg-${feature.color}-900/50 text-${feature.color}-700 dark:text-${feature.color}-300 text-xs sm:text-sm font-medium`}
              aria-label={feature.name}
            >
              {feature.name}
            </a>
          ))}
        </div>
        
        <!-- CTA按钮 -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 sm:gap-6">
          <a 
            href="javascript:void(0)" 
            onclick="document.getElementById('qr-modal').classList.add('active')" 
            class="group px-6 sm:px-8 py-2.5 sm:py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all text-sm sm:text-base flex items-center justify-center"
            aria-label="联系客服"
          >
            <span>联系客服</span>
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>
          
          <a 
            href="/demo" 
            class="group px-6 sm:px-8 py-2.5 sm:py-3 bg-white dark:bg-gray-800 text-gray-800 dark:text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all text-sm sm:text-base flex items-center justify-center"
            aria-label="查看演示"
          >
            <span>查看演示</span>
            <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- 右侧展示区 -->
      <div class="relative mt-8 lg:mt-0">
        <div class="bg-white/90 dark:bg-gray-800/90 rounded-2xl p-8 sm:p-10 backdrop-blur-sm">
          <!-- 装饰文案 -->
          <div class="flex flex-wrap gap-3 mb-6 sm:mb-8">
            {features.slice(0, 4).map((feature) => (
              <span 
                class={`px-3 sm:px-4 py-1.5 text-sm sm:text-base bg-${feature.color}-50 dark:bg-${feature.color}-900/30 text-${feature.color}-600 dark:text-${feature.color}-300 rounded-lg`}
              >
                {feature.name}
              </span>
            ))}
          </div>

          <!-- 功能卡片 -->
          <div class="grid grid-cols-2 gap-4 sm:gap-6">
            {cards.map((card) => (
              <div class={`bg-gradient-to-br ${card.gradient} p-3 sm:p-4 rounded-xl`}>
                <i class={`material-icons w-16 sm:w-20 h-16 sm:h-20 text-${card.gradient.split('-')[1]}-600 -mb-5 flex items-start justify-start text-4xl sm:text-5xl`}>
                  {card.icon}
                </i>
                <h4 class="font-semibold text-gray-900 dark:text-white text-base sm:text-lg text-left">{card.title}</h4>
                <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 text-left">{card.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <QRModal 
    qrCodeUrl="/assets/wchatpay.png"
    title="联系客服"
    description="扫描二维码添加客服微信"
  />
</section>
