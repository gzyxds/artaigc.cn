---
/**
 * Aisd 组件 - Bento Grid / Linear 风格
 *
 * 设计重构：
 * - 采用 .bento-card 标准容器
 * - 引入 .corner-marker 装饰
 * - 移除圆角 (rounded-none)
 * - 移除有机曲线背景，改为线性/网格背景
 * - 统一字体为 font-mono
 */

const items = [
  {
    title: "企业知识库",
    subtitle: "一站式搭建",
    description: "一站式AI知识库搭建系统，轻松创建企业知识库。支持文档解析、智能问答、多端发布。",
    link: "https://cnai.art",
    image: "/assets/icon1.png",
    colSpan: "lg:col-span-4",
    gradient: "from-blue-500/5 to-purple-500/5",
    // 移除复杂的 SVG 装饰，使用更几何化的装饰或留白
  },
  {
    title: "数字分身",
    subtitle: "形象克隆",
    description: "可以私有化的短视频批量混剪&数字人克隆矩阵平台。打造24小时在线的数字员工。",
    link: "https://v.cnai.art",
    image: "/assets/icon2.png",
    colSpan: "lg:col-span-2",
    gradient: "from-indigo-500/5 to-cyan-500/5",
  },
  {
    title: "聊天绘画",
    subtitle: "创意无限",
    description: "AI智能对话、AI创作模型、AI绘画、分销推广、卡密兑换、模型计费等丰富的营销功能。",
    link: "https://www.cnai.art",
    image: "/assets/icon3.png",
    colSpan: "lg:col-span-2",
    gradient: "from-rose-500/5 to-orange-500/5",
  },
  {
    title: "论文创作",
    subtitle: "学术助手",
    description: "10分钟生成3万字论文的系统，AI即可快速为您生成论文大纲，极大提高写作效率。",
    link: "https://www.cnai.art",
    image: "/assets/icon4.png",
    colSpan: "lg:col-span-4",
    gradient: "from-emerald-500/5 to-teal-500/5",
  },
];
---

<div class="relative pt-12 pb-20 overflow-hidden bg-white dark:bg-gray-900 w-full">
  <!-- 背景装饰：线性网格 -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-white via-transparent to-white dark:from-gray-900 dark:via-transparent dark:to-gray-900"></div>

  <div class="container-custom relative z-10">
    <div class="text-center relative mb-12 sm:mb-16">
      <div class="inline-block mb-4">
        <span class="px-3 py-1 text-xs font-mono font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-none">
          AI SOLUTIONS
        </span>
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
       用AI为企业赋能
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-4xl mx-auto leading-relaxed font-mono" id="typing-text">
        引领企业实现数字化、智能化转型
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-6 lg:grid-rows-2 h-auto">
      {items.map((item, index) => (
        <div class={`relative bento-card group flex flex-col overflow-hidden hover:border-blue-500 dark:hover:border-blue-500 transition-colors duration-300 ${item.colSpan}`}>
          <div class="corner-marker top-0 right-0 border-t border-r rounded-bl-none"></div>
          <div class="corner-marker bottom-0 left-0 border-b border-l rounded-tr-none"></div>

          {/* 背景装饰：几何线条与渐变 */}
          <div class={`absolute inset-0 bg-gradient-to-br ${item.gradient} opacity-20 group-hover:opacity-30 transition-opacity duration-500`}></div>

          {/* 网格纹理 */}
          <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.02)_1px,transparent_1px)] bg-[size:20px_20px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,black,transparent)] pointer-events-none"></div>

          <div class="relative h-full p-6 sm:p-8 flex flex-col justify-between z-10">
            {/* 顶部内容：图标与标题 */}
            <div class="flex items-start justify-between mb-6">
              <div class="flex items-center gap-5">
                <div class="w-14 h-14 shrink-0 bg-white dark:bg-gray-800 rounded-none border border-gray-200 dark:border-gray-700 flex items-center justify-center group-hover:scale-105 transition-transform duration-300 shadow-sm">
                  <img src={item.image} alt={item.title} class="w-7 h-7 object-contain" />
                </div>
                <div>
                  <h3 class="text-2xl font-bold font-mono text-gray-900 dark:text-white mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{item.title}</h3>
                  <p class="text-sm font-medium font-mono text-gray-500 dark:text-gray-400 uppercase tracking-wider">{item.subtitle}</p>
                </div>
              </div>

              {/* 箭头图标 */}
              <div class="w-8 h-8 rounded-none bg-white dark:bg-gray-800 flex items-center justify-center opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 border border-gray-200 dark:border-gray-700">
                <svg class="w-4 h-4 text-gray-900 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </div>
            </div>

            {/* 底部描述 */}
            <div class="mt-auto max-w-[90%]">
              <p class="text-gray-600 dark:text-gray-300 text-base leading-relaxed line-clamp-3 font-mono">
                {item.description}
              </p>
            </div>
          </div>

          {/* 全卡片链接 */}
          <a href={item.link} class="absolute inset-0 z-20" aria-label={`查看${item.title}详情`}></a>
        </div>
      ))}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const text = '引领企业实现数字化、智能化转型';
    const element = document.getElementById('typing-text');
    if (element) {
      let i = 0;
      element.textContent = '';
      const typing = setInterval(() => {
        if (i < text.length) {
          element.textContent += text.charAt(i);
          i++;
        } else {
          clearInterval(typing);
        }
      }, 100);
    }
  });
</script>
