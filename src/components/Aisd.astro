---
/**
 * Aisd 组件 - Two row bento grid 风格
 * 参考 e:\Github\artaigc.cn\设计样式参考\参考.tsx 设计
 */

const items = [
  {
    title: "企业知识库",
    subtitle: "一站式搭建",
    description: "一站式AI知识库搭建系统，轻松创建企业知识库。支持文档解析、智能问答、多端发布。",
    link: "https://cnai.art",
    image: "/assets/icon1.png",
    colSpan: "lg:col-span-4",
    rounded: "rounded-none",
    gradient: "from-blue-500/5 to-purple-500/5",
    decoration: `<svg class="absolute right-0 bottom-0 w-64 h-64 text-blue-500/10 transform translate-x-16 translate-y-16" viewBox="0 0 200 200" fill="currentColor"><path d="M100 0 L200 50 L200 150 L100 200 L0 150 L0 50 Z" /></svg>`
  },
  {
    title: "数字分身",
    subtitle: "形象克隆",
    description: "可以私有化的短视频批量混剪&数字人克隆矩阵平台。打造24小时在线的数字员工。",
    link: "https://v.cnai.art",
    image: "/assets/icon2.png",
    colSpan: "lg:col-span-2",
    rounded: "rounded-none",
    gradient: "from-indigo-500/5 to-cyan-500/5",
    decoration: `<svg class="absolute -right-4 -bottom-4 w-40 h-40 text-indigo-500/10" viewBox="0 0 200 200" fill="currentColor"><circle cx="100" cy="100" r="80"/></svg>`
  },
  {
    title: "聊天绘画",
    subtitle: "创意无限",
    description: "AI智能对话、AI创作模型、AI绘画、分销推广、卡密兑换、模型计费等丰富的营销功能。",
    link: "https://www.cnai.art",
    image: "/assets/icon3.png",
    colSpan: "lg:col-span-2",
    rounded: "rounded-none",
    gradient: "from-rose-500/5 to-orange-500/5",
    decoration: `<svg class="absolute right-0 top-0 w-32 h-32 text-rose-500/10" viewBox="0 0 100 100" fill="currentColor"><rect x="20" y="20" width="60" height="60" rx="10"/></svg>`
  },
  {
    title: "论文创作",
    subtitle: "学术助手",
    description: "10分钟生成3万字论文的系统，AI即可快速为您生成论文大纲，极大提高写作效率。",
    link: "https://www.cnai.art",
    image: "/assets/icon4.png",
    colSpan: "lg:col-span-4",
    rounded: "rounded-none",
    gradient: "from-emerald-500/5 to-teal-500/5",
    decoration: `<svg class="absolute right-8 top-1/2 -translate-y-1/2 w-40 h-40 text-emerald-500/10" viewBox="0 0 200 200" fill="none" stroke="currentColor" stroke-width="2"><path d="M20,100 L180,100 M100,20 L100,180" stroke-linecap="round"/></svg>`
  },
];
---

<div class="relative pt-12 pb-20 overflow-hidden bg-white dark:bg-gray-900 w-full">
  <!-- 背景装饰 -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[130%] h-[300px] bg-gradient-to-b from-primary-50/50 to-transparent dark:from-primary-900/20 dark:to-transparent -z-10 rounded-b-[100%] blur-xl"></div>

  <div class="container-custom">
    <div class="text-center relative mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4 text-blue-600 dark:text-blue-400">
       用AI为企业赋能
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-4xl mx-auto leading-relaxed" id="typing-text">
        引领企业实现数字化、智能化转型
      </p>
    </div>

    <div class="grid grid-cols-1 gap-4 lg:grid-cols-6 lg:grid-rows-2 h-auto lg:h-[600px]">
      {items.map((item) => (
        <div class={`relative card-double-grid-wrapper ${item.colSpan}`}>
          <div class={`relative group overflow-hidden bg-white dark:bg-gray-800 transition-all duration-300 card-double-grid-inner ${item.rounded}`}>

            {/* 背景装饰：几何线条与渐变 */}
            <div class={`absolute inset-0 bg-gradient-to-br ${item.gradient} opacity-50 group-hover:opacity-100 transition-opacity duration-500`}></div>
            <div class="absolute inset-0 bg-[linear-gradient(rgba(0,0,0,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(0,0,0,0.02)_1px,transparent_1px)] bg-[size:20px_20px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,black,transparent)]"></div>

            {/* 右侧装饰图案 - 仅装饰用，不响应鼠标 */}
            <div class="absolute inset-0 pointer-events-none select-none overflow-hidden" set:html={item.decoration}></div>

            <div class="relative h-full p-6 sm:p-8 flex flex-col justify-between z-10">
              {/* 顶部内容：图标与标题 */}
              <div class="flex items-start justify-between">
                <div class="flex items-center gap-5">
                  <div class="w-16 h-16 shrink-0 bg-white dark:bg-gray-700 rounded-none border border-gray-100 dark:border-gray-600 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <img src={item.image} alt={item.title} class="w-8 h-8 object-contain" />
                  </div>
                  <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-1 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{item.title}</h3>
                    <p class="text-base font-medium text-blue-500 dark:text-blue-400">{item.subtitle}</p>
                  </div>
                </div>

                {/* 箭头图标 */}
                <div class="w-8 h-8 rounded-none bg-gray-50 dark:bg-gray-700 flex items-center justify-center opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
                  <svg class="w-4 h-4 text-gray-900 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </div>
              </div>

              {/* 底部描述 */}
              <div class="mt-8 max-w-[90%]">
                <p class="text-gray-600 dark:text-gray-300 text-base leading-relaxed line-clamp-3">
                  {item.description}
                </p>
              </div>
            </div>

            {/* 全卡片链接 */}
            <a href={item.link} class="absolute inset-0 z-20" aria-label={`查看${item.title}详情`}></a>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const text = '引领企业实现数字化、智能化转型';
    const element = document.getElementById('typing-text');
    if (element) {
      let i = 0;
      element.textContent = '';
      const typing = setInterval(() => {
        if (i < text.length) {
          element.textContent += text.charAt(i);
          i++;
        } else {
          clearInterval(typing);
        }
      }, 100);
    }
  });
</script>
